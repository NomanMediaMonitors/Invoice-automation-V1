@model Invoice_automation_V1.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<!-- Page Header -->
<div class="page-header">
    <div class="flex justify-between items-center flex-wrap gap-3">
        <div>
            <div class="page-title">
                <h2 class="font-bold mb-0">Welcome back, @Model.UserFullName</h2>
            </div>
            <p class="page-subtitle mb-0">
                Here's what's happening across your organization today, @DateTime.Now.ToString("MMMM dd, yyyy").
            </p>
        </div>
        @if (Model.HasAnyCompanies)
        {
            <a asp-controller="Company" asp-action="Index" class="inline-flex items-center gap-1 px-3 py-1.5 border border-gray-200 text-gray-700 text-xs font-medium rounded-md hover:bg-blue-50 hover:border-blue-300 hover:text-blue-600 transition-colors cursor-pointer">
                <i class="bi bi-building me-1"></i> Manage Companies
            </a>
        }
    </div>
</div>

<!-- Stat Cards -->
<div class="row g-3 mb-4">
    <div class="col-6 col-lg-3">
        <a asp-controller="Company" asp-action="Index" class="no-underline block">
            <div class="stat-card">
                <div class="stat-card-icon" style="background-color: var(--primary-50); color: var(--primary-color);">
                    <i class="bi bi-building"></i>
                </div>
                <div class="stat-card-value">@Model.Stats.TotalCompanies</div>
                <div class="stat-card-label">Companies</div>
            </div>
        </a>
    </div>
    <div class="col-6 col-lg-3">
        <a asp-controller="Vendor" asp-action="Index" asp-route-companyId="@Model.DefaultCompanyId" class="no-underline block">
            <div class="stat-card">
                <div class="stat-card-icon" style="background-color: var(--success-light); color: var(--success-color);">
                    <i class="bi bi-truck"></i>
                </div>
                <div class="stat-card-value">@Model.Stats.TotalVendors</div>
                <div class="stat-card-label">Vendors</div>
            </div>
        </a>
    </div>
    <div class="col-6 col-lg-3">
        <a asp-controller="Invoice" asp-action="Index" class="no-underline block">
            <div class="stat-card">
                <div class="stat-card-icon" style="background-color: var(--info-light); color: var(--info-color);">
                    <i class="bi bi-receipt"></i>
                </div>
                <div class="stat-card-value">@Model.Stats.TotalInvoices</div>
                <div class="stat-card-label">Total Invoices</div>
            </div>
        </a>
    </div>
    <div class="col-6 col-lg-3">
        <a asp-controller="Invoice" asp-action="Index" asp-route-status="Approved" class="no-underline block">
            <div class="stat-card">
                <div class="stat-card-icon" style="background-color: #ecfdf5; color: #059669;">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="stat-card-value">@Model.Stats.ApprovedInvoices</div>
                <div class="stat-card-label">Approved</div>
            </div>
        </a>
    </div>
</div>

<!-- Main Content: Quick Actions + Recent Activity -->
<div class="row g-3">
    <!-- Quick Actions -->
    <div class="col-lg-4">
        <div class="stat-card" style="padding: 0;">
            <div style="padding: 1rem 1.25rem; border-bottom: 1px solid var(--border-color);">
                <h6 class="font-semibold mb-0" style="color: var(--text-primary); font-size: 0.8125rem; text-transform: uppercase; letter-spacing: 0.04em;">Quick Actions</h6>
            </div>
            <div style="padding: 1rem 1.25rem;">
                <div class="grid gap-2">
                    <a asp-controller="Company" asp-action="Create" class="inline-flex items-center gap-1 px-3 py-1.5 border border-gray-200 text-gray-700 text-xs font-medium rounded-md hover:bg-blue-50 hover:border-blue-300 hover:text-blue-600 transition-colors cursor-pointer text-left w-full">
                        <i class="bi bi-plus-circle"></i>
                        <span>
                            <span class="font-semibold block" style="font-size: 0.8125rem;">Add New Company</span>
                            <span style="font-size: 0.6875rem; color: var(--text-tertiary);">Register a new business entity</span>
                        </span>
                    </a>
                    @if (Model.HasAnyCompanies)
                    {
                        <a asp-controller="Vendor" asp-action="Create" asp-route-companyId="@Model.DefaultCompanyId" class="inline-flex items-center gap-1 px-3 py-1.5 border border-gray-200 text-gray-700 text-xs font-medium rounded-md hover:bg-blue-50 hover:border-blue-300 hover:text-blue-600 transition-colors cursor-pointer text-left w-full">
                            <i class="bi bi-truck"></i>
                            <span>
                                <span class="font-semibold block" style="font-size: 0.8125rem;">Add Vendor</span>
                                <span style="font-size: 0.6875rem; color: var(--text-tertiary);">Register a new supplier</span>
                            </span>
                        </a>
                        <a asp-controller="Employee" asp-action="Invite" asp-route-companyId="@Model.DefaultCompanyId" class="inline-flex items-center gap-1 px-3 py-1.5 border border-gray-200 text-gray-700 text-xs font-medium rounded-md hover:bg-blue-50 hover:border-blue-300 hover:text-blue-600 transition-colors cursor-pointer text-left w-full">
                            <i class="bi bi-person-plus"></i>
                            <span>
                                <span class="font-semibold block" style="font-size: 0.8125rem;">Invite Team Member</span>
                                <span style="font-size: 0.6875rem; color: var(--text-tertiary);">Add users to your company</span>
                            </span>
                        </a>
                    }
                    else
                    {
                        <button class="inline-flex items-center gap-1.5 px-3 py-1.5 border border-gray-200 text-gray-400 text-xs font-medium rounded-md cursor-not-allowed opacity-60 text-left w-full" disabled>
                            <i class="bi bi-upload"></i>
                            <span>
                                <span class="font-semibold block" style="font-size: 0.8125rem;">Upload Invoice</span>
                                <span style="font-size: 0.6875rem; color: var(--text-tertiary);">Create a company first</span>
                            </span>
                        </button>
                        <button class="inline-flex items-center gap-1.5 px-3 py-1.5 border border-gray-200 text-gray-400 text-xs font-medium rounded-md cursor-not-allowed opacity-60 text-left w-full" disabled>
                            <i class="bi bi-truck"></i>
                            <span>
                                <span class="font-semibold block" style="font-size: 0.8125rem;">Add Vendor</span>
                                <span style="font-size: 0.6875rem; color: var(--text-tertiary);">Create a company first</span>
                            </span>
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="col-lg-8">
        <div class="stat-card" style="padding: 0;">
            <div style="padding: 1rem 1.25rem; border-bottom: 1px solid var(--border-color); display: flex; justify-content: space-between; align-items: center;">
                <h6 class="font-semibold mb-0" style="color: var(--text-primary); font-size: 0.8125rem; text-transform: uppercase; letter-spacing: 0.04em;">Recent Activity</h6>
                @if (Model.RecentActivities.Any())
                {
                    <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">@Model.RecentActivities.Count</span>
                }
            </div>
            <div style="padding: 0;">
                @if (Model.RecentActivities.Any())
                {
                    <table class="min-w-full divide-y divide-gray-200 text-sm">
                        <thead>
                            <tr>
                                <th style="width: 40px;"></th>
                                <th>Event</th>
                                <th>Details</th>
                                <th style="text-align: right;">Time</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var activity in Model.RecentActivities)
                            {
                                <tr>
                                    <td>
                                        <span class="inline-flex items-center justify-center" style="width: 28px; height: 28px; border-radius: var(--radius-md); background-color: @(activity.IconColor == "success" ? "var(--success-light)" : "var(--primary-50)"); color: @(activity.IconColor == "success" ? "var(--success-color)" : "var(--primary-color)"); font-size: 0.8125rem;">
                                            <i class="bi bi-@activity.Icon"></i>
                                        </span>
                                    </td>
                                    <td class="font-medium" style="color: var(--text-primary);">@activity.Title</td>
                                    <td style="color: var(--text-secondary);">@activity.Description</td>
                                    <td style="text-align: right; white-space: nowrap; color: var(--text-tertiary); font-size: 0.75rem;">@activity.TimeAgo</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-inbox"></i>
                        <h5>No recent activity</h5>
                        <p>Your recent activities will appear here as you start using the platform.</p>
                        @if (!Model.HasAnyCompanies)
                        {
                            <a asp-controller="Company" asp-action="Create" class="inline-flex items-center gap-1 px-3 py-1.5 bg-blue-600 text-white text-xs font-medium rounded-md hover:bg-blue-700 transition-colors cursor-pointer">
                                <i class="bi bi-plus-circle me-1"></i> Create Your First Company
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
