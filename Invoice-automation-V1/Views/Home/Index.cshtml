@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero-section animate-fadeIn">
    <div class="container py-5">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="hero-content">
                    <h1 class="display-3 fw-bold mb-4">
                        <span class="text-gradient">Invoice Automation</span>
                        <br />Made Simple
                    </h1>
                    <p class="lead text-muted mb-4">
                        Streamline your invoice processing with intelligent OCR, automated workflows,
                        and seamless integration with your accounting system.
                    </p>
                    <div class="d-flex gap-3 flex-wrap">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary btn-lg">
                                <i class="bi bi-speedometer2"></i> Go to Dashboard
                            </a>
                        }
                        else
                        {
                            <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg">
                                <i class="bi bi-rocket-takeoff"></i> Get Started Free
                            </a>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary btn-lg">
                                <i class="bi bi-box-arrow-in-right"></i> Sign In
                            </a>
                        }
                    </div>
                    <div class="mt-4">
                        <small class="text-muted">
                            <i class="bi bi-check-circle-fill text-success"></i> No credit card required
                            <span class="mx-2">â€¢</span>
                            <i class="bi bi-check-circle-fill text-success"></i> First user becomes Super Admin
                        </small>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <div class="position-relative">
                        <div class="hero-card shadow-2xl">
                            <i class="bi bi-receipt-cutoff" style="font-size: 8rem; color: var(--primary-color); opacity: 0.9;"></i>
                        </div>
                        <div class="floating-card floating-card-1 shadow-lg">
                            <i class="bi bi-check-circle-fill text-success me-2"></i> OCR Processing
                        </div>
                        <div class="floating-card floating-card-2 shadow-lg">
                            <i class="bi bi-lightning-charge-fill text-warning me-2"></i> Auto Approval
                        </div>
                        <div class="floating-card floating-card-3 shadow-lg">
                            <i class="bi bi-graph-up-arrow text-info me-2"></i> Real-time Analytics
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="features-section py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-5 fw-bold mb-3">Powerful Features</h2>
            <p class="lead text-muted">Everything you need to automate your invoice workflow</p>
        </div>

        <div class="row g-4">
            <div class="col-md-6 col-lg-3">
                <div class="card feature-card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-eye-fill"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Intelligent OCR</h5>
                        <p class="text-muted small">
                            Advanced Tesseract 5 OCR engine automatically extracts invoice data
                            with high accuracy.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card feature-card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-check2-square"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Approval Workflow</h5>
                        <p class="text-muted small">
                            Multi-level approval system with manager and admin review stages.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card feature-card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-link-45deg"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Indraaj Integration</h5>
                        <p class="text-muted small">
                            Seamless integration with Indraaj accounting system for real-time data sync.
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-lg-3">
                <div class="card feature-card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon mb-3">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <h5 class="fw-bold mb-3">Secure & Compliant</h5>
                        <p class="text-muted small">
                            Bank-level security with encrypted storage and complete audit trail.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Stats Section -->
<div class="stats-section py-5">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-3">
                <div class="stat-item">
                    <h2 class="display-4 fw-bold text-gradient mb-2">95%</h2>
                    <p class="text-muted">OCR Accuracy</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h2 class="display-4 fw-bold text-gradient mb-2">10x</h2>
                    <p class="text-muted">Faster Processing</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h2 class="display-4 fw-bold text-gradient mb-2">24/7</h2>
                    <p class="text-muted">Automated Workflow</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-item">
                    <h2 class="display-4 fw-bold text-gradient mb-2">100%</h2>
                    <p class="text-muted">Audit Trail</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- CTA Section -->
@if (User.Identity?.IsAuthenticated != true)
{
    <div class="cta-section py-5 bg-gradient-primary text-white">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-8 mb-4 mb-lg-0">
                    <h2 class="display-5 fw-bold mb-3">Ready to automate your invoices?</h2>
                    <p class="lead mb-0">Join thousands of businesses streamlining their invoice processing.</p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg px-5">
                        <i class="bi bi-rocket-takeoff"></i> Start Free Trial
                    </a>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .hero-section {
        min-height: 80vh;
        display: flex;
        align-items: center;
    }

    .hero-card {
        background: white;
        border-radius: 2rem;
        padding: 4rem;
        display: inline-block;
        border: 1px solid var(--border-color);
    }

    .floating-card {
        position: absolute;
        background: white;
        padding: 0.75rem 1.5rem;
        border-radius: var(--radius-xl);
        font-weight: 600;
        font-size: 0.875rem;
        white-space: nowrap;
        animation: float 3s ease-in-out infinite;
    }

    .floating-card-1 {
        top: 10%;
        right: 0;
        animation-delay: 0s;
    }

    .floating-card-2 {
        bottom: 30%;
        left: -5%;
        animation-delay: 1s;
    }

    .floating-card-3 {
        bottom: 10%;
        right: 10%;
        animation-delay: 2s;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0px);
        }
        50% {
            transform: translateY(-15px);
        }
    }

    .feature-card {
        transition: all var(--transition-base);
    }

    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-xl) !important;
    }

    .feature-icon {
        width: 4rem;
        height: 4rem;
        border-radius: var(--radius-xl);
        background: var(--primary-gradient);
        color: white;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 1.75rem;
    }

    .stat-item {
        padding: 2rem 1rem;
    }

    .min-vh-75 {
        min-height: 75vh;
    }
</style>
