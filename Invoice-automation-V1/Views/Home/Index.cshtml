@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section style="background-color: #ffffff; padding: 5rem 0 4rem;">
    <div class="container">
        <div class="row justify-center">
            <div class="col-lg-8 text-center">
                <h1 style="font-size: 3rem; font-weight: 800; line-height: 1.15; letter-spacing: -0.03em; color: #0f172a; margin-bottom: 1.25rem;">
                    Automate Your Invoice Processing
                </h1>
                <p style="font-size: 1.2rem; line-height: 1.7; color: #475569; max-width: 600px; margin: 0 auto 2rem;">
                    Extract, route, approve, and sync invoices to your accounting system -- without the manual work. Built for teams that value accuracy and speed.
                </p>
                <div class="flex gap-3 justify-center flex-wrap mb-5">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-primary btn-lg">
                            <i class="bi bi-speedometer2"></i> Go to Dashboard
                        </a>
                    }
                    else
                    {
                        <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg"
                           style="padding: 0.7rem 1.75rem; font-size: 0.9375rem;">
                            Get Started
                        </a>
                        <a href="#features" class="btn btn-outline-secondary btn-lg"
                           style="padding: 0.7rem 1.75rem; font-size: 0.9375rem;">
                            Learn More
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Stats Row -->
        <div class="row justify-center">
            <div class="col-lg-8">
                <div class="row text-center g-4">
                    <div class="col-md-4">
                        <div style="font-size: 1.75rem; font-weight: 800; color: #2563eb;">5x</div>
                        <div style="font-size: 0.8125rem; color: #64748b; font-weight: 500;">Faster Processing</div>
                    </div>
                    <div class="col-md-4" style="border-left: 1px solid #e2e8f0; border-right: 1px solid #e2e8f0;">
                        <div style="font-size: 1.75rem; font-weight: 800; color: #2563eb;">99%</div>
                        <div style="font-size: 0.8125rem; color: #64748b; font-weight: 500;">Extraction Accuracy</div>
                    </div>
                    <div class="col-md-4">
                        <div style="font-size: 1.75rem; font-weight: 800; color: #2563eb;">Seamless</div>
                        <div style="font-size: 0.8125rem; color: #64748b; font-weight: 500;">Accounting Integration</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" style="background-color: #f8fafc; padding: 4.5rem 0;">
    <div class="container">
        <div class="text-center mb-5">
            <h2 style="font-size: 2rem; font-weight: 800; color: #0f172a; margin-bottom: 0.75rem;">
                Everything you need to manage invoices
            </h2>
            <p style="font-size: 1.05rem; color: #475569; max-width: 520px; margin: 0 auto;">
                A complete system from document capture to accounting reconciliation.
            </p>
        </div>

        <div class="row g-4 justify-center">
            <!-- Feature 1: OCR Processing -->
            <div class="col-md-4">
                <div class="card h-full" style="border-radius: 0.75rem; border: 1px solid #e2e8f0;">
                    <div class="card-body" style="padding: 2rem;">
                        <div style="width: 48px; height: 48px; border-radius: 0.5rem; background-color: #eff6ff; display: flex; align-items: center; justify-content: center; margin-bottom: 1.25rem;">
                            <i class="bi bi-cpu" style="font-size: 1.375rem; color: #2563eb;"></i>
                        </div>
                        <h4 style="font-size: 1.125rem; font-weight: 700; color: #0f172a; margin-bottom: 0.5rem;">
                            OCR Processing
                        </h4>
                        <p style="font-size: 0.9rem; color: #475569; margin-bottom: 0; line-height: 1.6;">
                            Upload PDFs or scanned images and let Tesseract 5 OCR extract vendor names, amounts, dates, and line items automatically.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Feature 2: Multi-Company Management -->
            <div class="col-md-4">
                <div class="card h-full" style="border-radius: 0.75rem; border: 1px solid #e2e8f0;">
                    <div class="card-body" style="padding: 2rem;">
                        <div style="width: 48px; height: 48px; border-radius: 0.5rem; background-color: #eff6ff; display: flex; align-items: center; justify-content: center; margin-bottom: 1.25rem;">
                            <i class="bi bi-building" style="font-size: 1.375rem; color: #2563eb;"></i>
                        </div>
                        <h4 style="font-size: 1.125rem; font-weight: 700; color: #0f172a; margin-bottom: 0.5rem;">
                            Multi-Company Management
                        </h4>
                        <p style="font-size: 0.9rem; color: #475569; margin-bottom: 0; line-height: 1.6;">
                            Manage invoices across multiple companies from a single dashboard. Role-based access keeps each team focused on what matters.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Feature 3: Accounting Integration -->
            <div class="col-md-4">
                <div class="card h-full" style="border-radius: 0.75rem; border: 1px solid #e2e8f0;">
                    <div class="card-body" style="padding: 2rem;">
                        <div style="width: 48px; height: 48px; border-radius: 0.5rem; background-color: #eff6ff; display: flex; align-items: center; justify-content: center; margin-bottom: 1.25rem;">
                            <i class="bi bi-arrow-left-right" style="font-size: 1.375rem; color: #2563eb;"></i>
                        </div>
                        <h4 style="font-size: 1.125rem; font-weight: 700; color: #0f172a; margin-bottom: 0.5rem;">
                            Accounting Integration
                        </h4>
                        <p style="font-size: 0.9rem; color: #475569; margin-bottom: 0; line-height: 1.6;">
                            Approved invoices sync directly with Indraaj. Journal entries, payments, and reconciliation happen in real time.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section style="background-color: #ffffff; padding: 4.5rem 0;">
    <div class="container">
        <div class="text-center mb-5">
            <h2 style="font-size: 2rem; font-weight: 800; color: #0f172a; margin-bottom: 0.75rem;">
                How it works
            </h2>
            <p style="font-size: 1.05rem; color: #475569; max-width: 480px; margin: 0 auto;">
                Three steps from paper invoice to accounting entry.
            </p>
        </div>

        <div class="row g-4 justify-center items-stretch">
            <!-- Step 1 -->
            <div class="col-md-4">
                <div class="text-center h-full flex flex-col items-center" style="padding: 2rem 1.5rem;">
                    <div style="width: 56px; height: 56px; border-radius: 50%; background-color: #2563eb; color: #ffffff; display: flex; align-items: center; justify-content: center; font-size: 1.375rem; font-weight: 700; margin-bottom: 1.25rem;">
                        1
                    </div>
                    <div style="width: 44px; height: 44px; display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
                        <i class="bi bi-cloud-arrow-up" style="font-size: 2rem; color: #2563eb;"></i>
                    </div>
                    <h4 style="font-size: 1.125rem; font-weight: 700; color: #0f172a; margin-bottom: 0.5rem;">
                        Upload Invoice
                    </h4>
                    <p style="font-size: 0.9rem; color: #475569; margin-bottom: 0; line-height: 1.6;">
                        Drag and drop PDFs, images, or scanned documents. Batch uploads supported.
                    </p>
                </div>
            </div>

            <!-- Step 2 -->
            <div class="col-md-4">
                <div class="text-center h-full flex flex-col items-center" style="padding: 2rem 1.5rem;">
                    <div style="width: 56px; height: 56px; border-radius: 50%; background-color: #2563eb; color: #ffffff; display: flex; align-items: center; justify-content: center; font-size: 1.375rem; font-weight: 700; margin-bottom: 1.25rem;">
                        2
                    </div>
                    <div style="width: 44px; height: 44px; display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
                        <i class="bi bi-gear-wide-connected" style="font-size: 2rem; color: #2563eb;"></i>
                    </div>
                    <h4 style="font-size: 1.125rem; font-weight: 700; color: #0f172a; margin-bottom: 0.5rem;">
                        OCR Extract
                    </h4>
                    <p style="font-size: 0.9rem; color: #475569; margin-bottom: 0; line-height: 1.6;">
                        Data is extracted automatically -- vendor, amounts, dates, and line items. Review and edit as needed.
                    </p>
                </div>
            </div>

            <!-- Step 3 -->
            <div class="col-md-4">
                <div class="text-center h-full flex flex-col items-center" style="padding: 2rem 1.5rem;">
                    <div style="width: 56px; height: 56px; border-radius: 50%; background-color: #2563eb; color: #ffffff; display: flex; align-items: center; justify-content: center; font-size: 1.375rem; font-weight: 700; margin-bottom: 1.25rem;">
                        3
                    </div>
                    <div style="width: 44px; height: 44px; display: flex; align-items: center; justify-content: center; margin-bottom: 1rem;">
                        <i class="bi bi-check2-all" style="font-size: 2rem; color: #2563eb;"></i>
                    </div>
                    <h4 style="font-size: 1.125rem; font-weight: 700; color: #0f172a; margin-bottom: 0.5rem;">
                        Approve & Sync
                    </h4>
                    <p style="font-size: 0.9rem; color: #475569; margin-bottom: 0; line-height: 1.6;">
                        Route for approval, then sync payments and journal entries directly to Indraaj.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
@if (User.Identity?.IsAuthenticated != true)
{
    <section style="background-color: #f8fafc; padding: 4.5rem 0;">
        <div class="container">
            <div class="row justify-center">
                <div class="col-lg-7 text-center">
                    <h2 style="font-size: 2rem; font-weight: 800; color: #0f172a; margin-bottom: 1rem;">
                        Ready to streamline your invoices?
                    </h2>
                    <p style="font-size: 1.05rem; color: #475569; max-width: 480px; margin: 0 auto 2rem;">
                        Create an account and start automating your invoice workflow today. No credit card required.
                    </p>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-lg"
                       style="padding: 0.75rem 2rem; font-size: 0.9375rem;">
                        Create Your Account
                    </a>
                    <div style="margin-top: 1rem;">
                        <span style="font-size: 0.8125rem; color: #64748b;">Already have an account?</span>
                        <a asp-controller="Account" asp-action="Login" style="font-size: 0.8125rem; font-weight: 600;">
                            Sign in
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
