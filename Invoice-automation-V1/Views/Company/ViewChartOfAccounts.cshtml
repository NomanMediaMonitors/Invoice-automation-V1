@model List<InvoiceAutomation.Core.DTOs.Indraaj.IndraajCoaItem>
@{
    ViewData["Title"] = "Chart of Accounts";
    var companyName = ViewBag.CompanyName as string;
    var companyId = (Guid)ViewBag.CompanyId;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-action="Index">Companies</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-action="Details" asp-route-id="@companyId">@companyName</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Chart of Accounts</li>
    </ol>
</nav>

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h2 class="page-title">Chart of Accounts</h2>
            <p class="page-subtitle mb-0">@companyName</p>
        </div>
        <a asp-action="Details" asp-route-id="@companyId" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Company
        </a>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="card">
        <div class="card-body empty-state">
            <i class="bi bi-inbox"></i>
            <h5>No Chart of Accounts</h5>
            <p>Sync from Indraaj to view your chart of accounts.</p>
            <a asp-action="Details" asp-route-id="@companyId" class="btn btn-primary">
                <i class="bi bi-arrow-repeat"></i> Go to Sync
            </a>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                    <input type="text" id="searchInput" class="form-control" placeholder="Search by code, name, or account type..." style="min-width: 300px;">
                </div>
                <p class="text-muted mb-0" style="font-size: 0.8125rem;">
                    <i class="bi bi-info-circle"></i>
                    Showing <strong>@Model.Count</strong> accounts
                </p>
            </div>

            <div class="table-responsive">
                <table class="table table-hover" id="coaTable">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Name</th>
                            <th>Account Type</th>
                            <th>Description</th>
                            <th>Parent Code</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var account in Model)
                        {
                            <tr>
                                <td><strong>@account.Code</strong></td>
                                <td>@account.Name</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(account.AccountType))
                                    {
                                        <span class="badge bg-info">@account.AccountType</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>@(account.Description ?? "N/A")</td>
                                <td>@(account.ParentCode ?? "N/A")</td>
                                <td>
                                    @if (account.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const table = document.getElementById('coaTable');

            if (searchInput && table) {
                searchInput.addEventListener('keyup', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = table.querySelectorAll('tbody tr');

                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                });
            }
        });
    </script>
}
