@model List<InvoiceAutomation.Core.DTOs.Indraaj.IndraajCoaItem>
@{
    ViewData["Title"] = "Chart of Accounts";
    var companyName = ViewBag.CompanyName as string;
    var companyId = (Guid)ViewBag.CompanyId;
}

<div class="container-fluid animate-fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-gradient mb-1">
                <i class="bi bi-list-ul"></i> Chart of Accounts
            </h2>
            <p class="text-muted mb-0">@companyName</p>
        </div>
        <a asp-action="Details" asp-route-id="@companyId" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Company
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox" style="font-size: 4rem; color: var(--secondary-color);"></i>
                <h4 class="mt-3 mb-2">No Chart of Accounts</h4>
                <p class="text-muted mb-4">Sync from Indraaj to view your chart of accounts.</p>
                <a asp-action="Details" asp-route-id="@companyId" class="btn btn-primary btn-lg">
                    <i class="bi bi-arrow-repeat"></i> Go to Sync
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-lg">
            <div class="card-body">
                <div class="mb-3">
                    <input type="text" id="searchInput" class="form-control" placeholder="Search by code, name, or account type...">
                </div>

                <div class="table-responsive">
                    <table class="table table-hover" id="coaTable">
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                                <th>Account Type</th>
                                <th>Description</th>
                                <th>Parent Code</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var account in Model)
                            {
                                <tr>
                                    <td><strong>@account.Code</strong></td>
                                    <td>@account.Name</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(account.AccountType))
                                        {
                                            <span class="badge bg-info">@account.AccountType</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>@(account.Description ?? "N/A")</td>
                                    <td>@(account.ParentCode ?? "N/A")</td>
                                    <td>
                                        @if (account.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted mb-0">
                        <i class="bi bi-info-circle"></i>
                        Showing <strong>@Model.Count</strong> accounts
                    </p>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const table = document.getElementById('coaTable');

            if (searchInput && table) {
                searchInput.addEventListener('keyup', function() {
                    const searchTerm = this.value.toLowerCase();
                    const rows = table.querySelectorAll('tbody tr');

                    rows.forEach(row => {
                        const text = row.textContent.toLowerCase();
                        row.style.display = text.includes(searchTerm) ? '' : 'none';
                    });
                });
            }
        });
    </script>
}
