@model InvoiceAutomation.Core.Entities.Company
@{
    ViewData["Title"] = "Company Details";
    var userRole = (InvoiceAutomation.Core.Entities.UserRole)ViewBag.UserRole;
    var canSync = (bool)ViewBag.CanSync;
    var daysSinceSync = (int?)ViewBag.DaysSinceSync;
    var isAdminOrAbove = userRole == InvoiceAutomation.Core.Entities.UserRole.Admin || userRole == InvoiceAutomation.Core.Entities.UserRole.SuperAdmin;
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-action="Index">Companies</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>

<div class="page-header">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div class="d-flex align-items-center gap-3">
            <div class="stat-card-icon bg-primary">
                <i class="bi bi-building"></i>
            </div>
            <div>
                <h2 class="page-title mb-1">@Model.Name</h2>
                <div class="d-flex gap-2 align-items-center flex-wrap">
                    <span class="badge bg-primary">
                        <i class="bi bi-person-badge"></i> @userRole
                    </span>
                    @if (!string.IsNullOrEmpty(Model.IndraajAccessToken))
                    {
                        <span class="badge bg-success">
                            <i class="bi bi-link-45deg"></i> Indraaj Connected
                        </span>
                    }
                </div>
            </div>
        </div>
        <div class="d-flex gap-2">
            @if (isAdminOrAbove)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
            }
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-4">
    <!-- Left Column - Company Information -->
    <div class="col-lg-8">
        <!-- Company Details -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="info-section-title mb-3">
                    <i class="bi bi-info-circle"></i>
                    <span>Company Information</span>
                </div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">NTN</span>
                            <span class="info-value fw-bold">@Model.Ntn</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">STRN</span>
                            <span class="info-value">@(Model.Strn ?? "Not provided")</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Email</span>
                            <span class="info-value">
                                @if (!string.IsNullOrEmpty(Model.Email))
                                {
                                    <a href="mailto:@Model.Email">@Model.Email</a>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Phone</span>
                            <span class="info-value">
                                @if (!string.IsNullOrEmpty(Model.Phone))
                                {
                                    <a href="tel:@Model.Phone">@Model.Phone</a>
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="info-row">
                            <span class="info-label">Address</span>
                            <span class="info-value">@(Model.Address ?? "Not provided")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Indraaj Integration Details -->
        @if (!string.IsNullOrEmpty(Model.IndraajAccessToken))
        {
            <div class="card mb-4">
                <div class="card-body">
                    <div class="info-section-title mb-3">
                        <i class="bi bi-link-45deg"></i>
                        <span>Indraaj Integration</span>
                    </div>
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="info-row">
                                <span class="info-label">Status</span>
                                <span class="info-value">
                                    <span class="badge bg-success">
                                        <i class="bi bi-check-circle"></i> Connected
                                    </span>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-row">
                                <span class="info-label">Last Sync</span>
                                <span class="info-value">
                                    @if (Model.LastCoaSyncAt.HasValue)
                                    {
                                        <span>@Model.LastCoaSyncAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
                                        @if (daysSinceSync.HasValue)
                                        {
                                            <small class="text-muted ms-1">(@daysSinceSync days ago)</small>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never synced</span>
                                    }
                                </span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="info-row">
                                <span class="info-label">Next Sync Available</span>
                                <span class="info-value">
                                    @if (canSync)
                                    {
                                        <span class="text-success">
                                            <i class="bi bi-check-circle"></i> Available Now
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">
                                            In @(7 - daysSinceSync.GetValueOrDefault()) days
                                        </span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Quick Links -->
        <div class="card">
            <div class="card-body">
                <div class="info-section-title mb-3">
                    <i class="bi bi-lightning-charge-fill"></i>
                    <span>Quick Links</span>
                </div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <a asp-controller="Employee" asp-action="Index" asp-route-companyId="@Model.Id" class="quick-link-card">
                            <div class="d-flex align-items-center">
                                <div class="quick-link-icon bg-primary">
                                    <i class="bi bi-people"></i>
                                </div>
                                <div class="ms-3">
                                    <div class="fw-bold">Employees</div>
                                    <small class="text-muted">Manage team members</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-6">
                        <a asp-controller="Vendor" asp-action="Index" asp-route-companyId="@Model.Id" class="quick-link-card">
                            <div class="d-flex align-items-center">
                                <div class="quick-link-icon bg-info">
                                    <i class="bi bi-truck"></i>
                                </div>
                                <div class="ms-3">
                                    <div class="fw-bold">Vendors</div>
                                    <small class="text-muted">Manage suppliers</small>
                                </div>
                            </div>
                        </a>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.IndraajAccessToken))
                    {
                        <div class="col-md-6">
                            <a asp-action="ViewChartOfAccounts" asp-route-id="@Model.Id" class="quick-link-card">
                                <div class="d-flex align-items-center">
                                    <div class="quick-link-icon bg-success">
                                        <i class="bi bi-list-ul"></i>
                                    </div>
                                    <div class="ms-3">
                                        <div class="fw-bold">Chart of Accounts</div>
                                        <small class="text-muted">View synced accounts</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                    <div class="col-md-6">
                        <a asp-controller="Invoice" asp-action="Index" class="quick-link-card">
                            <div class="d-flex align-items-center">
                                <div class="quick-link-icon bg-warning">
                                    <i class="bi bi-receipt"></i>
                                </div>
                                <div class="ms-3">
                                    <div class="fw-bold">Invoices</div>
                                    <small class="text-muted">Manage invoices</small>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column - Actions -->
    <div class="col-lg-4">
        <!-- Indraaj Integration Actions -->
        <div class="action-card mb-4">
            <h5>
                <i class="bi bi-link-45deg"></i>
                Indraaj Integration
            </h5>

            @if (string.IsNullOrEmpty(Model.IndraajAccessToken))
            {
                <div class="alert alert-warning mb-3">
                    <i class="bi bi-exclamation-triangle"></i>
                    <div class="mt-1 small">
                        <strong>Not Connected</strong>
                        <p class="mb-0">Connect your Indraaj account to sync Chart of Accounts.</p>
                    </div>
                </div>

                @if (isAdminOrAbove)
                {
                    <a asp-action="ConnectIndraaj" asp-route-id="@Model.Id" class="btn btn-primary w-100">
                        <i class="bi bi-link-45deg"></i> Connect Indraaj
                    </a>
                }
            }
            else
            {
                <form asp-action="SyncCoa" asp-route-id="@Model.Id" method="post" class="mb-2">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-success w-100" disabled="@(!canSync)">
                        <i class="bi bi-arrow-repeat"></i>
                        @if (canSync)
                        {
                            <text>Sync Chart of Accounts</text>
                        }
                        else
                        {
                            <text>Sync Available in @(7 - daysSinceSync.GetValueOrDefault()) Days</text>
                        }
                    </button>
                </form>

                @if (!canSync)
                {
                    <small class="text-muted d-block mb-3">
                        <i class="bi bi-info-circle"></i> Sync is available once every 7 days
                    </small>
                }

                <a asp-action="ViewChartOfAccounts" asp-route-id="@Model.Id" class="btn btn-outline-primary w-100 mb-2">
                    <i class="bi bi-list-ul"></i> View Chart of Accounts
                </a>

                @if (isAdminOrAbove)
                {
                    <hr />
                    <a asp-action="ConnectIndraaj" asp-route-id="@Model.Id" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-repeat"></i> Update Access Token
                    </a>
                }
            }
        </div>

        <!-- Team Management -->
        <div class="action-card mb-4">
            <h5>
                <i class="bi bi-people"></i>
                Team Management
            </h5>
            <div class="d-grid gap-2">
                <a asp-controller="Employee" asp-action="Index" asp-route-companyId="@Model.Id" class="btn btn-outline-primary">
                    <i class="bi bi-people"></i> Manage Employees
                </a>

                @if (isAdminOrAbove)
                {
                    <a asp-controller="Employee" asp-action="Invite" asp-route-companyId="@Model.Id" class="btn btn-outline-success">
                        <i class="bi bi-person-plus"></i> Invite Employee
                    </a>
                }
            </div>
        </div>

        <!-- Vendor Management -->
        <div class="action-card mb-4">
            <h5>
                <i class="bi bi-truck"></i>
                Vendor Management
            </h5>
            <div class="d-grid gap-2">
                <a asp-controller="Vendor" asp-action="Index" asp-route-companyId="@Model.Id" class="btn btn-outline-primary">
                    <i class="bi bi-truck"></i> Manage Vendors
                </a>

                <a asp-controller="Vendor" asp-action="Create" asp-route-companyId="@Model.Id" class="btn btn-outline-success">
                    <i class="bi bi-plus-circle"></i> Add Vendor
                </a>
            </div>
        </div>

        <!-- Metadata -->
        <div class="card">
            <div class="card-body">
                <h6 class="fw-bold mb-3">
                    <i class="bi bi-info-circle me-2"></i>Metadata
                </h6>
                <div class="info-row">
                    <span class="info-label">Created</span>
                    <span class="info-value">@Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Last Updated</span>
                    <span class="info-value">@Model.UpdatedAt.ToString("MMM dd, yyyy")</span>
                </div>
            </div>
        </div>
    </div>
</div>
