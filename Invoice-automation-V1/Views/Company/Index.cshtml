@model List<InvoiceAutomation.Core.DTOs.Company.CompanyDropdownDto>
@{
    ViewData["Title"] = "Companies";
}

<div class="container animate-fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-gradient">
            <i class="bi bi-building"></i> My Companies
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Company
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-building" style="font-size: 4rem; color: var(--secondary-color);"></i>
                <h4 class="mt-3 mb-2">No Companies Yet</h4>
                <p class="text-muted mb-4">Get started by creating your first company.</p>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle"></i> Create Your First Company
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var company in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 hover-card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">
                                        @company.Name
                                        @if (company.IsUserDefault)
                                        {
                                            <span class="badge bg-success ms-2">Default</span>
                                        }
                                    </h5>
                                    <p class="text-muted mb-0">
                                        <small><i class="bi bi-tag"></i> NTN: @company.Ntn</small>
                                    </p>
                                </div>
                                <span class="badge bg-primary">@company.Role</span>
                            </div>

                            <div class="mb-3">
                                @if (company.HasIndraajConnection)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-link-45deg"></i> Indraaj Connected
                                    </span>
                                    @if (company.LastCoaSyncAt.HasValue)
                                    {
                                        <small class="text-muted ms-2">
                                            Last synced: @company.LastCoaSyncAt.Value.ToString("MMM dd, yyyy")
                                        </small>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-warning">
                                        <i class="bi bi-exclamation-triangle"></i> Indraaj Not Connected
                                    </span>
                                }
                            </div>

                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@company.Id" class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="bi bi-eye"></i> View
                                </a>

                                @if (company.Role == "Admin" || company.Role == "SuperAdmin")
                                {
                                    <a asp-action="Edit" asp-route-id="@company.Id" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                }

                                @if (!company.IsUserDefault)
                                {
                                    <form asp-action="SetDefault" asp-route-id="@company.Id" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-outline-success" title="Set as default">
                                            <i class="bi bi-star"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
