@model List<InvoiceAutomation.Core.DTOs.Company.CompanyDropdownDto>
@{
    ViewData["Title"] = "Companies";
}

<div class="page-header">
    <div class="flex justify-between items-center flex-wrap gap-3">
        <div>
            <h2 class="page-title">Companies</h2>
            <p class="page-subtitle mb-0">Manage your companies and integrations</p>
        </div>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus"></i> Add Company
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="card">
        <div class="card-body empty-state">
            <i class="bi bi-building"></i>
            <h5>No Companies Yet</h5>
            <p>Get started by creating your first company.</p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus"></i> Create Your First Company
            </a>
        </div>
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var company in Model)
        {
            <div class="col-md-6">
                <div class="card h-full hover-card">
                    <div class="card-body">
                        <div class="flex justify-between items-start mb-3">
                            <div class="flex items-center gap-3">
                                <div class="stat-card-icon bg-primary">
                                    <i class="bi bi-building"></i>
                                </div>
                                <div>
                                    <h5 class="mb-0" style="font-size: 0.9375rem;">
                                        @company.Name
                                        @if (company.IsUserDefault)
                                        {
                                            <span class="badge bg-success ms-1">Default</span>
                                        }
                                    </h5>
                                    <small class="text-muted">NTN: @company.Ntn</small>
                                </div>
                            </div>
                            <span class="badge bg-primary">@company.Role</span>
                        </div>

                        <div class="mb-3">
                            @if (company.HasIndraajConnection)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-link-45deg"></i> Indraaj Connected
                                </span>
                                @if (company.LastCoaSyncAt.HasValue)
                                {
                                    <small class="text-muted ms-2">
                                        Last synced: @company.LastCoaSyncAt.Value.ToString("MMM dd, yyyy")
                                    </small>
                                }
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="bi bi-exclamation-triangle"></i> Indraaj Not Connected
                                </span>
                            }
                        </div>

                        <div class="flex gap-2">
                            <a asp-action="Details" asp-route-id="@company.Id" class="btn btn-sm btn-outline-primary flex-fill">
                                <i class="bi bi-eye"></i> View
                            </a>

                            @if (company.Role == "Admin" || company.Role == "SuperAdmin")
                            {
                                <a asp-action="Edit" asp-route-id="@company.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                            }

                            @if (!company.IsUserDefault)
                            {
                                <form asp-action="SetDefault" asp-route-id="@company.Id" method="post" class="inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Set as default">
                                        <i class="bi bi-star"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
