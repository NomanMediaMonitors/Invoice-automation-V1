@model InvoiceAutomation.Core.DTOs.Company.ConnectIndraajDto
@{
    ViewData["Title"] = "Connect Indraaj";
    var companyName = ViewBag.CompanyName as string;
    var companyId = (Guid)ViewBag.CompanyId;
}

<div class="container animate-fadeIn">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="bi bi-link-45deg" style="font-size: 3rem; color: var(--primary-color);"></i>
                        </div>
                        <h2 class="fw-bold text-gradient">Connect Indraaj</h2>
                        <p class="text-muted">@companyName</p>
                    </div>

                    <div class="alert alert-info mb-4" role="alert">
                        <i class="bi bi-info-circle"></i>
                        <strong>How to get your access token:</strong>
                        <ol class="mb-0 mt-2 small">
                            <li>Log in to your Indraaj account</li>
                            <li>Navigate to Settings â†’ API Integration</li>
                            <li>Copy your Access Token Code</li>
                            <li>Paste it below</li>
                        </ol>
                    </div>

                    <form asp-action="ConnectIndraaj" asp-route-id="@companyId" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="AccessToken" class="form-label">Indraaj Access Token *</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light border-2"><i class="bi bi-key"></i></span>
                                <input asp-for="AccessToken" class="form-control border-start-0" placeholder="Enter your Indraaj access token" />
                            </div>
                            <span asp-validation-for="AccessToken" class="text-danger"></span>
                            <small class="text-muted">
                                Your access token will be encrypted and stored securely.
                            </small>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Connect & Test
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-action="Details" asp-route-id="@companyId" class="text-muted">
                                <i class="bi bi-arrow-left"></i> Back to Company Details
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
