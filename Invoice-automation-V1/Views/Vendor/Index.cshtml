@model List<InvoiceAutomation.Core.DTOs.Vendor.VendorListDto>
@{
    ViewData["Title"] = "Vendors";
    var companyId = (Guid)ViewBag.CompanyId;
    var companyName = (string)ViewBag.CompanyName;
}

<div class="container-fluid animate-fadeIn" style="max-width: 1400px;">
    <!-- Breadcrumbs -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Company" asp-action="Details" asp-route-id="@companyId">
                    <i class="bi bi-building"></i> @companyName
                </a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Vendors</li>
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <div>
                        <div class="page-title">
                            <i class="bi bi-truck"></i>
                            <h2 class="fw-bold mb-0">Vendors</h2>
                        </div>
                        <p class="page-subtitle mb-0">@companyName</p>
                    </div>
                    <div class="d-flex gap-2">
                        <a asp-action="Create" asp-route-companyId="@companyId" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Add Vendor
                        </a>
                        <a asp-controller="Company" asp-action="Details" asp-route-id="@companyId" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="empty-state">
                    <i class="bi bi-truck"></i>
                    <h4>No Vendors Yet</h4>
                    <p>Start by adding your first vendor/supplier to manage your business relationships.</p>
                    <a asp-action="Create" asp-route-companyId="@companyId" class="btn btn-primary btn-lg">
                        <i class="bi bi-plus-circle"></i> Add First Vendor
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Stats Summary -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="d-flex align-items-center">
                        <div class="stat-card-icon me-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="bi bi-truck"></i>
                        </div>
                        <div>
                            <div class="stat-card-value">@Model.Count</div>
                            <div class="stat-card-label">Total Vendors</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="d-flex align-items-center">
                        <div class="stat-card-icon me-3" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <div>
                            <div class="stat-card-value">@Model.Count(v => v.IsActive)</div>
                            <div class="stat-card-label">Active</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="d-flex align-items-center">
                        <div class="stat-card-icon me-3" style="background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);">
                            <i class="bi bi-pause-circle"></i>
                        </div>
                        <div>
                            <div class="stat-card-value">@Model.Count(v => !v.IsActive)</div>
                            <div class="stat-card-label">Inactive</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stat-card">
                    <div class="d-flex align-items-center">
                        <div class="stat-card-icon me-3" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                            <i class="bi bi-tags"></i>
                        </div>
                        <div>
                            <div class="stat-card-value">@Model.Select(v => v.Type).Distinct().Count()</div>
                            <div class="stat-card-label">Types</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Table Card -->
        <div class="card shadow-lg">
            <div class="card-body p-0">
                <!-- Search & Filter Bar -->
                <div class="p-4 pb-3 border-bottom">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-6">
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="bi bi-search"></i>
                                </span>
                                <input type="text" id="searchInput" class="form-control border-start-0 ps-0" placeholder="Search vendors by name, email, phone, or NTN...">
                            </div>
                        </div>
                        <div class="col-md-3">
                            <select id="typeFilter" class="form-select">
                                <option value="">All Types</option>
                                <option value="Supplier">Supplier</option>
                                <option value="ServiceProvider">Service Provider</option>
                                <option value="Contractor">Contractor</option>
                                <option value="Consultant">Consultant</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select id="statusFilter" class="form-select">
                                <option value="">All Status</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-hover mb-0" id="vendorsTable">
                        <thead>
                            <tr>
                                <th style="width: 25%;">Vendor Details</th>
                                <th style="width: 15%;">Type</th>
                                <th style="width: 20%;">Contact</th>
                                <th style="width: 15%;">Location</th>
                                <th style="width: 10%;">Payment</th>
                                <th style="width: 10%;">Status</th>
                                <th style="width: 5%;" class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vendor in Model.OrderByDescending(v => v.IsActive).ThenBy(v => v.Name))
                            {
                                <tr data-status="@(vendor.IsActive ? "active" : "inactive")" data-type="@vendor.Type">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="vendor-avatar me-3">
                                                <i class="bi bi-truck"></i>
                                            </div>
                                            <div>
                                                <div class="fw-bold text-primary mb-1">@vendor.Name</div>
                                                @if (!string.IsNullOrEmpty(vendor.Ntn))
                                                {
                                                    <small class="text-muted">
                                                        <i class="bi bi-file-text me-1"></i>NTN: @vendor.Ntn
                                                    </small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            <i class="bi bi-tag"></i> @vendor.Type
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(vendor.Email))
                                        {
                                            <div class="mb-1">
                                                <small class="text-muted">
                                                    <i class="bi bi-envelope me-1"></i>
                                                    <a href="mailto:@vendor.Email" class="text-decoration-none">@vendor.Email</a>
                                                </small>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(vendor.Phone))
                                        {
                                            <div>
                                                <small class="text-muted">
                                                    <i class="bi bi-telephone me-1"></i>
                                                    <a href="tel:@vendor.Phone" class="text-decoration-none">@vendor.Phone</a>
                                                </small>
                                            </div>
                                        }
                                        @if (string.IsNullOrEmpty(vendor.Email) && string.IsNullOrEmpty(vendor.Phone))
                                        {
                                            <small class="text-muted">N/A</small>
                                        }
                                    </td>
                                    <td>
                                        <small>
                                            <i class="bi bi-geo-alt me-1"></i>
                                            @(vendor.City ?? "N/A")
                                        </small>
                                    </td>
                                    <td>
                                        @if (vendor.PaymentTermDays.HasValue)
                                        {
                                            <span class="badge bg-secondary">@vendor.PaymentTermDays days</span>
                                        }
                                        else
                                        {
                                            <small class="text-muted">N/A</small>
                                        }
                                    </td>
                                    <td>
                                        @if (vendor.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Active
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-x-circle"></i> Inactive
                                            </span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@vendor.Id" asp-route-companyId="@companyId"
                                               class="btn btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@vendor.Id" asp-route-companyId="@companyId"
                                               class="btn btn-outline-secondary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Table Footer -->
                <div class="p-3 border-top bg-light">
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="mb-0 text-muted small">
                            <i class="bi bi-info-circle"></i>
                            Showing <strong><span id="visibleCount">@Model.Count</span></strong> of <strong>@Model.Count</strong> vendors
                        </p>
                        <small class="text-muted">
                            Created: @Model.OrderByDescending(v => v.CreatedAt).FirstOrDefault()?.CreatedAt.ToString("MMM dd, yyyy")
                        </small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            const typeFilter = document.getElementById('typeFilter');
            const statusFilter = document.getElementById('statusFilter');
            const table = document.getElementById('vendorsTable');
            const visibleCount = document.getElementById('visibleCount');

            function filterTable() {
                if (!table) return;

                const searchTerm = searchInput?.value.toLowerCase() || '';
                const typeValue = typeFilter?.value || '';
                const statusValue = statusFilter?.value || '';
                const rows = table.querySelectorAll('tbody tr');
                let visible = 0;

                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    const rowType = row.getAttribute('data-type');
                    const rowStatus = row.getAttribute('data-status');

                    const matchesSearch = text.includes(searchTerm);
                    const matchesType = !typeValue || rowType === typeValue;
                    const matchesStatus = !statusValue || rowStatus === statusValue;

                    if (matchesSearch && matchesType && matchesStatus) {
                        row.style.display = '';
                        visible++;
                    } else {
                        row.style.display = 'none';
                    }
                });

                if (visibleCount) {
                    visibleCount.textContent = visible;
                }
            }

            // Attach event listeners
            if (searchInput) {
                searchInput.addEventListener('keyup', filterTable);
            }
            if (typeFilter) {
                typeFilter.addEventListener('change', filterTable);
            }
            if (statusFilter) {
                statusFilter.addEventListener('change', filterTable);
            }
        });
    </script>

    <style>
        .vendor-avatar {
            width: 40px;
            height: 40px;
            border-radius: var(--radius-lg);
            background: var(--gray-100);
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--primary-color);
            font-size: 1.25rem;
        }

        .table tbody tr {
            cursor: pointer;
        }

        .input-group-text {
            color: var(--text-tertiary);
        }

        .stat-card {
            padding: 1.25rem;
        }

        .stat-card-icon {
            width: 2.5rem;
            height: 2.5rem;
            font-size: 1.25rem;
        }

        .stat-card-value {
            font-size: 1.5rem;
        }
    </style>
}
