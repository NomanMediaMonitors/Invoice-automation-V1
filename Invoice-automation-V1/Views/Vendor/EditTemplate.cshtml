@model InvoiceAutomation.Core.Entities.VendorInvoiceTemplate
@{
    ViewData["Title"] = "Edit Invoice Template";
    var companyId = (Guid)ViewBag.CompanyId;
    var companyName = (string)ViewBag.CompanyName;
    var vendorId = (Guid)ViewBag.VendorId;
    var vendorName = (string)ViewBag.VendorName;
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Company" asp-action="Details" asp-route-id="@companyId">@companyName</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-route-companyId="@companyId">Vendors</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Details" asp-route-id="@vendorId" asp-route-companyId="@companyId">@vendorName</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Templates" asp-route-id="@vendorId" asp-route-companyId="@companyId">Templates</a>
            </li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"><i class="bi bi-pencil"></i> Edit Template: @Model.TemplateName</h2>
        <a asp-action="Templates" asp-route-id="@vendorId" asp-route-companyId="@companyId" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

    <form asp-action="EditTemplate" asp-route-id="@Model.Id" asp-route-companyId="@companyId" method="post">
        <partial name="_TemplateForm" model="Model" />

        <div class="d-flex justify-content-end gap-2">
            <a asp-action="Templates" asp-route-id="@vendorId" asp-route-companyId="@companyId" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Save Changes
            </button>
        </div>
    </form>
</div>

<style>
    .card-header { background-color: #f8f9fa; border-bottom: 2px solid #dee2e6; }
</style>
