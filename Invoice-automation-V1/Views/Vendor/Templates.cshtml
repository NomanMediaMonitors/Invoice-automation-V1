@model List<InvoiceAutomation.Core.Entities.VendorInvoiceTemplate>
@{
    ViewData["Title"] = "Invoice Templates";
    var companyId = (Guid)ViewBag.CompanyId;
    var companyName = (string)ViewBag.CompanyName;
    var vendorId = (Guid)ViewBag.VendorId;
    var vendorName = (string)ViewBag.VendorName;
}

<!-- Breadcrumbs -->
<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Company" asp-action="Details" asp-route-id="@companyId">
                <i class="bi bi-building"></i> @companyName
            </a>
        </li>
        <li class="breadcrumb-item">
            <a asp-action="Index" asp-route-companyId="@companyId">Vendors</a>
        </li>
        <li class="breadcrumb-item">
            <a asp-action="Details" asp-route-id="@vendorId" asp-route-companyId="@companyId">@vendorName</a>
        </li>
        <li class="breadcrumb-item active">Invoice Templates</li>
    </ol>
</nav>

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h2 class="fw-bold mb-1">Invoice Templates</h2>
            <p class="text-muted mb-0">Configure how OCR processes invoices from <strong>@vendorName</strong></p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="CreateTemplate" asp-route-id="@vendorId" asp-route-companyId="@companyId" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i> New Template
            </a>
            <a asp-action="Details" asp-route-id="@vendorId" asp-route-companyId="@companyId" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back
            </a>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle me-1"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-circle me-1"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model.Any())
{
    <div class="row">
        @foreach (var template in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card @(!template.IsActive ? "opacity-75" : "")">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h5 class="fw-semibold mb-0">@template.TemplateName</h5>
                            @if (template.IsActive)
                            {
                                <span class="badge bg-success-subtle text-success-emphasis">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary-subtle text-secondary-emphasis">Inactive</span>
                            }
                        </div>

                        <h6 class="text-muted small text-uppercase mb-2">Fields Used</h6>
                        <div class="d-flex flex-wrap gap-1 mb-3">
                            @if (template.HasInvoiceNumber) { <span class="badge bg-primary-subtle text-primary-emphasis">Invoice Number</span> }
                            @if (template.HasInvoiceDate) { <span class="badge bg-primary-subtle text-primary-emphasis">Invoice Date</span> }
                            @if (template.HasDueDate) { <span class="badge bg-primary-subtle text-primary-emphasis">Due Date</span> }
                            @if (template.HasDescription) { <span class="badge bg-primary-subtle text-primary-emphasis">Description</span> }
                            @if (template.HasLineItems) { <span class="badge bg-primary-subtle text-primary-emphasis">Line Items</span> }
                            @if (template.HasSubTotal) { <span class="badge bg-primary-subtle text-primary-emphasis">Sub Total</span> }
                            @if (template.HasAdvanceTaxAccount) { <span class="badge bg-success-subtle text-success-emphasis">Advance Tax</span> }
                            @if (template.HasSalesTaxInputAccount) { <span class="badge bg-success-subtle text-success-emphasis">Sales Tax Input</span> }
                        </div>

                        @if (template.DefaultAdvanceTaxRate.HasValue)
                        {
                            <p class="small mb-1"><strong>Default Advance Tax Rate:</strong> @template.DefaultAdvanceTaxRate.Value.ToString("N2")%</p>
                        }
                        @if (template.DefaultSalesTaxRate.HasValue)
                        {
                            <p class="small mb-1"><strong>Default Sales Tax Rate:</strong> @template.DefaultSalesTaxRate.Value.ToString("N2")%</p>
                        }
                        @if (template.DefaultChartOfAccount != null)
                        {
                            <p class="small mb-1"><strong>Default Account:</strong> @template.DefaultChartOfAccount.Code - @template.DefaultChartOfAccount.Name</p>
                        }

                        <h6 class="text-muted small text-uppercase mt-3 mb-2">OCR Label Mappings</h6>
                        <div class="small">
                            @if (!string.IsNullOrEmpty(template.InvoiceNumberLabel)) { <p class="mb-0">Invoice #: <code>@template.InvoiceNumberLabel</code></p> }
                            @if (!string.IsNullOrEmpty(template.InvoiceDateLabel)) { <p class="mb-0">Date: <code>@template.InvoiceDateLabel</code></p> }
                            @if (!string.IsNullOrEmpty(template.TaxLabel)) { <p class="mb-0">Tax: <code>@template.TaxLabel</code></p> }
                            @if (!string.IsNullOrEmpty(template.TotalLabel)) { <p class="mb-0">Total: <code>@template.TotalLabel</code></p> }
                            @if (string.IsNullOrEmpty(template.InvoiceNumberLabel) && string.IsNullOrEmpty(template.InvoiceDateLabel) && string.IsNullOrEmpty(template.TaxLabel) && string.IsNullOrEmpty(template.TotalLabel))
                            {
                                <p class="text-muted mb-0">No custom label mappings configured</p>
                            }
                        </div>
                    </div>
                    <div class="card-footer bg-transparent d-flex justify-content-between align-items-center">
                        <small class="text-muted">Updated @template.UpdatedAt.ToString("MMM dd, yyyy")</small>
                        <div class="d-flex gap-1">
                            <a asp-action="EditTemplate" asp-route-id="@template.Id" asp-route-companyId="@companyId"
                               class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil me-1"></i> Edit
                            </a>
                            <form asp-action="DeleteTemplate" method="post" class="d-inline"
                                  onsubmit="return confirm('Delete this template?')">
                                <input type="hidden" name="id" value="@template.Id" />
                                <input type="hidden" name="companyId" value="@companyId" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <div class="empty-state">
                <i class="bi bi-file-earmark-ruled"></i>
                <h4>No Invoice Templates</h4>
                <p>Create a template to configure how OCR processes invoices from this vendor.</p>
                <a asp-action="CreateTemplate" asp-route-id="@vendorId" asp-route-companyId="@companyId" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i> Create First Template
                </a>
            </div>
        </div>
    </div>
}
