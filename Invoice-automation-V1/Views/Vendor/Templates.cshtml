@model List<InvoiceAutomation.Core.Entities.VendorInvoiceTemplate>
@{
    ViewData["Title"] = "Invoice Templates";
    var companyId = (Guid)ViewBag.CompanyId;
    var companyName = (string)ViewBag.CompanyName;
    var vendorId = (Guid)ViewBag.VendorId;
    var vendorName = (string)ViewBag.VendorName;
}

<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-controller="Company" asp-action="Details" asp-route-id="@companyId">
                    <i class="bi bi-building"></i> @companyName
                </a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Index" asp-route-companyId="@companyId">Vendors</a>
            </li>
            <li class="breadcrumb-item">
                <a asp-action="Details" asp-route-id="@vendorId" asp-route-companyId="@companyId">@vendorName</a>
            </li>
            <li class="breadcrumb-item active">Invoice Templates</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-0"><i class="bi bi-file-earmark-ruled"></i> Invoice Templates</h2>
            <p class="text-muted mb-0">Configure how OCR processes invoices from <strong>@vendorName</strong></p>
        </div>
        <div class="btn-group">
            <a asp-action="Details" asp-route-id="@vendorId" asp-route-companyId="@companyId" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <a asp-action="CreateTemplate" asp-route-id="@vendorId" asp-route-companyId="@companyId" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Template
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var template in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card @(!template.IsActive ? "border-secondary opacity-75" : "")">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-file-earmark-ruled"></i> @template.TemplateName
                            </h5>
                            <span class="badge bg-@(template.IsActive ? "success" : "secondary")">
                                @(template.IsActive ? "Active" : "Inactive")
                            </span>
                        </div>
                        <div class="card-body">
                            <h6 class="text-muted mb-2">Fields Used:</h6>
                            <div class="d-flex flex-wrap gap-1 mb-3">
                                @if (template.HasInvoiceNumber) { <span class="badge bg-primary">Invoice Number</span> }
                                @if (template.HasInvoiceDate) { <span class="badge bg-primary">Invoice Date</span> }
                                @if (template.HasDueDate) { <span class="badge bg-primary">Due Date</span> }
                                @if (template.HasDescription) { <span class="badge bg-primary">Description</span> }
                                @if (template.HasLineItems) { <span class="badge bg-primary">Line Items</span> }
                                @if (template.HasTaxRate) { <span class="badge bg-primary">Tax Rate</span> }
                                @if (template.HasSubTotal) { <span class="badge bg-primary">Sub Total</span> }
                            </div>

                            @if (template.DefaultTaxRate.HasValue)
                            {
                                <p class="small mb-1"><strong>Default Tax Rate:</strong> @template.DefaultTaxRate.Value.ToString("N2")%</p>
                            }
                            @if (template.DefaultChartOfAccount != null)
                            {
                                <p class="small mb-1"><strong>Default Account:</strong> @template.DefaultChartOfAccount.Code - @template.DefaultChartOfAccount.Name</p>
                            }

                            <h6 class="text-muted mt-3 mb-2">OCR Label Mappings:</h6>
                            <div class="small">
                                @if (!string.IsNullOrEmpty(template.InvoiceNumberLabel)) { <p class="mb-0">Invoice #: <code>@template.InvoiceNumberLabel</code></p> }
                                @if (!string.IsNullOrEmpty(template.InvoiceDateLabel)) { <p class="mb-0">Date: <code>@template.InvoiceDateLabel</code></p> }
                                @if (!string.IsNullOrEmpty(template.TaxLabel)) { <p class="mb-0">Tax: <code>@template.TaxLabel</code></p> }
                                @if (!string.IsNullOrEmpty(template.TotalLabel)) { <p class="mb-0">Total: <code>@template.TotalLabel</code></p> }
                                @if (string.IsNullOrEmpty(template.InvoiceNumberLabel) && string.IsNullOrEmpty(template.InvoiceDateLabel) && string.IsNullOrEmpty(template.TaxLabel) && string.IsNullOrEmpty(template.TotalLabel))
                                {
                                    <p class="text-muted mb-0">No custom label mappings configured</p>
                                }
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <small class="text-muted">Updated @template.UpdatedAt.ToString("MMM dd, yyyy")</small>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="EditTemplate" asp-route-id="@template.Id" asp-route-companyId="@companyId"
                                   class="btn btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-action="DeleteTemplate" method="post" class="d-inline"
                                      onsubmit="return confirm('Delete this template?')">
                                    <input type="hidden" name="id" value="@template.Id" />
                                    <input type="hidden" name="companyId" value="@companyId" />
                                    <button type="submit" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-file-earmark-ruled display-1 text-muted"></i>
                <h4 class="mt-3">No Invoice Templates</h4>
                <p class="text-muted">Create a template to configure how OCR processes invoices from this vendor.</p>
                <a asp-action="CreateTemplate" asp-route-id="@vendorId" asp-route-companyId="@companyId" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create First Template
                </a>
            </div>
        </div>
    }
</div>

<style>
    .card-header { background-color: #f8f9fa; border-bottom: 2px solid #dee2e6; }
</style>
