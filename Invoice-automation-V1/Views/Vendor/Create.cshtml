@model InvoiceAutomation.Core.DTOs.Vendor.CreateVendorDto
@{
    ViewData["Title"] = "Add Vendor";
    var companyId = (Guid)ViewBag.CompanyId;
    var companyName = (string)ViewBag.CompanyName;
}

<!-- Breadcrumbs -->
<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-controller="Company" asp-action="Details" asp-route-id="@companyId">
                <i class="bi bi-building"></i> @companyName
            </a>
        </li>
        <li class="breadcrumb-item">
            <a asp-action="Index" asp-route-companyId="@companyId">Vendors</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Add Vendor</li>
    </ol>
</nav>

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h2 class="fw-bold mb-1">Add New Vendor</h2>
            <p class="text-muted mb-0">@companyName</p>
        </div>
        <a asp-action="Index" asp-route-companyId="@companyId" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Vendors
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-10">
        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="CompanyId" value="@companyId" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <!-- Basic Information -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="fw-semibold mb-3">Basic Information</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label">Vendor Name <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Type" class="form-label">Vendor Type <span class="text-danger">*</span></label>
                            <select asp-for="Type" class="form-select">
                                <option value="Supplier">Supplier</option>
                                <option value="ServiceProvider">Service Provider</option>
                                <option value="Contractor">Contractor</option>
                                <option value="Consultant">Consultant</option>
                                <option value="Other">Other</option>
                            </select>
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Phone" class="form-label">Phone</label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="MobilePhone" class="form-label">Mobile Phone</label>
                            <input asp-for="MobilePhone" class="form-control" />
                        </div>
                        <div class="col-md-12 mb-3">
                            <label asp-for="Website" class="form-label">Website</label>
                            <input asp-for="Website" class="form-control" />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tax Information -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="fw-semibold mb-3">Tax Information</h5>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Ntn" class="form-label">NTN <span class="text-danger">*</span></label>
                            <input asp-for="Ntn" class="form-control" />
                            <span asp-validation-for="Ntn" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Strn" class="form-label">STRN</label>
                            <input asp-for="Strn" class="form-control" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="RegistrationNumber" class="form-label">Registration Number</label>
                            <input asp-for="RegistrationNumber" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Address -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="fw-semibold mb-3">Address</h5>
                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="Address" class="form-label">Street Address <span class="text-danger">*</span></label>
                            <textarea asp-for="Address" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="City" class="form-label">City <span class="text-danger">*</span></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="State" class="form-label">State/Province <span class="text-danger">*</span></label>
                            <input asp-for="State" class="form-control" />
                            <span asp-validation-for="State" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="PostalCode" class="form-label">Postal Code</label>
                            <input asp-for="PostalCode" class="form-control" />
                        </div>
                        <div class="col-md-12 mb-3">
                            <label asp-for="Country" class="form-label">Country <span class="text-danger">*</span></label>
                            <input asp-for="Country" class="form-control" value="Pakistan" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Person -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="fw-semibold mb-3">Contact Person</h5>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="ContactPersonName" class="form-label">Name <span class="text-danger">*</span></label>
                            <input asp-for="ContactPersonName" class="form-control" />
                            <span asp-validation-for="ContactPersonName" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="ContactPersonEmail" class="form-label">Email</label>
                            <input asp-for="ContactPersonEmail" class="form-control" />
                            <span asp-validation-for="ContactPersonEmail" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="ContactPersonPhone" class="form-label">Phone <span class="text-danger">*</span></label>
                            <input asp-for="ContactPersonPhone" class="form-control" />
                            <span asp-validation-for="ContactPersonPhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Banking Information -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="fw-semibold mb-3">Banking Information</h5>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="BankName" class="form-label">Bank Name <span class="text-danger">*</span></label>
                            <input asp-for="BankName" class="form-control" />
                            <span asp-validation-for="BankName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="BankAccountTitle" class="form-label">Account Title <span class="text-danger">*</span></label>
                            <input asp-for="BankAccountTitle" class="form-control" />
                            <span asp-validation-for="BankAccountTitle" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="BankAccountNumber" class="form-label">Account Number <span class="text-danger">*</span></label>
                            <input asp-for="BankAccountNumber" class="form-control" />
                            <span asp-validation-for="BankAccountNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Iban" class="form-label">IBAN <span class="text-danger">*</span></label>
                            <input asp-for="Iban" class="form-control" placeholder="PK00XXXX0000000000000000" />
                            <span asp-validation-for="Iban" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="SwiftCode" class="form-label">SWIFT Code</label>
                            <input asp-for="SwiftCode" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payment Terms -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="fw-semibold mb-3">Payment Terms</h5>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="PaymentTermDays" class="form-label">Payment Terms (Days)</label>
                            <input asp-for="PaymentTermDays" class="form-control" type="number" min="0" max="365" placeholder="30" />
                            <span asp-validation-for="PaymentTermDays" class="text-danger"></span>
                        </div>
                        <div class="col-md-8 mb-3">
                            <label asp-for="PaymentTermsNotes" class="form-label">Payment Terms Notes</label>
                            <input asp-for="PaymentTermsNotes" class="form-control" placeholder="e.g., Net 30 days from invoice date" />
                        </div>
                        <div class="col-md-12 mb-3">
                            <label asp-for="Notes" class="form-label">Additional Notes</label>
                            <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="d-flex justify-content-end gap-2">
                <a asp-action="Index" asp-route-companyId="@companyId" class="btn btn-outline-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Create Vendor
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
