@model InvoiceAutomation.Core.DTOs.Vendor.UpdateVendorDto
@{
    ViewData["Title"] = "Edit Vendor";
}

<!-- Breadcrumbs -->
<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-action="Details" asp-route-id="@ViewContext.RouteData.Values["id"]" asp-route-companyId="@ViewBag.CompanyId">Vendor</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h2 class="fw-bold mb-1">Edit Vendor</h2>
            <p class="text-muted mb-0">Update vendor information</p>
        </div>
        <a asp-action="Details" asp-route-id="@ViewContext.RouteData.Values["id"]" asp-route-companyId="@ViewBag.CompanyId" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Cancel
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" asp-route-id="@ViewContext.RouteData.Values["id"]" asp-route-companyId="@ViewBag.CompanyId" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label">Name <span class="text-danger">*</span></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Type" class="form-label">Type <span class="text-danger">*</span></label>
                            <select asp-for="Type" class="form-select">
                                <option value="Supplier">Supplier</option>
                                <option value="ServiceProvider">Service Provider</option>
                                <option value="Contractor">Contractor</option>
                                <option value="Consultant">Consultant</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Phone" class="form-label">Phone</label>
                            <input asp-for="Phone" class="form-control" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="City" class="form-label">City</label>
                            <input asp-for="City" class="form-control" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Ntn" class="form-label">NTN</label>
                            <input asp-for="Ntn" class="form-control" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="PaymentTermDays" class="form-label">Payment Terms (Days)</label>
                            <input asp-for="PaymentTermDays" class="form-control" type="number" />
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <a asp-action="Details" asp-route-id="@ViewContext.RouteData.Values["id"]" asp-route-companyId="@ViewBag.CompanyId" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i> Update Vendor
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
