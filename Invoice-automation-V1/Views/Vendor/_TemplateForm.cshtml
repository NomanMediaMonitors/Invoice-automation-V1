@model InvoiceAutomation.Core.Entities.VendorInvoiceTemplate

<div class="row">
    <!-- Left Column: Field Configuration -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-sliders"></i> Field Configuration</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="TemplateName" class="form-label">Template Name <span class="text-danger">*</span></label>
                    <input asp-for="TemplateName" class="form-control" placeholder="e.g., Salsoft Standard Invoice">
                </div>

                <h6 class="text-muted mb-3">Which fields does this vendor use?</h6>

                <div class="row">
                    <div class="col-6">
                        <div class="form-check form-switch mb-2">
                            <input asp-for="HasInvoiceNumber" class="form-check-input">
                            <label asp-for="HasInvoiceNumber" class="form-check-label">Invoice Number</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="HasInvoiceDate" class="form-check-input">
                            <label asp-for="HasInvoiceDate" class="form-check-label">Invoice Date</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="HasDueDate" class="form-check-input">
                            <label asp-for="HasDueDate" class="form-check-label">Due Date</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="HasDescription" class="form-check-input">
                            <label asp-for="HasDescription" class="form-check-label">Description</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-check form-switch mb-2">
                            <input asp-for="HasLineItems" class="form-check-input">
                            <label asp-for="HasLineItems" class="form-check-label">Line Items</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="HasTaxRate" class="form-check-input">
                            <label asp-for="HasTaxRate" class="form-check-label">Tax Rate</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="HasSubTotal" class="form-check-input">
                            <label asp-for="HasSubTotal" class="form-check-label">Sub Total</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="IsActive" class="form-check-input">
                            <label asp-for="IsActive" class="form-check-label">Active</label>
                        </div>
                    </div>
                </div>

                <hr>

                <h6 class="text-muted mb-3">Defaults</h6>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DefaultTaxRate" class="form-label">Default Tax Rate (%)</label>
                        <input asp-for="DefaultTaxRate" type="number" class="form-control" min="0" max="100" step="0.01" placeholder="e.g., 17">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="DefaultChartOfAccountId" class="form-label">Default Account</label>
                        <select asp-for="DefaultChartOfAccountId" class="form-select" asp-items="ViewBag.ChartOfAccounts">
                            <option value="">-- None --</option>
                        </select>
                    </div>
                </div>

                <div class="mb-0">
                    <label asp-for="Notes" class="form-label">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Any notes about this template..."></textarea>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column: OCR Label Mapping -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-magic"></i> OCR Label Mapping</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info py-2 small">
                    <i class="bi bi-info-circle"></i>
                    Enter the label text that appears on this vendor's invoices next to each field.
                    This helps OCR accurately extract data. Separate multiple labels with commas.
                </div>

                <div class="mb-3">
                    <label asp-for="InvoiceNumberLabel" class="form-label">
                        <i class="bi bi-hash"></i> Invoice Number Label
                    </label>
                    <input asp-for="InvoiceNumberLabel" class="form-control" placeholder="e.g., Invoice No, Inv#, Bill Number">
                    <div class="form-text">What text appears next to the invoice number on this vendor's invoices?</div>
                </div>

                <div class="mb-3">
                    <label asp-for="InvoiceDateLabel" class="form-label">
                        <i class="bi bi-calendar"></i> Invoice Date Label
                    </label>
                    <input asp-for="InvoiceDateLabel" class="form-control" placeholder="e.g., Invoice Date, Date, Bill Date">
                </div>

                <div class="mb-3">
                    <label asp-for="DueDateLabel" class="form-label">
                        <i class="bi bi-calendar-check"></i> Due Date Label
                    </label>
                    <input asp-for="DueDateLabel" class="form-control" placeholder="e.g., Due Date, Payment Due, Pay By">
                </div>

                <div class="mb-3">
                    <label asp-for="SubTotalLabel" class="form-label">
                        <i class="bi bi-calculator"></i> Sub Total Label
                    </label>
                    <input asp-for="SubTotalLabel" class="form-control" placeholder="e.g., Sub Total, Subtotal, Net Amount">
                </div>

                <div class="mb-3">
                    <label asp-for="TaxLabel" class="form-label">
                        <i class="bi bi-percent"></i> Tax Label
                    </label>
                    <input asp-for="TaxLabel" class="form-control" placeholder="e.g., GST, Tax, VAT, Sales Tax">
                </div>

                <div class="mb-0">
                    <label asp-for="TotalLabel" class="form-label">
                        <i class="bi bi-currency-dollar"></i> Total Label
                    </label>
                    <input asp-for="TotalLabel" class="form-control" placeholder="e.g., Total, Grand Total, Amount Due">
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" asp-for="VendorId" />
