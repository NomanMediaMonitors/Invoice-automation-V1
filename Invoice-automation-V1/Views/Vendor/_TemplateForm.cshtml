@model InvoiceAutomation.Core.Entities.VendorInvoiceTemplate

<div class="row">
    <!-- Left Column: Field Configuration -->
    <div class="col-md-6">
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="fw-semibold mb-3">Field Configuration</h5>

                <div class="mb-3">
                    <label asp-for="TemplateName" class="form-label">Template Name <span class="required">*</span></label>
                    <input asp-for="TemplateName" class="form-control" placeholder="e.g., Salsoft Standard Invoice">
                </div>

                <h6 class="text-muted small text-uppercase mb-3">Which fields does this vendor use?</h6>

                <div class="row">
                    <div class="col-6">
                        <div class="form-check form-switch mb-2">
                            <input asp-for="HasInvoiceNumber" class="form-check-input">
                            <label asp-for="HasInvoiceNumber" class="form-check-label">Invoice Number</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="HasInvoiceDate" class="form-check-input">
                            <label asp-for="HasInvoiceDate" class="form-check-label">Invoice Date</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="HasDueDate" class="form-check-input">
                            <label asp-for="HasDueDate" class="form-check-label">Due Date</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="HasDescription" class="form-check-input">
                            <label asp-for="HasDescription" class="form-check-label">Description</label>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-check form-switch mb-2">
                            <input asp-for="HasLineItems" class="form-check-input">
                            <label asp-for="HasLineItems" class="form-check-label">Line Items</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="HasSubTotal" class="form-check-input">
                            <label asp-for="HasSubTotal" class="form-check-label">Sub Total</label>
                        </div>
                        <div class="form-check form-switch mb-2">
                            <input asp-for="IsActive" class="form-check-input">
                            <label asp-for="IsActive" class="form-check-label">Active</label>
                        </div>
                    </div>
                </div>

                <hr>

                <h6 class="text-muted small text-uppercase mb-3">Defaults</h6>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="DefaultAdvanceTaxRate" class="form-label">Default Advance Tax Rate (%)</label>
                        <input asp-for="DefaultAdvanceTaxRate" type="number" class="form-control" min="0" max="100" step="0.01" placeholder="e.g., 6">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="DefaultSalesTaxRate" class="form-label">Default Sales Tax Rate (%)</label>
                        <input asp-for="DefaultSalesTaxRate" type="number" class="form-control" min="0" max="100" step="0.01" placeholder="e.g., 17">
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="DefaultChartOfAccountId" class="form-label">Default Line Item Account</label>
                        <select asp-for="DefaultChartOfAccountId" class="form-select coa-select" asp-items="ViewBag.ChartOfAccounts">
                            <option value="">-- None --</option>
                        </select>
                    </div>
                </div>

                <div class="mb-0">
                    <label asp-for="Notes" class="form-label">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="2" placeholder="Any notes about this template..."></textarea>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column: OCR Label Mapping + GL Accounts -->
    <div class="col-md-6">
        <!-- GL Account Configuration -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="fw-semibold mb-3">GL Account Configuration</h5>

                <div class="alert alert-info py-2 small">
                    <i class="bi bi-info-circle me-1"></i>
                    Toggle which GL account categories apply for this vendor's invoices.
                    Disabled accounts will not appear on the invoice details page.
                </div>

                <div class="mb-3">
                    <div class="form-check form-switch mb-2">
                        <input asp-for="HasAdvanceTaxAccount" class="form-check-input" id="hasAdvanceTaxAccount">
                        <label asp-for="HasAdvanceTaxAccount" class="form-check-label fw-semibold">Advance Tax</label>
                    </div>
                    <div id="advanceTaxAccountSection">
                        <select asp-for="DefaultAdvanceTaxAccountId" class="form-select form-select-sm coa-select" asp-items="ViewBag.ChartOfAccounts">
                            <option value="">-- Default Advance Tax Account --</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="form-check form-switch mb-2">
                        <input asp-for="HasSalesTaxInputAccount" class="form-check-input" id="hasSalesTaxInputAccount">
                        <label asp-for="HasSalesTaxInputAccount" class="form-check-label fw-semibold">Sales Tax Input</label>
                    </div>
                    <div id="salesTaxInputAccountSection">
                        <select asp-for="DefaultSalesTaxInputAccountId" class="form-select form-select-sm coa-select" asp-items="ViewBag.ChartOfAccounts">
                            <option value="">-- Default Sales Tax Input Account --</option>
                        </select>
                    </div>
                </div>

                <hr class="my-3">

                <div class="mb-0">
                    <label asp-for="DefaultPayableVendorsAccountId" class="form-label fw-semibold">Payable Vendors Account</label>
                    <div class="form-text mb-2">This account will be used as the credit entry (Total Amount) when posting to GL.</div>
                    <select asp-for="DefaultPayableVendorsAccountId" class="form-select form-select-sm coa-select" asp-items="ViewBag.ChartOfAccounts">
                        <option value="">-- Select Payable Vendors Account --</option>
                    </select>
                </div>

            </div>
        </div>

        <!-- OCR Label Mapping -->
        <div class="card mb-4">
            <div class="card-body">
                <h5 class="fw-semibold mb-3">OCR Label Mapping</h5>

                <div class="alert alert-info py-2 small">
                    <i class="bi bi-info-circle me-1"></i>
                    Enter the label text that appears on this vendor's invoices next to each field.
                    This helps OCR accurately extract data. Separate multiple labels with commas.
                </div>

                <div class="mb-3">
                    <label asp-for="InvoiceNumberLabel" class="form-label">Invoice Number Label</label>
                    <input asp-for="InvoiceNumberLabel" class="form-control" placeholder="e.g., Invoice No, Inv#, Bill Number">
                    <div class="form-text">What text appears next to the invoice number on this vendor's invoices?</div>
                </div>

                <div class="mb-3">
                    <label asp-for="InvoiceDateLabel" class="form-label">Invoice Date Label</label>
                    <input asp-for="InvoiceDateLabel" class="form-control" placeholder="e.g., Invoice Date, Date, Bill Date">
                </div>

                <div class="mb-3">
                    <label asp-for="DueDateLabel" class="form-label">Due Date Label</label>
                    <input asp-for="DueDateLabel" class="form-control" placeholder="e.g., Due Date, Payment Due, Pay By">
                </div>

                <div class="mb-3">
                    <label asp-for="SubTotalLabel" class="form-label">Sub Total Label</label>
                    <input asp-for="SubTotalLabel" class="form-control" placeholder="e.g., Sub Total, Subtotal, Net Amount">
                </div>

                <div class="mb-3">
                    <label asp-for="TaxLabel" class="form-label">Tax Label</label>
                    <input asp-for="TaxLabel" class="form-control" placeholder="e.g., GST, Tax, VAT, Sales Tax">
                </div>

                <div class="mb-3">
                    <label asp-for="TotalLabel" class="form-label">Total Label</label>
                    <input asp-for="TotalLabel" class="form-control" placeholder="e.g., Total, Grand Total, Amount Due">
                </div>

                <div class="mb-3">
                    <label asp-for="AdvanceTaxAmountLabel" class="form-label">Advance Tax Amount Label</label>
                    <input asp-for="AdvanceTaxAmountLabel" class="form-control" placeholder="e.g., Advance Tax, WHT, Withholding Tax">
                </div>

                <div class="mb-0">
                    <label asp-for="SalesTaxInputAmountLabel" class="form-label">Sales Tax Input Amount Label</label>
                    <input asp-for="SalesTaxInputAmountLabel" class="form-control" placeholder="e.g., Sales Tax, GST, Input Tax">
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" asp-for="VendorId" />

@section Scripts {
    <script>
        function toggleAccountSection(checkboxId, sectionId) {
            var checkbox = document.getElementById(checkboxId);
            var section = document.getElementById(sectionId);
            if (checkbox && section) {
                section.style.display = checkbox.checked ? '' : 'none';
                checkbox.addEventListener('change', function() {
                    section.style.display = this.checked ? '' : 'none';
                });
            }
        }

        toggleAccountSection('hasAdvanceTaxAccount', 'advanceTaxAccountSection');
        toggleAccountSection('hasSalesTaxInputAccount', 'salesTaxInputAccountSection');

        // ===== Searchable COA Dropdowns (Tom Select) =====
        document.querySelectorAll('.coa-select').forEach(function(el) {
            new TomSelect(el, {
                maxItems: 1,
                create: false,
                allowEmptyOption: true
            });
        });
    </script>
}
