@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div style="max-width: 560px; margin: 3rem auto; text-align: center; padding: 2rem;">
    <div style="font-size: 3rem; color: var(--gray-300); margin-bottom: 1rem;">
        <i class="bi bi-exclamation-triangle"></i>
    </div>
    <h2 style="font-size: 1.25rem; font-weight: 700; margin-bottom: 0.5rem;">Something went wrong</h2>
    <p style="color: var(--text-tertiary); font-size: 0.875rem; margin-bottom: 1.5rem;">
        An error occurred while processing your request. Please try again or contact support if the issue persists.
    </p>

    @if (Model.ShowRequestId)
    {
        <p style="font-size: 0.75rem; color: var(--text-muted);">
            Request ID: <code style="color: var(--text-tertiary);">@Model.RequestId</code>
        </p>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
        <i class="bi bi-arrow-left"></i> Go Home
    </a>
</div>
