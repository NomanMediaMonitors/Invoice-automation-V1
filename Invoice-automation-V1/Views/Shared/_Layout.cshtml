<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Invoice Automation System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/website.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Invoice_automation_V1.styles.css" asp-append-version="true" />
</head>
<body>
    <!-- Modern Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top shadow-sm">
        <div class="container-fluid px-4">
            <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                <div class="brand-icon me-2">
                    <i class="bi bi-receipt"></i>
                </div>
                <div class="brand-text">
                    <span class="brand-name">Invoice Automation</span>
                    <small class="brand-tagline d-none d-lg-block">Smart Invoice Processing</small>
                </div>
            </a>

            <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <ul class="navbar-nav ms-4 me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Dashboard">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Company" asp-action="Index">
                                <i class="bi bi-building"></i> Companies
                            </a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav ms-4 me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>
                    </ul>
                }

                <ul class="navbar-nav align-items-center">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle user-dropdown" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                                <div class="user-avatar">
                                    <i class="bi bi-person-circle"></i>
                                </div>
                                <span class="user-name d-none d-md-inline">@User.Identity.Name</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li class="dropdown-header">
                                    <strong>@User.Identity.Name</strong>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="bi bi-person"></i> Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#">
                                        <i class="bi bi-gear"></i> Settings
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Register">
                                <i class="bi bi-person-plus"></i> Register
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main role="main" class="main-content">
        @RenderBody()
    </main>

    <!-- Modern Footer - Redesigned -->
    <footer class="footer mt-auto">
        <div class="footer-main">
            <div class="container py-5">
                <div class="row g-4">
                    <!-- Brand Column -->
                    <div class="col-lg-4 col-md-6">
                        <div class="footer-brand mb-4">
                            <div class="footer-logo d-flex align-items-center mb-3">
                                <div class="footer-logo-icon me-2">
                                    <i class="bi bi-receipt"></i>
                                </div>
                                <span class="footer-logo-text">Invoice Automation</span>
                            </div>
                            <p class="footer-description">
                                Streamline your invoice processing with intelligent OCR, automated workflows,
                                and seamless accounting integration.
                            </p>
                            @if (User.Identity?.IsAuthenticated != true)
                            {
                                <a asp-controller="Account" asp-action="Register" class="btn btn-primary btn-sm mt-3">
                                    <i class="bi bi-rocket-takeoff"></i> Get Started Free
                                </a>
                            }
                        </div>
                    </div>

                    <!-- Product Links -->
                    <div class="col-lg-2 col-md-6 col-6">
                        <h6 class="footer-heading">Product</h6>
                        <ul class="footer-links">
                            <li><a asp-controller="Home" asp-action="Index">Features</a></li>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li><a asp-controller="Home" asp-action="Dashboard">Dashboard</a></li>
                                <li><a asp-controller="Company" asp-action="Index">Companies</a></li>
                            }
                            else
                            {
                                <li><a asp-controller="Account" asp-action="Register">Pricing</a></li>
                                <li><a href="#">Integrations</a></li>
                            }
                        </ul>
                    </div>

                    <!-- Company Links -->
                    <div class="col-lg-2 col-md-6 col-6">
                        <h6 class="footer-heading">Company</h6>
                        <ul class="footer-links">
                            <li><a href="#">About Us</a></li>
                            <li><a href="#">Contact</a></li>
                            <li><a href="#">Careers</a></li>
                            <li><a href="#">Blog</a></li>
                        </ul>
                    </div>

                    <!-- Resources Links -->
                    <div class="col-lg-2 col-md-6 col-6">
                        <h6 class="footer-heading">Resources</h6>
                        <ul class="footer-links">
                            <li><a href="#">Documentation</a></li>
                            <li><a href="#">API Reference</a></li>
                            <li><a href="#">Support</a></li>
                            <li><a href="#">FAQ</a></li>
                        </ul>
                    </div>

                    <!-- Legal Links -->
                    <div class="col-lg-2 col-md-6 col-6">
                        <h6 class="footer-heading">Legal</h6>
                        <ul class="footer-links">
                            <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                            <li><a href="#">Terms of Service</a></li>
                            <li><a href="#">Security</a></li>
                            <li><a href="#">Compliance</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer Bottom -->
        <div class="footer-bottom">
            <div class="container py-3">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start mb-2 mb-md-0">
                        <p class="footer-copyright mb-0">
                            &copy; 2026 Invoice Automation System. All rights reserved.
                        </p>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <div class="footer-tech-stack">
                            <span class="tech-item" title="ASP.NET Core">
                                <i class="bi bi-code-square"></i> ASP.NET
                            </span>
                            <span class="tech-item" title="MySQL Database">
                                <i class="bi bi-database"></i> MySQL
                            </span>
                            <span class="tech-item" title="Tesseract OCR">
                                <i class="bi bi-eye"></i> OCR
                            </span>
                            <span class="tech-item" title="Indraaj Integration">
                                <i class="bi bi-link-45deg"></i> Indraaj
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/website.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
