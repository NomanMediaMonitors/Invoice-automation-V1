<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Invoice Automation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/website.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- Authenticated: Sidebar Layout -->
        <div class="app-layout">
            <div class="sidebar-overlay" id="sidebarOverlay"></div>

            <aside class="app-sidebar" id="appSidebar">
                <a class="sidebar-brand" asp-controller="Home" asp-action="Dashboard">
                    <div class="sidebar-brand-icon">
                        <i class="bi bi-receipt"></i>
                    </div>
                    <div>
                        <span class="sidebar-brand-text">Invoice Automation</span>
                        <span class="sidebar-brand-sub">Enterprise Platform</span>
                    </div>
                </a>

                <nav class="sidebar-nav">
                    <p class="sidebar-nav-label">Main</p>
                    <a class="sidebar-nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Dashboard" ? "active" : "")"
                       asp-controller="Home" asp-action="Dashboard">
                        <i class="bi bi-grid-1x2"></i>
                        <span>Dashboard</span>
                    </a>
                    <a class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Company" ? "active" : "")"
                       asp-controller="Company" asp-action="Index">
                        <i class="bi bi-building"></i>
                        <span>Companies</span>
                    </a>
                    <a class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Invoice" ? "active" : "")"
                       asp-controller="Invoice" asp-action="SelectCompany">
                        <i class="bi bi-file-text"></i>
                        <span>Invoices</span>
                    </a>
                    <a class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Vendor" ? "active" : "")"
                       asp-controller="Vendor" asp-action="SelectCompany">
                        <i class="bi bi-truck"></i>
                        <span>Vendors</span>
                    </a>

                    <p class="sidebar-nav-label">Account</p>
                    <a class="sidebar-nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" ? "active" : "")"
                       asp-controller="Profile" asp-action="Index">
                        <i class="bi bi-person"></i>
                        <span>My Profile</span>
                    </a>
                    <a class="sidebar-nav-item" asp-controller="Profile" asp-action="ChangePassword">
                        <i class="bi bi-shield-lock"></i>
                        <span>Security</span>
                    </a>
                </nav>

                <div class="sidebar-footer">
                    <div class="sidebar-user">
                        <div class="sidebar-user-avatar">
                            <i class="bi bi-person-fill"></i>
                        </div>
                        <div class="sidebar-user-info">
                            <span class="sidebar-user-name">@User.Identity?.Name</span>
                            <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
                                <button type="submit" class="sidebar-user-link" style="background:none;border:none;padding:0;cursor:pointer;">
                                    Sign out
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </aside>

            <div class="app-content">
                <header class="app-topbar">
                    <div class="topbar-left">
                        <button class="sidebar-toggle" id="sidebarToggle" type="button">
                            <i class="bi bi-list"></i>
                        </button>
                        <span class="topbar-breadcrumb">@ViewData["Title"]</span>
                    </div>
                    <div class="topbar-right">
                        <div class="dropdown">
                            <button class="topbar-user-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="topbar-user-avatar">
                                    <i class="bi bi-person-fill" style="font-size: 0.75rem;"></i>
                                </div>
                                <span class="d-none d-sm-inline">@User.Identity?.Name</span>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li class="dropdown-header">Signed in as <strong>@User.Identity?.Name</strong></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                                        <i class="bi bi-person"></i> Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Profile" asp-action="ChangePassword">
                                        <i class="bi bi-shield-lock"></i> Security
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="bi bi-box-arrow-right"></i> Sign out
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                </header>

                <main class="app-main animate-fadeIn" role="main">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        <!-- Unauthenticated: Public Layout -->
        <div class="public-layout">
            <nav class="navbar navbar-expand-lg sticky-top">
                <div class="container">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <div class="brand-icon">
                            <i class="bi bi-receipt"></i>
                        </div>
                        <div class="brand-text">
                            <span class="brand-name">Invoice Automation</span>
                        </div>
                    </a>

                    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarPublic">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarPublic">
                        <ul class="navbar-nav ms-auto align-items-center gap-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item ms-lg-2">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Sign in</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary btn-sm" asp-controller="Account" asp-action="Register">
                                    Get Started
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <main class="public-content" role="main">
                @RenderBody()
            </main>

            <footer class="footer">
                <div class="footer-main">
                    <div class="container">
                        <div class="row g-4">
                            <div class="col-lg-4 col-md-6">
                                <div class="footer-brand">
                                    <div class="footer-logo">
                                        <div class="footer-logo-icon">
                                            <i class="bi bi-receipt"></i>
                                        </div>
                                        <span class="footer-logo-text">Invoice Automation</span>
                                    </div>
                                    <p class="footer-description">
                                        Streamline invoice processing with OCR, automated workflows, and accounting integration.
                                    </p>
                                </div>
                            </div>
                            <div class="col-lg-2 col-md-6 col-6">
                                <h6 class="footer-heading">Product</h6>
                                <ul class="footer-links">
                                    <li><a asp-controller="Home" asp-action="Index">Features</a></li>
                                    <li><a asp-controller="Account" asp-action="Register">Get Started</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-2 col-md-6 col-6">
                                <h6 class="footer-heading">Legal</h6>
                                <ul class="footer-links">
                                    <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                                    <li><a href="#">Terms of Service</a></li>
                                </ul>
                            </div>
                            <div class="col-lg-4 col-md-6">
                                <h6 class="footer-heading">Built with</h6>
                                <div class="footer-tech-stack">
                                    <span class="tech-item"><i class="bi bi-code-square"></i> ASP.NET Core</span>
                                    <span class="tech-item"><i class="bi bi-database"></i> MySQL</span>
                                    <span class="tech-item"><i class="bi bi-eye"></i> Tesseract OCR</span>
                                    <span class="tech-item"><i class="bi bi-link-45deg"></i> Indraaj</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="footer-bottom">
                    <div class="container">
                        <p class="footer-copyright text-center">
                            &copy; 2026 Invoice Automation System. All rights reserved.
                        </p>
                    </div>
                </div>
            </footer>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    /* ===================================================
       Searchable COA Select â€” self-contained, no CDN
       =================================================== */
    window.initCoaSelects = (function () {
        function initOne(el) {
            if (el.dataset.coaInit) return;
            el.dataset.coaInit = '1';

            var allOpts = Array.from(el.options);
            var isSmall = el.classList.contains('form-select-sm');

            // Wrapper
            var wrapper = document.createElement('div');
            wrapper.className = 'coa-wrapper';
            if (el.classList.contains('li-account')) wrapper.classList.add('li-account-wrap');
            el.parentNode.insertBefore(wrapper, el);
            el.classList.add('coa-native-select');
            wrapper.appendChild(el);

            // Visible control
            var control = document.createElement('div');
            control.className = 'coa-control' + (isSmall ? ' coa-sm' : '');
            control.setAttribute('tabindex', '0');

            var ctrlText = document.createElement('span');
            ctrlText.className = 'coa-control-text coa-placeholder';
            control.appendChild(ctrlText);

            var arrow = document.createElement('i');
            arrow.className = 'coa-control-arrow bi bi-chevron-down';
            control.appendChild(arrow);

            wrapper.insertBefore(control, el);

            // Dropdown panel
            var dropdown = document.createElement('div');
            dropdown.className = 'coa-dropdown';

            var searchWrap = document.createElement('div');
            searchWrap.className = 'coa-search-wrap';
            var searchInput = document.createElement('input');
            searchInput.type = 'text';
            searchInput.className = 'coa-search-input';
            searchInput.placeholder = 'Type to search\u2026';
            searchInput.autocomplete = 'off';
            searchWrap.appendChild(searchInput);
            dropdown.appendChild(searchWrap);

            var optsList = document.createElement('div');
            optsList.className = 'coa-options';
            dropdown.appendChild(optsList);

            wrapper.appendChild(dropdown);

            var isOpen = false;
            var hiIdx = -1;

            function syncDisplay() {
                var sel = el.options[el.selectedIndex];
                if (sel && sel.value) {
                    ctrlText.textContent = sel.text;
                    ctrlText.classList.remove('coa-placeholder');
                } else {
                    var ph = allOpts.find(function (o) { return !o.value; });
                    ctrlText.textContent = ph ? ph.text : '-- Select --';
                    ctrlText.classList.add('coa-placeholder');
                }
            }
            syncDisplay();

            function renderOpts(filter) {
                optsList.innerHTML = '';
                hiIdx = -1;
                var lf = (filter || '').toLowerCase();
                var visible = allOpts.filter(function (o) {
                    return !lf || o.text.toLowerCase().indexOf(lf) !== -1;
                });
                if (!visible.length) {
                    var empty = document.createElement('div');
                    empty.className = 'coa-no-results';
                    empty.textContent = 'No results found';
                    optsList.appendChild(empty);
                    return;
                }
                visible.forEach(function (opt) {
                    var item = document.createElement('div');
                    var cls = 'coa-option';
                    if (!opt.value) cls += ' coa-placeholder-opt';
                    if (opt.value === el.value) cls += ' coa-selected';
                    item.className = cls;
                    item.textContent = opt.text;
                    item.dataset.val = opt.value;
                    item.addEventListener('mousedown', function (e) {
                        e.preventDefault();
                        pick(opt.value);
                    });
                    optsList.appendChild(item);
                });
                var selItem = optsList.querySelector('.coa-selected');
                if (selItem) selItem.scrollIntoView({ block: 'nearest' });
            }

            function pick(value) {
                el.value = value;
                syncDisplay();
                close();
                el.dispatchEvent(new Event('change', { bubbles: true }));
            }

            function open() {
                searchInput.value = '';
                renderOpts('');
                dropdown.classList.add('open');
                control.classList.add('open');
                isOpen = true;
                searchInput.focus();
            }

            function close() {
                dropdown.classList.remove('open');
                control.classList.remove('open');
                isOpen = false;
            }

            control.addEventListener('click', function () { isOpen ? close() : open(); });
            control.addEventListener('keydown', function (e) {
                if (e.key === 'Enter' || e.key === ' ' || e.key === 'ArrowDown') { e.preventDefault(); open(); }
            });

            searchInput.addEventListener('input', function () { renderOpts(this.value); });
            searchInput.addEventListener('keydown', function (e) {
                var items = Array.from(optsList.querySelectorAll('.coa-option'));
                if (e.key === 'Escape') { e.preventDefault(); close(); control.focus(); }
                else if (e.key === 'ArrowDown') { e.preventDefault(); hiIdx = Math.min(hiIdx + 1, items.length - 1); highlight(items); }
                else if (e.key === 'ArrowUp')   { e.preventDefault(); hiIdx = Math.max(hiIdx - 1, 0);              highlight(items); }
                else if (e.key === 'Enter') {
                    e.preventDefault();
                    if (hiIdx >= 0 && items[hiIdx]) { pick(items[hiIdx].dataset.val); control.focus(); }
                }
            });

            function highlight(items) {
                items.forEach(function (it, i) { it.classList.toggle('coa-highlighted', i === hiIdx); });
                if (hiIdx >= 0 && items[hiIdx]) items[hiIdx].scrollIntoView({ block: 'nearest' });
            }

            document.addEventListener('click', function (e) {
                if (isOpen && !wrapper.contains(e.target)) close();
            });

            // Expose sync for external updates
            el._coaUpdate = syncDisplay;
        }

        return function (root) {
            (root || document).querySelectorAll('select.coa-select:not([data-coa-init])').forEach(initOne);
        };
    })();
    </script>
    <script>
        (function() {
            var toggle = document.getElementById('sidebarToggle');
            var sidebar = document.getElementById('appSidebar');
            var overlay = document.getElementById('sidebarOverlay');
            if (toggle && sidebar && overlay) {
                toggle.addEventListener('click', function() {
                    sidebar.classList.toggle('show');
                    overlay.classList.toggle('show');
                });
                overlay.addEventListener('click', function() {
                    sidebar.classList.remove('show');
                    overlay.classList.remove('show');
                });
            }
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
