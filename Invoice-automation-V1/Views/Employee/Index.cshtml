@model List<InvoiceAutomation.Core.DTOs.Employee.EmployeeListDto>
@{
    ViewData["Title"] = "Employees";
    var companyId = (Guid)ViewBag.CompanyId;
    var companyName = (string)ViewBag.CompanyName;
    var canManage = (bool)ViewBag.CanManage;
    var currentUserId = (Guid)ViewBag.CurrentUserId;
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h2 class="fw-bold mb-1">Employees</h2>
            <p class="text-muted mb-0">@companyName</p>
        </div>
        <div class="d-flex gap-2">
            @if (canManage)
            {
                <a asp-action="Invite" asp-route-companyId="@companyId" class="btn btn-primary">
                    <i class="bi bi-person-plus me-1"></i> Invite Employee
                </a>
            }
            <a asp-controller="Company" asp-action="Details" asp-route-id="@companyId" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back
            </a>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-1"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-1"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="card">
        <div class="card-body">
            <div class="empty-state">
                <i class="bi bi-people"></i>
                <h4>No Employees Yet</h4>
                <p>Start building your team by inviting employees.</p>
                @if (canManage)
                {
                    <a asp-action="Invite" asp-route-companyId="@companyId" class="btn btn-primary">
                        <i class="bi bi-person-plus me-1"></i> Invite First Employee
                    </a>
                }
            </div>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Role</th>
                            <th>Status</th>
                            <th>Joined</th>
                            <th>Last Login</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model.OrderByDescending(e => e.IsActive).ThenBy(e => e.FullName))
                        {
                            <tr class="@(!employee.IsActive ? "table-secondary" : "")">
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (!string.IsNullOrEmpty(employee.AvatarUrl))
                                        {
                                            <img src="@employee.AvatarUrl" alt="@employee.FullName" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle d-flex align-items-center justify-content-center me-2 text-white fw-semibold" style="width: 40px; height: 40px; background-color: #2563eb; font-size: 0.875rem;">
                                                @employee.FullName.FirstOrDefault()
                                            </div>
                                        }
                                        <div>
                                            <div class="fw-semibold">
                                                @employee.FullName
                                                @if (employee.UserId == currentUserId)
                                                {
                                                    <span class="badge bg-info-subtle text-info-emphasis ms-1">You</span>
                                                }
                                                @if (employee.IsUserDefault)
                                                {
                                                    <span class="badge bg-success-subtle text-success-emphasis ms-1">Default</span>
                                                }
                                            </div>
                                            <small class="text-muted">@employee.Email</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge bg-primary-subtle text-primary-emphasis">@employee.Role</span>
                                </td>
                                <td>
                                    @if (employee.IsActive)
                                    {
                                        <span class="badge bg-success-subtle text-success-emphasis">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary-subtle text-secondary-emphasis">Inactive</span>
                                    }
                                </td>
                                <td>
                                    <small>@employee.JoinedAt.ToString("MMM dd, yyyy")</small>
                                </td>
                                <td>
                                    @if (employee.LastLoginAt.HasValue)
                                    {
                                        <small>@employee.LastLoginAt.Value.ToString("MMM dd, yyyy")</small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Never</small>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-companyId="@companyId" asp-route-userId="@employee.UserId" class="btn btn-outline-primary">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        @if (canManage && employee.UserId != currentUserId)
                                        {
                                            <a asp-action="UpdateRole" asp-route-companyId="@companyId" asp-route-userId="@employee.UserId" class="btn btn-outline-secondary">
                                                <i class="bi bi-shield"></i>
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="p-3 border-top bg-light">
                <p class="text-muted mb-0 small">
                    Total: <strong>@Model.Count</strong> employees
                    (@Model.Count(e => e.IsActive) active, @Model.Count(e => !e.IsActive) inactive)
                </p>
            </div>
        </div>
    </div>
}
