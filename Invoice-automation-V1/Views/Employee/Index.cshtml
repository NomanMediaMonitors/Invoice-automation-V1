@model List<InvoiceAutomation.Core.DTOs.Employee.EmployeeListDto>
@{
    ViewData["Title"] = "Employees";
    var companyId = (Guid)ViewBag.CompanyId;
    var companyName = (string)ViewBag.CompanyName;
    var canManage = (bool)ViewBag.CanManage;
    var currentUserId = (Guid)ViewBag.CurrentUserId;
}

<div class="container animate-fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-gradient mb-1">
                <i class="bi bi-people"></i> Employees
            </h2>
            <p class="text-muted mb-0">@companyName</p>
        </div>
        <div class="d-flex gap-2">
            @if (canManage)
            {
                <a asp-action="Invite" asp-route-companyId="@companyId" class="btn btn-primary">
                    <i class="bi bi-person-plus"></i> Invite Employee
                </a>
            }
            <a asp-controller="Company" asp-action="Details" asp-route-id="@companyId" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-people" style="font-size: 4rem; color: var(--secondary-color);"></i>
                <h4 class="mt-3 mb-2">No Employees Yet</h4>
                <p class="text-muted mb-4">Start building your team by inviting employees.</p>
                @if (canManage)
                {
                    <a asp-action="Invite" asp-route-companyId="@companyId" class="btn btn-primary btn-lg">
                        <i class="bi bi-person-plus"></i> Invite First Employee
                    </a>
                }
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-lg">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>Employee</th>
                                <th>Role</th>
                                <th>Status</th>
                                <th>Joined</th>
                                <th>Last Login</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model.OrderByDescending(e => e.IsActive).ThenBy(e => e.FullName))
                            {
                                <tr class="@(!employee.IsActive ? "table-secondary" : "")">
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(employee.AvatarUrl))
                                            {
                                                <img src="@employee.AvatarUrl" alt="@employee.FullName" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                                    <strong>@employee.FullName.FirstOrDefault()</strong>
                                                </div>
                                            }
                                            <div>
                                                <div class="fw-bold">
                                                    @employee.FullName
                                                    @if (employee.UserId == currentUserId)
                                                    {
                                                        <span class="badge bg-info ms-1">You</span>
                                                    }
                                                    @if (employee.IsUserDefault)
                                                    {
                                                        <span class="badge bg-success ms-1">Default</span>
                                                    }
                                                </div>
                                                <small class="text-muted">@employee.Email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@employee.Role</span>
                                    </td>
                                    <td>
                                        @if (employee.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@employee.JoinedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                    <td>
                                        @if (employee.LastLoginAt.HasValue)
                                        {
                                            <small>@employee.LastLoginAt.Value.ToString("MMM dd, yyyy")</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">Never</small>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-companyId="@companyId" asp-route-userId="@employee.UserId" class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            @if (canManage && employee.UserId != currentUserId)
                                            {
                                                <a asp-action="UpdateRole" asp-route-companyId="@companyId" asp-route-userId="@employee.UserId" class="btn btn-outline-secondary">
                                                    <i class="bi bi-shield"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted mb-0">
                        <i class="bi bi-info-circle"></i>
                        Total: <strong>@Model.Count</strong> employees
                        (@Model.Count(e => e.IsActive) active, @Model.Count(e => !e.IsActive) inactive)
                    </p>
                </div>
            </div>
        </div>
    }
</div>
