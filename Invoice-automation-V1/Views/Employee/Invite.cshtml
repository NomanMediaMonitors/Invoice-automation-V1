@model InvoiceAutomation.Core.DTOs.Employee.InviteEmployeeDto
@{
    ViewData["Title"] = "Invite Employee";
    var companyId = (Guid)ViewBag.CompanyId;
    var companyName = (string)ViewBag.CompanyName;
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h2 class="fw-bold mb-1">Invite Employee</h2>
            <p class="text-muted mb-0">@companyName</p>
        </div>
        <a asp-action="Index" asp-route-companyId="@companyId" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Employees
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-1"></i>
            <strong>How it works:</strong>
            <ul class="mb-0 mt-2 small">
                <li>If the email is already registered, they will be added to your company immediately</li>
                <li>If it is a new email, we will create an account and send them an invitation with a temporary password</li>
                <li>The employee will receive an email notification</li>
            </ul>
        </div>

        <div class="card">
            <div class="card-body">
                <form asp-action="Invite" method="post">
                    <input type="hidden" asp-for="CompanyId" value="@companyId" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address <span class="text-danger">*</span></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter employee email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Phone Number</label>
                        <input asp-for="Phone" class="form-control" placeholder="Enter phone number (optional)" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Role" class="form-label">Role <span class="text-danger">*</span></label>
                        <select asp-for="Role" class="form-select">
                            <option value="">Select a role...</option>
                            <option value="Manager">Manager - Can manage invoices and view reports</option>
                            <option value="Accountant">Accountant - Can create and edit invoices</option>
                            <option value="Approver">Approver - Can approve invoices</option>
                            <option value="Viewer">Viewer - Can only view invoices</option>
                            <option value="Admin">Admin - Full company management access</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                        <small class="text-muted">Choose the appropriate role based on the employee's responsibilities</small>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" asp-route-companyId="@companyId" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-send me-1"></i> Send Invitation
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
