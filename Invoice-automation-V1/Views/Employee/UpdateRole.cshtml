@model InvoiceAutomation.Core.DTOs.Employee.UpdateEmployeeRoleDto
@{
    ViewData["Title"] = "Update Employee Role";
    var companyId = (Guid)ViewBag.CompanyId;
    var companyName = (string)ViewBag.CompanyName;
    var employeeName = (string)ViewBag.EmployeeName;
    var userId = (Guid)ViewBag.UserId;
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="flex justify-between items-center flex-wrap gap-3">
        <div>
            <h2 class="font-bold mb-1">Update Employee Role</h2>
            <p class="text-muted mb-0">@employeeName &middot; @companyName</p>
        </div>
        <a asp-action="Details" asp-route-companyId="@companyId" asp-route-userId="@userId" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Details
        </a>
    </div>
</div>

<div class="row justify-center">
    <div class="col-lg-6">
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle me-1"></i>
            <strong>Role Descriptions:</strong>
            <ul class="mb-0 mt-2 small">
                <li><strong>Admin:</strong> Full access to company management</li>
                <li><strong>Manager:</strong> Can manage invoices and view reports</li>
                <li><strong>Accountant:</strong> Can create and edit invoices</li>
                <li><strong>Approver:</strong> Can approve pending invoices</li>
                <li><strong>Viewer:</strong> Can only view invoices (read-only)</li>
            </ul>
        </div>

        <div class="card">
            <div class="card-body">
                <form asp-action="UpdateRole" asp-route-companyId="@companyId" asp-route-userId="@userId" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="mb-4">
                        <label asp-for="Role" class="form-label">Select New Role <span class="text-danger">*</span></label>
                        <select asp-for="Role" class="form-select">
                            <option value="">Select a role...</option>
                            <option value="Admin">Admin - Full company management</option>
                            <option value="Manager">Manager - Manage invoices and reports</option>
                            <option value="Accountant">Accountant - Create and edit invoices</option>
                            <option value="Approver">Approver - Approve invoices</option>
                            <option value="Viewer">Viewer - Read-only access</option>
                        </select>
                        <span asp-validation-for="Role" class="text-danger"></span>
                    </div>

                    <div class="flex justify-end gap-2">
                        <a asp-action="Details" asp-route-companyId="@companyId" asp-route-userId="@userId" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i> Update Role
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
