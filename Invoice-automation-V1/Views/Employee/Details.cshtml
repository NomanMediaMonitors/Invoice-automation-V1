@model InvoiceAutomation.Core.DTOs.Employee.EmployeeDetailsDto
@{
    ViewData["Title"] = "Employee Details";
    var companyId = (Guid)ViewBag.CompanyId;
    var companyName = (string)ViewBag.CompanyName;
    var canManage = (bool)ViewBag.CanManage;
    var currentUserId = (Guid)ViewBag.CurrentUserId;
    var isCurrentUser = Model.UserId == currentUserId;
}

<div class="container animate-fadeIn">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-lg mb-4">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <div class="d-flex align-items-center">
                            @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                            {
                                <img src="@Model.AvatarUrl" alt="@Model.FullName" class="rounded-circle me-3" style="width: 80px; height: 80px; object-fit: cover;">
                            }
                            else
                            {
                                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-3" style="width: 80px; height: 80px; font-size: 2rem;">
                                    <strong>@Model.FullName.FirstOrDefault()</strong>
                                </div>
                            }
                            <div>
                                <h2 class="fw-bold mb-1">
                                    @Model.FullName
                                    @if (isCurrentUser)
                                    {
                                        <span class="badge bg-info">You</span>
                                    }
                                </h2>
                                <p class="text-muted mb-0">@companyName</p>
                            </div>
                        </div>
                        @if (canManage && !isCurrentUser)
                        {
                            <a asp-action="UpdateRole" asp-route-companyId="@companyId" asp-route-userId="@Model.UserId" class="btn btn-outline-secondary">
                                <i class="bi bi-shield"></i> Update Role
                            </a>
                        }
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="text-muted small">Email</label>
                                <p class="mb-0">@Model.Email</p>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="text-muted small">Phone</label>
                                <p class="mb-0">@(Model.Phone ?? "N/A")</p>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="text-muted small">Role</label>
                                <p class="mb-0"><span class="badge bg-primary">@Model.Role</span></p>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="text-muted small">Status</label>
                                <p class="mb-0">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                    @if (Model.IsUserDefault)
                                    {
                                        <span class="badge bg-info ms-1">Default Company</span>
                                    }
                                </p>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="text-muted small">Joined</label>
                                <p class="mb-0">@Model.JoinedAt.ToString("MMMM dd, yyyy")</p>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="info-item">
                                <label class="text-muted small">Last Login</label>
                                <p class="mb-0">
                                    @if (Model.LastLoginAt.HasValue)
                                    {
                                        @Model.LastLoginAt.Value.ToString("MMMM dd, yyyy HH:mm")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never logged in</span>
                                    }
                                </p>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.InvitedByName))
                        {
                            <div class="col-md-6 mb-3">
                                <div class="info-item">
                                    <label class="text-muted small">Invited By</label>
                                    <p class="mb-0">@Model.InvitedByName</p>
                                </div>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="info-item">
                                    <label class="text-muted small">Invited At</label>
                                    <p class="mb-0">@Model.InvitedAt?.ToString("MMMM dd, yyyy")</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            @if (canManage && !isCurrentUser)
            {
                <div class="card shadow-lg mb-4">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="bi bi-gear"></i> Quick Actions
                        </h5>

                        @if (Model.IsActive)
                        {
                            <form asp-action="Deactivate" asp-route-companyId="@companyId" asp-route-userId="@Model.UserId" method="post" class="mb-2">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-warning w-100" onclick="return confirm('Are you sure you want to deactivate this employee?')">
                                    <i class="bi bi-pause-circle"></i> Deactivate Employee
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Activate" asp-route-companyId="@companyId" asp-route-userId="@Model.UserId" method="post" class="mb-2">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-play-circle"></i> Activate Employee
                                </button>
                            </form>
                        }

                        <hr />

                        <form asp-action="Remove" asp-route-companyId="@companyId" asp-route-userId="@Model.UserId" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to remove this employee from the company? This action cannot be undone.')">
                                <i class="bi bi-trash"></i> Remove from Company
                            </button>
                        </form>
                    </div>
                </div>
            }

            <div class="text-center">
                <a asp-action="Index" asp-route-companyId="@companyId" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Employees
                </a>
            </div>
        </div>
    </div>
</div>

<style>
.info-item {
    padding: 0.5rem;
    background: #f8f9fa;
    border-radius: 0.375rem;
}

.info-item label {
    font-weight: 600;
    margin-bottom: 0.25rem;
    display: block;
}
</style>
