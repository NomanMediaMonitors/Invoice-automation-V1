@model InvoiceAutomation.Core.DTOs.Employee.EmployeeDetailsDto
@{
    ViewData["Title"] = "Employee Details";
    var companyId = (Guid)ViewBag.CompanyId;
    var companyName = (string)ViewBag.CompanyName;
    var canManage = (bool)ViewBag.CanManage;
    var currentUserId = (Guid)ViewBag.CurrentUserId;
    var isCurrentUser = Model.UserId == currentUserId;
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div class="d-flex align-items-center gap-3">
            @if (!string.IsNullOrEmpty(Model.AvatarUrl))
            {
                <img src="@Model.AvatarUrl" alt="@Model.FullName" class="rounded-circle" style="width: 64px; height: 64px; object-fit: cover;">
            }
            else
            {
                <div class="rounded-circle d-flex align-items-center justify-content-center text-white fw-bold" style="width: 64px; height: 64px; background-color: #2563eb; font-size: 1.5rem;">
                    @Model.FullName.FirstOrDefault()
                </div>
            }
            <div>
                <h2 class="fw-bold mb-1">
                    @Model.FullName
                    @if (isCurrentUser)
                    {
                        <span class="badge bg-info-subtle text-info-emphasis">You</span>
                    }
                </h2>
                <p class="text-muted mb-0">@companyName</p>
            </div>
        </div>
        <div class="d-flex gap-2">
            @if (canManage && !isCurrentUser)
            {
                <a asp-action="UpdateRole" asp-route-companyId="@companyId" asp-route-userId="@Model.UserId" class="btn btn-outline-primary">
                    <i class="bi bi-shield me-1"></i> Update Role
                </a>
            }
            <a asp-action="Index" asp-route-companyId="@companyId" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Back to Employees
            </a>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-1"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-1"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <h6 class="fw-semibold text-muted text-uppercase small mb-3">Employee Information</h6>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Email</span>
                            <span class="info-value">@Model.Email</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Phone</span>
                            <span class="info-value">@(Model.Phone ?? "N/A")</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Role</span>
                            <span class="info-value"><span class="badge bg-primary-subtle text-primary-emphasis">@Model.Role</span></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Status</span>
                            <span class="info-value">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success-subtle text-success-emphasis">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary-subtle text-secondary-emphasis">Inactive</span>
                                }
                                @if (Model.IsUserDefault)
                                {
                                    <span class="badge bg-info-subtle text-info-emphasis ms-1">Default Company</span>
                                }
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Joined</span>
                            <span class="info-value">@Model.JoinedAt.ToString("MMMM dd, yyyy")</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Last Login</span>
                            <span class="info-value">
                                @if (Model.LastLoginAt.HasValue)
                                {
                                    @Model.LastLoginAt.Value.ToString("MMMM dd, yyyy HH:mm")
                                }
                                else
                                {
                                    <span class="text-muted">Never logged in</span>
                                }
                            </span>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.InvitedByName))
                    {
                        <div class="col-md-6">
                            <div class="info-row">
                                <span class="info-label">Invited By</span>
                                <span class="info-value">@Model.InvitedByName</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-row">
                                <span class="info-label">Invited At</span>
                                <span class="info-value">@Model.InvitedAt?.ToString("MMMM dd, yyyy")</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        @if (canManage && !isCurrentUser)
        {
            <div class="card mb-4">
                <div class="card-body">
                    <h6 class="fw-semibold mb-3">Quick Actions</h6>
                    <div class="d-grid gap-2">
                        @if (Model.IsActive)
                        {
                            <form asp-action="Deactivate" asp-route-companyId="@companyId" asp-route-userId="@Model.UserId" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-warning w-100" onclick="return confirm('Are you sure you want to deactivate this employee?')">
                                    <i class="bi bi-pause-circle me-1"></i> Deactivate Employee
                                </button>
                            </form>
                        }
                        else
                        {
                            <form asp-action="Activate" asp-route-companyId="@companyId" asp-route-userId="@Model.UserId" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="bi bi-play-circle me-1"></i> Activate Employee
                                </button>
                            </form>
                        }
                        <hr />
                        <form asp-action="Remove" asp-route-companyId="@companyId" asp-route-userId="@Model.UserId" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to remove this employee from the company? This action cannot be undone.')">
                                <i class="bi bi-trash me-1"></i> Remove from Company
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
