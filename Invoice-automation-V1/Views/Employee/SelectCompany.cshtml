@model List<InvoiceAutomation.Core.DTOs.Company.CompanyDropdownDto>
@{
    ViewData["Title"] = ViewData["Title"] ?? "Select Company - Employees";
    var targetAction = ViewData["TargetAction"]?.ToString() ?? "Index";
    var targetController = ViewData["TargetController"]?.ToString() ?? "Employee";
    var sectionTitle = ViewData["SectionTitle"]?.ToString() ?? "Employees";
    var sectionDescription = ViewData["SectionDescription"]?.ToString() ?? "Select a company to manage its employees";
    var sectionIcon = ViewData["SectionIcon"]?.ToString() ?? "bi-people";
}

<div class="page-header">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h2 class="page-title">
                <i class="bi @sectionIcon me-2"></i>@sectionTitle
            </h2>
            <p class="page-subtitle mb-0">@sectionDescription</p>
        </div>
        <a asp-controller="Home" asp-action="Dashboard" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Dashboard
        </a>
    </div>
</div>

<div class="row g-3">
    @foreach (var company in Model)
    {
        <div class="col-md-6 col-lg-4">
            <a asp-controller="@targetController" asp-action="@targetAction" asp-route-companyId="@company.Id"
               class="text-decoration-none d-block">
                <div class="card h-100 hover-card" style="transition: all 0.2s ease; cursor: pointer;">
                    <div class="card-body">
                        <div class="d-flex align-items-center gap-3 mb-3">
                            <div class="stat-card-icon" style="background-color: var(--primary-50); color: var(--primary-color);">
                                <i class="bi bi-building"></i>
                            </div>
                            <div>
                                <h5 class="mb-0" style="font-size: 0.9375rem; color: var(--text-primary);">
                                    @company.Name
                                </h5>
                                <small style="color: var(--text-tertiary);">NTN: @company.Ntn</small>
                            </div>
                        </div>

                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center gap-2">
                                <span class="badge bg-primary">@company.Role</span>
                                @if (company.IsUserDefault)
                                {
                                    <span class="badge bg-success">Default</span>
                                }
                            </div>
                            <i class="bi bi-arrow-right" style="color: var(--primary-color); font-size: 1.1rem;"></i>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>
