@model Invoice_automation_V1.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="container-fluid animate-fadeIn">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header">
                <div class="d-flex justify-content-between align-items-center flex-wrap">
                    <div>
                        <div class="page-title">
                            <i class="bi bi-person-circle"></i>
                            <h2 class="fw-bold mb-0">My Profile</h2>
                        </div>
                        <p class="page-subtitle mb-0">Manage your account settings and preferences</p>
                    </div>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Warning"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["Warning"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row g-4">
        <!-- Profile Card -->
        <div class="col-lg-4">
            <div class="card profile-card">
                <div class="card-body text-center p-4">
                    <div class="profile-avatar mb-3">
                        @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                        {
                            <img src="@Model.AvatarUrl" alt="@Model.FullName" class="avatar-image" />
                        }
                        else
                        {
                            <div class="avatar-placeholder">
                                <i class="bi bi-person-circle"></i>
                            </div>
                        }
                    </div>

                    <h3 class="profile-name">@Model.FullName</h3>
                    <p class="profile-email">
                        @Model.Email
                        @if (Model.EmailConfirmed)
                        {
                            <i class="bi bi-patch-check-fill text-success ms-1" title="Email verified"></i>
                        }
                        else
                        {
                            <i class="bi bi-exclamation-circle text-warning ms-1" title="Email not verified"></i>
                        }
                    </p>

                    @if (!string.IsNullOrEmpty(Model.Phone))
                    {
                        <p class="profile-phone">
                            <i class="bi bi-telephone"></i> @Model.Phone
                        </p>
                    }

                    @if (Model.IsSuperAdmin)
                    {
                        <div class="profile-badge mb-3">
                            <i class="bi bi-shield-fill-check"></i> Super Admin
                        </div>
                    }

                    <div class="profile-meta mt-4">
                        <div class="meta-item">
                            <i class="bi bi-calendar-check"></i>
                            <span>Joined @Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                        </div>
                        @if (Model.LastLoginAt.HasValue)
                        {
                            <div class="meta-item">
                                <i class="bi bi-clock-history"></i>
                                <span>Last login @Model.LastLoginAt.Value.ToString("MMM dd, yyyy")</span>
                            </div>
                        }
                        <div class="meta-item">
                            <i class="bi bi-graph-up"></i>
                            <span>@Model.Stats.DaysActive days active</span>
                        </div>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-action="Edit" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit Profile
                        </a>
                        <a asp-action="ChangePassword" class="btn btn-outline-secondary">
                            <i class="bi bi-key"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Stats & Activity -->
        <div class="col-lg-8">
            <!-- Stats Cards -->
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="stat-mini-card">
                        <div class="stat-mini-icon" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                            <i class="bi bi-building"></i>
                        </div>
                        <div class="stat-mini-content">
                            <div class="stat-mini-value">@Model.Stats.TotalCompanies</div>
                            <div class="stat-mini-label">Companies</div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="stat-mini-card">
                        <div class="stat-mini-icon" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                            <i class="bi bi-truck"></i>
                        </div>
                        <div class="stat-mini-content">
                            <div class="stat-mini-value">@Model.Stats.TotalVendorsCreated</div>
                            <div class="stat-mini-label">Vendors Created</div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="stat-mini-card">
                        <div class="stat-mini-icon" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <div class="stat-mini-content">
                            <div class="stat-mini-value">@Model.Stats.CompaniesAsAdmin</div>
                            <div class="stat-mini-label">Admin Roles</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Account Details -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        Account Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">Full Name</div>
                                <div class="detail-value">@Model.FullName</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">Email Address</div>
                                <div class="detail-value">
                                    @Model.Email
                                    @if (Model.EmailConfirmed)
                                    {
                                        <span class="badge bg-success ms-2">Verified</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning ms-2">Not Verified</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">Phone Number</div>
                                <div class="detail-value">
                                    @if (!string.IsNullOrEmpty(Model.Phone))
                                    {
                                        @Model.Phone
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">Account Type</div>
                                <div class="detail-value">
                                    @if (Model.IsSuperAdmin)
                                    {
                                        <span class="badge bg-danger">Super Admin</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-primary">User</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">Member Since</div>
                                <div class="detail-value">@Model.CreatedAt.ToString("MMMM dd, yyyy")</div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="detail-item">
                                <div class="detail-label">Active Companies</div>
                                <div class="detail-value">@Model.Stats.ActiveCompanies of @Model.Stats.TotalCompanies</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock-history me-2"></i>
                        Recent Activity
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.RecentActivity.Any())
                    {
                        <div class="activity-timeline">
                            @foreach (var activity in Model.RecentActivity)
                            {
                                <div class="activity-timeline-item">
                                    <div class="activity-timeline-icon activity-icon-@activity.IconColor">
                                        <i class="bi bi-@activity.Icon"></i>
                                    </div>
                                    <div class="activity-timeline-content">
                                        <div class="activity-timeline-action">@activity.Action</div>
                                        <div class="activity-timeline-details">@activity.Details</div>
                                        <div class="activity-timeline-time">
                                            <i class="bi bi-clock"></i> @activity.TimeAgo
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state py-4">
                            <i class="bi bi-inbox"></i>
                            <p class="text-muted mb-0">No recent activity</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .container-fluid {
        max-width: 1400px;
        padding: 2rem;
    }

    /* Profile Card */
    .profile-card {
        border: 1px solid var(--border-color);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-md);
    }

    .profile-avatar {
        width: 150px;
        height: 150px;
        margin: 0 auto;
    }

    .avatar-image {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        object-fit: cover;
        border: 4px solid var(--primary-color);
    }

    .avatar-placeholder {
        width: 100%;
        height: 100%;
        border-radius: 50%;
        background: var(--primary-gradient);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 5rem;
        color: white;
    }

    .profile-name {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }

    .profile-email {
        font-size: 1rem;
        color: var(--text-secondary);
        margin-bottom: 0.25rem;
    }

    .profile-phone {
        font-size: 0.938rem;
        color: var(--text-tertiary);
    }

    .profile-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #dc2626;
        border-radius: 50px;
        font-weight: 600;
        font-size: 0.875rem;
    }

    .profile-meta {
        border-top: 1px solid var(--border-color);
        padding-top: 1rem;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: var(--text-secondary);
        margin-bottom: 0.5rem;
    }

    .meta-item i {
        color: var(--primary-color);
    }

    /* Mini Stats */
    .stat-mini-card {
        background: white;
        border: 1px solid var(--border-color);
        border-radius: var(--radius-lg);
        padding: 1.25rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        transition: all var(--transition-base);
    }

    .stat-mini-card:hover {
        box-shadow: var(--shadow-md);
        transform: translateY(-2px);
    }

    .stat-mini-icon {
        width: 50px;
        height: 50px;
        border-radius: var(--radius-md);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.5rem;
        color: white;
        flex-shrink: 0;
    }

    .stat-mini-content {
        flex: 1;
    }

    .stat-mini-value {
        font-size: 1.75rem;
        font-weight: 700;
        color: var(--text-primary);
        line-height: 1;
    }

    .stat-mini-label {
        font-size: 0.813rem;
        color: var(--text-tertiary);
        margin-top: 0.25rem;
    }

    /* Details */
    .detail-item {
        padding: 0.75rem 0;
    }

    .detail-label {
        font-size: 0.813rem;
        font-weight: 600;
        color: var(--text-tertiary);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.25rem;
    }

    .detail-value {
        font-size: 1rem;
        color: var(--text-primary);
        font-weight: 500;
    }

    /* Activity Timeline */
    .activity-timeline {
        position: relative;
        padding-left: 50px;
    }

    .activity-timeline::before {
        content: '';
        position: absolute;
        left: 20px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: var(--border-color);
    }

    .activity-timeline-item {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .activity-timeline-item:last-child {
        margin-bottom: 0;
    }

    .activity-timeline-icon {
        position: absolute;
        left: -30px;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.125rem;
        z-index: 1;
    }

    .activity-icon-primary {
        background: var(--info-light);
        color: var(--primary-color);
    }

    .activity-icon-success {
        background: var(--success-light);
        color: var(--success-color);
    }

    .activity-timeline-action {
        font-weight: 600;
        color: var(--text-primary);
        font-size: 0.938rem;
    }

    .activity-timeline-details {
        font-size: 0.875rem;
        color: var(--text-secondary);
        margin-top: 0.125rem;
    }

    .activity-timeline-time {
        font-size: 0.75rem;
        color: var(--text-tertiary);
        margin-top: 0.375rem;
        display: flex;
        align-items: center;
        gap: 0.25rem;
    }

    .card {
        border: 1px solid var(--border-color);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-sm);
    }

    .card-header {
        background: var(--bg-secondary);
        border-bottom: 1px solid var(--border-color);
        padding: 1rem 1.5rem;
    }

    .card-header h5 {
        font-size: 1.125rem;
        font-weight: 700;
        color: var(--text-primary);
    }

    @media (max-width: 992px) {
        .container-fluid {
            padding: 1rem;
        }
    }
</style>
