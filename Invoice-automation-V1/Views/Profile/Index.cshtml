@model Invoice_automation_V1.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="flex justify-between items-center flex-wrap gap-3">
        <div>
            <h2 class="font-bold mb-1">My Profile</h2>
            <p class="text-muted mb-0">Manage your account settings and preferences</p>
        </div>
        <a asp-action="Edit" class="btn btn-primary">
            <i class="bi bi-pencil me-1"></i> Edit Profile
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-1"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-1"></i> @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-4">
    <!-- Profile Card -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-body text-center p-4">
                <div class="mb-3" style="width: 120px; height: 120px; margin: 0 auto;">
                    @if (!string.IsNullOrEmpty(Model.AvatarUrl))
                    {
                        <img src="@Model.AvatarUrl" alt="@Model.FullName" class="rounded-circle" style="width: 100%; height: 100%; object-fit: cover; border: 3px solid #2563eb;" />
                    }
                    else
                    {
                        <div class="rounded-circle flex items-center justify-center text-white" style="width: 100%; height: 100%; background-color: #2563eb; font-size: 3rem;">
                            <i class="bi bi-person-circle"></i>
                        </div>
                    }
                </div>

                <h4 class="font-bold mb-1">@Model.FullName</h4>
                <p class="text-muted mb-1">
                    @Model.Email
                    @if (Model.EmailConfirmed)
                    {
                        <i class="bi bi-patch-check-fill text-success ms-1" title="Email verified"></i>
                    }
                    else
                    {
                        <i class="bi bi-exclamation-circle text-warning ms-1" title="Email not verified"></i>
                    }
                </p>

                @if (!string.IsNullOrEmpty(Model.Phone))
                {
                    <p class="text-muted small mb-2">
                        <i class="bi bi-telephone me-1"></i> @Model.Phone
                    </p>
                }

                @if (Model.IsSuperAdmin)
                {
                    <div class="mb-3">
                        <span class="badge bg-danger-subtle text-danger-emphasis">
                            <i class="bi bi-shield-fill-check me-1"></i> Super Admin
                        </span>
                    </div>
                }

                <div class="border-top pt-3 mt-3">
                    <div class="flex items-center gap-2 text-muted small mb-2">
                        <i class="bi bi-calendar-check" style="color: #2563eb;"></i>
                        <span>Joined @Model.CreatedAt.ToString("MMM dd, yyyy")</span>
                    </div>
                    @if (Model.LastLoginAt.HasValue)
                    {
                        <div class="flex items-center gap-2 text-muted small mb-2">
                            <i class="bi bi-clock-history" style="color: #2563eb;"></i>
                            <span>Last login @Model.LastLoginAt.Value.ToString("MMM dd, yyyy")</span>
                        </div>
                    }
                    <div class="flex items-center gap-2 text-muted small">
                        <i class="bi bi-graph-up" style="color: #2563eb;"></i>
                        <span>@Model.Stats.DaysActive days active</span>
                    </div>
                </div>

                <div class="grid gap-2 mt-4">
                    <a asp-action="Edit" class="btn btn-outline-primary">
                        <i class="bi bi-pencil me-1"></i> Edit Profile
                    </a>
                    <a asp-action="ChangePassword" class="btn btn-outline-secondary">
                        <i class="bi bi-key me-1"></i> Change Password
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats & Activity -->
    <div class="col-lg-8">
        <!-- Stats Cards -->
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body py-3">
                        <div class="flex items-center">
                            <div class="rounded-3 p-2 me-3" style="background-color: #eff6ff;">
                                <i class="bi bi-building" style="font-size: 1.25rem; color: #2563eb;"></i>
                            </div>
                            <div>
                                <div class="fs-4 font-bold">@Model.Stats.TotalCompanies</div>
                                <div class="text-muted small">Companies</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body py-3">
                        <div class="flex items-center">
                            <div class="rounded-3 p-2 me-3" style="background-color: #fdf2f8;">
                                <i class="bi bi-truck" style="font-size: 1.25rem; color: #db2777;"></i>
                            </div>
                            <div>
                                <div class="fs-4 font-bold">@Model.Stats.TotalVendorsCreated</div>
                                <div class="text-muted small">Vendors Created</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body py-3">
                        <div class="flex items-center">
                            <div class="rounded-3 p-2 me-3" style="background-color: #f0fdf4;">
                                <i class="bi bi-shield-check" style="font-size: 1.25rem; color: #16a34a;"></i>
                            </div>
                            <div>
                                <div class="fs-4 font-bold">@Model.Stats.CompaniesAsAdmin</div>
                                <div class="text-muted small">Admin Roles</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Account Details -->
        <div class="card mb-4">
            <div class="card-body">
                <h6 class="font-semibold text-muted text-uppercase small mb-3">Account Details</h6>
                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Full Name</span>
                            <span class="info-value">@Model.FullName</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Email Address</span>
                            <span class="info-value">
                                @Model.Email
                                @if (Model.EmailConfirmed)
                                {
                                    <span class="badge bg-success-subtle text-success-emphasis ms-1">Verified</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning-subtle text-warning-emphasis ms-1">Not Verified</span>
                                }
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Phone Number</span>
                            <span class="info-value">
                                @if (!string.IsNullOrEmpty(Model.Phone))
                                {
                                    @Model.Phone
                                }
                                else
                                {
                                    <span class="text-muted">Not provided</span>
                                }
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Account Type</span>
                            <span class="info-value">
                                @if (Model.IsSuperAdmin)
                                {
                                    <span class="badge bg-danger-subtle text-danger-emphasis">Super Admin</span>
                                }
                                else
                                {
                                    <span class="badge bg-primary-subtle text-primary-emphasis">User</span>
                                }
                            </span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Member Since</span>
                            <span class="info-value">@Model.CreatedAt.ToString("MMMM dd, yyyy")</span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-row">
                            <span class="info-label">Active Companies</span>
                            <span class="info-value">@Model.Stats.ActiveCompanies of @Model.Stats.TotalCompanies</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="card">
            <div class="card-body">
                <h6 class="font-semibold text-muted text-uppercase small mb-3">Recent Activity</h6>
                @if (Model.RecentActivity.Any())
                {
                    <div class="activity-timeline">
                        @foreach (var activity in Model.RecentActivity)
                        {
                            <div class="activity-timeline-item">
                                <div class="activity-timeline-icon activity-icon-@activity.IconColor">
                                    <i class="bi bi-@activity.Icon"></i>
                                </div>
                                <div class="activity-timeline-content">
                                    <div class="activity-timeline-action">@activity.Action</div>
                                    <div class="activity-timeline-details">@activity.Details</div>
                                    <div class="activity-timeline-time">
                                        <i class="bi bi-clock"></i> @activity.TimeAgo
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state py-4">
                        <i class="bi bi-inbox"></i>
                        <p class="text-muted mb-0">No recent activity</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
