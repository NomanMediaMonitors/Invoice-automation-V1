@model Invoice_automation_V1.ViewModels.EditProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<!-- Page Header -->
<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
        <div>
            <h2 class="fw-bold mb-1">Edit Profile</h2>
            <p class="text-muted mb-0">Update your personal information</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Back to Profile
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Full Name <span class="text-danger">*</span></label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email <span class="text-danger">*</span></label>
                        <input asp-for="Email" class="form-control" placeholder="your@email.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle me-1"></i> Changing your email will require re-verification
                        </small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label">Phone</label>
                        <input asp-for="Phone" class="form-control" placeholder="+1 (555) 123-4567" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AvatarUrl" class="form-label">Avatar URL</label>
                        <input asp-for="AvatarUrl" class="form-control" placeholder="https://example.com/avatar.jpg" />
                        <span asp-validation-for="AvatarUrl" class="text-danger"></span>
                        <small class="form-text text-muted">
                            <i class="bi bi-info-circle me-1"></i> Provide a URL to your profile picture
                        </small>
                    </div>

                    <!-- Avatar Preview -->
                    <div class="mb-3" id="avatarPreview" style="display: none;">
                        <label class="form-label">Preview</label>
                        <div class="rounded-3 p-3" style="background-color: #f8f9fa;">
                            <div class="rounded-circle overflow-hidden" style="width: 96px; height: 96px; border: 3px solid #2563eb;">
                                <img id="avatarPreviewImg" src="" alt="Avatar preview" style="width: 100%; height: 100%; object-fit: cover;" />
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i> Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Profile Tips -->
        <div class="card mt-4">
            <div class="card-body">
                <h6 class="fw-semibold mb-3">Profile Tips</h6>
                <ul class="mb-0 text-muted small">
                    <li class="mb-2">Use your real name to help colleagues identify you</li>
                    <li class="mb-2">Keep your email address up to date for important notifications</li>
                    <li class="mb-2">Add a profile picture to personalize your account</li>
                    <li>Your profile information is visible to other members of your companies</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Avatar preview functionality
        const avatarUrlInput = document.querySelector('input[name="AvatarUrl"]');
        const avatarPreview = document.getElementById('avatarPreview');
        const avatarPreviewImg = document.getElementById('avatarPreviewImg');

        function updateAvatarPreview() {
            const url = avatarUrlInput.value.trim();
            if (url && (url.startsWith('http://') || url.startsWith('https://'))) {
                avatarPreviewImg.src = url;
                avatarPreview.style.display = 'block';

                // Handle image load error
                avatarPreviewImg.onerror = function() {
                    avatarPreview.style.display = 'none';
                };
            } else {
                avatarPreview.style.display = 'none';
            }
        }

        if (avatarUrlInput) {
            avatarUrlInput.addEventListener('input', updateAvatarPreview);
            // Initial check on page load
            updateAvatarPreview();
        }
    </script>
}
