@model Invoice_automation_V1.ViewModels.InvoiceDetailsViewModel
@{
    ViewData["Title"] = "Invoice Details";
    var canEdit = Model.Status != "Paid";
    var canApprove = Model.Status == "Draft" || Model.Status == "PendingApproval";
    var canPay = Model.Status == "Approved";
    var canPostGL = (Model.Status == "Approved" || Model.Status == "Paid") && !Model.IsPostedToGL;
    var canEditAccounts = !Model.IsPostedToGL;
}

@Html.AntiForgeryToken()

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-action="Index" asp-route-companyId="@Model.CompanyId">Invoices</a></li>
        <li class="breadcrumb-item active">@Model.InvoiceNumber</li>
    </ol>
</nav>

<div class="page-header d-flex justify-content-between align-items-center">
    <div>
        <h2 class="page-title">
            <i class="bi bi-file-text"></i> Invoice Details
        </h2>
        <p class="page-subtitle mb-0">Review and manage invoice #@Model.InvoiceNumber</p>
    </div>
    <a asp-action="Index" asp-route-companyId="@Model.CompanyId" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

<div class="row">
    <!-- Left Column -->
    <div class="col-lg-8">
        <!-- Invoice Header Card -->
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    @if (canEdit)
                    {
                        <span class="editable-field" data-field="invoicenumber" data-value="@Model.InvoiceNumber">
                            Invoice: <span class="editable-text">@Model.InvoiceNumber</span>
                            <i class="bi bi-pencil-square ms-1 edit-icon" style="font-size: 0.7em; cursor:pointer; color: var(--text-muted);"></i>
                        </span>
                    }
                    else
                    {
                        <span>Invoice: @Model.InvoiceNumber</span>
                    }
                </h4>
                @{
                    var statusBadgeClass = Model.Status switch
                    {
                        "Draft" => "bg-secondary",
                        "PendingApproval" => "bg-warning",
                        "Approved" => "bg-success",
                        "Rejected" => "bg-danger",
                        "Paid" => "bg-primary",
                        _ => "bg-secondary"
                    };
                }
                <span class="badge @statusBadgeClass" style="font-size: 0.8125rem; padding: 0.375rem 0.75rem;">
                    @Model.Status
                </span>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="mb-3">Vendor Information</h6>
                        @if (canEdit)
                        {
                            <div class="mb-2">
                                <select class="form-select form-select-sm inline-vendor-select" id="vendorSelect"
                                        data-field="vendorid" data-invoice-id="@Model.Id">
                                    <option value="">-- Select Vendor --</option>
                                    @if (ViewBag.Vendors != null)
                                    {
                                        @foreach (var vendor in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Vendors)
                                        {
                                            <option value="@vendor.Value" selected="@(Model.VendorId.ToString() == vendor.Value)">@vendor.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                        }
                        else
                        {
                            <p class="mb-1" style="color: var(--text-primary);"><strong>@Model.VendorName</strong></p>
                        }
                        <p class="mb-1" style="color: var(--text-tertiary); font-size: 0.8125rem;">
                            <i class="bi bi-envelope"></i> @Model.VendorEmail
                        </p>
                        @if (!string.IsNullOrEmpty(Model.VendorPhone))
                        {
                            <p class="mb-1" style="color: var(--text-tertiary); font-size: 0.8125rem;">
                                <i class="bi bi-telephone"></i> @Model.VendorPhone
                            </p>
                        }
                    </div>
                    <div class="col-md-6">
                        <h6 class="mb-3">Invoice Dates</h6>
                        @if (canEdit)
                        {
                            <div class="mb-2">
                                <label class="form-label form-label-sm mb-0"><strong>Invoice Date:</strong></label>
                                <input type="date" class="form-control form-control-sm inline-date-field"
                                       data-field="invoicedate" data-invoice-id="@Model.Id"
                                       value="@Model.InvoiceDate.ToString("yyyy-MM-dd")">
                            </div>
                            @if (Model.HasDueDate)
                            {
                                <div class="mb-2">
                                    <label class="form-label form-label-sm mb-0"><strong>Due Date:</strong></label>
                                    <input type="date" class="form-control form-control-sm inline-date-field"
                                           data-field="duedate" data-invoice-id="@Model.Id"
                                           value="@(Model.DueDate?.ToString("yyyy-MM-dd") ?? "")">
                                    @if (Model.IsOverdue)
                                    {
                                        <span class="badge bg-danger mt-1">OVERDUE</span>
                                    }
                                    else if (Model.DaysUntilDue <= 7 && Model.DaysUntilDue > 0)
                                    {
                                        <span class="badge bg-warning mt-1">Due in @Model.DaysUntilDue days</span>
                                    }
                                </div>
                            }
                        }
                        else
                        {
                            <div class="info-row">
                                <span class="info-label">Invoice Date</span>
                                <span class="info-value">@Model.InvoiceDate.ToString("MMMM dd, yyyy")</span>
                            </div>
                            @if (Model.HasDueDate && Model.DueDate.HasValue)
                            {
                                <div class="info-row">
                                    <span class="info-label">Due Date</span>
                                    <span class="info-value @(Model.IsOverdue ? "text-danger" : "")">
                                        @Model.DueDate.Value.ToString("MMMM dd, yyyy")
                                        @if (Model.IsOverdue)
                                        {
                                            <span class="badge bg-danger ms-1">OVERDUE</span>
                                        }
                                        else if (Model.DaysUntilDue <= 7 && Model.DaysUntilDue > 0)
                                        {
                                            <span class="badge bg-warning ms-1">Due in @Model.DaysUntilDue days</span>
                                        }
                                    </span>
                                </div>
                            }
                        }
                    </div>
                </div>

                @if (Model.HasDescription)
                {
                    <hr style="border-color: var(--border-color);">

                    @if (canEdit)
                    {
                        <div class="mb-2">
                            <label class="form-label form-label-sm mb-0"><strong>Description:</strong></label>
                            <textarea class="form-control form-control-sm inline-text-field" rows="2"
                                      data-field="description" data-invoice-id="@Model.Id"
                                      placeholder="Brief description...">@Model.Description</textarea>
                        </div>
                        <div class="mb-0">
                            <label class="form-label form-label-sm mb-0"><strong>Notes:</strong></label>
                            <textarea class="form-control form-control-sm inline-text-field" rows="2"
                                      data-field="notes" data-invoice-id="@Model.Id"
                                      placeholder="Additional notes...">@Model.Notes</textarea>
                        </div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="mb-3">
                                <h6 class="mb-1">Description</h6>
                                <p class="mb-0" style="color: var(--text-secondary);">@Model.Description</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <div class="mb-0">
                                <h6 class="mb-1">Notes</h6>
                                <p class="mb-0" style="color: var(--text-secondary);">@Model.Notes</p>
                            </div>
                        }
                    }
                }
            </div>
        </div>

        <!-- Line Items Card -->
        @if (Model.HasLineItems)
        {
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-list-ul"></i> Line Items</h5>
                @if (canEdit)
                {
                    <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#addLineItemForm">
                        <i class="bi bi-plus-circle"></i> Add Line Item
                    </button>
                }
            </div>
            <div class="card-body">
                @if (canEdit)
                {
                    <!-- Add Line Item Form (collapsible) -->
                    <div class="collapse mb-3" id="addLineItemForm">
                        <div class="p-3" style="background: var(--bg-secondary); border-radius: var(--radius-lg); border: 1px solid var(--border-color);">
                            <form asp-action="AddLineItem" method="post">
                                <input type="hidden" name="invoiceId" value="@Model.Id" />
                                <div class="row g-2">
                                    <div class="col-md-3">
                                        <label class="form-label form-label-sm">Description <span class="required">*</span></label>
                                        <input type="text" name="description" class="form-control form-control-sm" required placeholder="Item description">
                                    </div>
                                    <div class="col-md-1">
                                        <label class="form-label form-label-sm">Qty <span class="required">*</span></label>
                                        <input type="number" name="quantity" class="form-control form-control-sm" value="1" min="0.01" step="0.01" required id="newQty">
                                    </div>
                                    <div class="col-md-2">
                                        <label class="form-label form-label-sm">Unit Price <span class="required">*</span></label>
                                        <input type="number" name="unitPrice" class="form-control form-control-sm" min="0.01" step="0.01" required placeholder="0.00" id="newPrice">
                                    </div>
                                    @if (Model.HasTaxRate)
                                    {
                                        <div class="col-md-1">
                                            <label class="form-label form-label-sm">Tax %</label>
                                            <input type="number" name="taxRate" class="form-control form-control-sm" value="0" min="0" max="100" step="0.01" id="newTaxRate">
                                        </div>
                                    }
                                    <div class="col-md-@(Model.HasTaxRate ? "3" : "4")">
                                        <label class="form-label form-label-sm">Account</label>
                                        <select name="chartOfAccountId" class="form-select form-select-sm">
                                            <option value="">-- Select --</option>
                                            @if (ViewBag.ChartOfAccounts != null)
                                            {
                                                @foreach (var account in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.ChartOfAccounts)
                                                {
                                                    <option value="@account.Value">@account.Text</option>
                                                }
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-2 d-flex align-items-end">
                                        <button type="submit" class="btn btn-primary btn-sm w-100">
                                            <i class="bi bi-plus"></i> Add
                                        </button>
                                    </div>
                                </div>
                                <div class="row g-2 mt-1">
                                    <div class="col-md-12">
                                        <small id="lineItemPreview" style="color: var(--text-tertiary);"></small>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                }

                @if (Model.LineItems.Any())
                {
                    <div class="table-responsive" style="overflow-x: auto;">
                        <table class="table mb-0 line-items-table" id="lineItemsTable">
                            <thead>
                                <tr>
                                    <th style="width: 50px;">#</th>
                                    <th style="min-width: 250px;">Description</th>
                                    <th style="min-width: 180px;">Account</th>
                                    <th class="text-end" style="min-width: 90px;">Qty</th>
                                    <th class="text-end" style="min-width: 120px;">Unit Price</th>
                                    @if (Model.HasTaxRate)
                                    {
                                        <th class="text-end" style="min-width: 80px;">Tax %</th>
                                    }
                                    <th class="text-end" style="min-width: 120px;">Amount</th>
                                    @if (Model.HasTaxRate)
                                    {
                                        <th class="text-end" style="min-width: 100px;">Tax</th>
                                    }
                                    <th class="text-end" style="min-width: 120px;">Total</th>
                                    @if (canEdit)
                                    {
                                        <th style="width: 80px;" class="text-center">Actions</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.LineItems)
                                {
                                    <tr data-line-item-id="@item.Id">
                                        <td>@item.LineNumber</td>
                                        @if (canEdit)
                                        {
                                            <td>
                                                <input type="text" class="form-control form-control-sm li-description"
                                                       value="@item.Description" data-original="@item.Description"
                                                       style="min-width: 220px;">
                                                @if (item.IsOcrExtracted)
                                                {
                                                    <span class="badge mt-1" style="font-size:0.6rem; background-color: var(--info-light); color: var(--info-color);" title="Extracted by OCR">OCR</span>
                                                }
                                            </td>
                                            <td>
                                                <select class="form-select form-select-sm li-account" style="min-width: 170px;">
                                                    <option value="">-- Select --</option>
                                                    @if (ViewBag.ChartOfAccounts != null)
                                                    {
                                                        @foreach (var account in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.ChartOfAccounts)
                                                        {
                                                            <option value="@account.Value"
                                                                    selected="@(item.ChartOfAccountId?.ToString() == account.Value)">
                                                                @account.Text
                                                            </option>
                                                        }
                                                    }
                                                </select>
                                            </td>
                                            <td>
                                                <input type="number" class="form-control form-control-sm text-end li-qty"
                                                       value="@item.Quantity" min="0.0001" step="0.01"
                                                       data-original="@item.Quantity" style="min-width: 80px; width: 100%;">
                                            </td>
                                            <td>
                                                <input type="number" class="form-control form-control-sm text-end li-unitprice"
                                                       value="@item.UnitPrice" min="0" step="0.01"
                                                       data-original="@item.UnitPrice" style="min-width: 110px; width: 100%;">
                                            </td>
                                            @if (Model.HasTaxRate)
                                            {
                                                <td>
                                                    <input type="number" class="form-control form-control-sm text-end li-taxrate"
                                                           value="@item.TaxRate" min="0" max="100" step="0.01"
                                                           data-original="@item.TaxRate" style="min-width: 70px; width: 100%;">
                                                </td>
                                            }
                                            <td class="text-end li-amount" style="white-space: nowrap;">@Model.Currency @item.Amount.ToString("N2")</td>
                                            @if (Model.HasTaxRate)
                                            {
                                                <td class="text-end li-taxamount" style="white-space: nowrap;">@Model.Currency @item.TaxAmount.ToString("N2")</td>
                                            }
                                            <td class="text-end fw-bold li-totalamount" style="white-space: nowrap;">@Model.Currency @item.TotalAmount.ToString("N2")</td>
                                            <td class="text-center">
                                                <div class="d-flex flex-column gap-1 align-items-center">
                                                    <button type="button" class="btn btn-outline-success btn-sm save-line-item" title="Save changes" style="display:none;">
                                                        <i class="bi bi-check-lg"></i>
                                                    </button>
                                                    <form asp-action="DeleteLineItem" method="post" class="d-inline"
                                                          onsubmit="return confirm('Delete this line item?')">
                                                        <input type="hidden" name="lineItemId" value="@item.Id" />
                                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                                            <i class="bi bi-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                @item.Description
                                                @if (item.IsOcrExtracted)
                                                {
                                                    <span class="badge ms-2" style="background-color: var(--info-light); color: var(--info-color);" title="Extracted by OCR">OCR</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.AccountCode))
                                                {
                                                    <small style="color: var(--text-tertiary);">@item.AccountCode - @item.AccountName</small>
                                                }
                                                else
                                                {
                                                    <small style="color: var(--text-muted);">Not assigned</small>
                                                }
                                            </td>
                                            <td class="text-end" style="white-space: nowrap;">@item.Quantity.ToString("N2")</td>
                                            <td class="text-end" style="white-space: nowrap;">@Model.Currency @item.UnitPrice.ToString("N2")</td>
                                            @if (Model.HasTaxRate)
                                            {
                                                <td class="text-end" style="white-space: nowrap;">@item.TaxRate.ToString("N2")%</td>
                                            }
                                            <td class="text-end" style="white-space: nowrap;">@Model.Currency @item.Amount.ToString("N2")</td>
                                            @if (Model.HasTaxRate)
                                            {
                                                <td class="text-end" style="white-space: nowrap;">@Model.Currency @item.TaxAmount.ToString("N2")</td>
                                            }
                                            <td class="text-end fw-bold" style="white-space: nowrap;">@Model.Currency @item.TotalAmount.ToString("N2")</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                            @{
                                var footerColspan = 6 + (Model.HasTaxRate ? 2 : 0) + (canEdit ? 1 : 0);
                            }
                            <tfoot>
                                @if (Model.HasSubTotal)
                                {
                                    <tr style="background: var(--bg-secondary);">
                                        <td colspan="@footerColspan" class="text-end"><strong>Subtotal:</strong></td>
                                        <td class="text-end fw-bold" id="invoiceSubTotal">@Model.Currency @Model.SubTotal.ToString("N2")</td>
                                    </tr>
                                }
                                @if (Model.HasTaxRate)
                                {
                                    <tr style="background: var(--bg-secondary);">
                                        <td colspan="@footerColspan" class="text-end"><strong>Tax:</strong></td>
                                        <td class="text-end fw-bold" id="invoiceTaxAmount">@Model.Currency @Model.TaxAmount.ToString("N2")</td>
                                    </tr>
                                }
                                @if (Model.HasAdvanceTaxAccount)
                                {
                                    <tr style="background: var(--bg-secondary);">
                                        <td colspan="@footerColspan" class="text-end"><strong>Advance Tax:</strong></td>
                                        <td class="text-end fw-bold" id="invoiceAdvanceTaxAmount">@Model.Currency @Model.AdvanceTaxAmount.ToString("N2")</td>
                                    </tr>
                                }
                                @if (Model.HasSalesTaxInputAccount)
                                {
                                    <tr style="background: var(--bg-secondary);">
                                        <td colspan="@footerColspan" class="text-end"><strong>Sales Tax Input:</strong></td>
                                        <td class="text-end fw-bold" id="invoiceSalesTaxInputAmount">@Model.Currency @Model.SalesTaxInputAmount.ToString("N2")</td>
                                    </tr>
                                }
                                <tr style="background: var(--primary-50);">
                                    <td colspan="@footerColspan" class="text-end"><strong>Total Amount:</strong></td>
                                    <td class="text-end fw-bold" style="font-size: 1.0625rem;" id="invoiceTotalAmount">@Model.Currency @Model.TotalAmount.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-inbox"></i>
                        <h5>No Line Items</h5>
                        <p>@(canEdit ? "Click \"Add Line Item\" above or run OCR to extract them." : "No line items have been added yet.")</p>
                    </div>
                }
            </div>
        </div>
        }

        <!-- GL Account Assignments Card -->
        @if (Model.HasAdvanceTaxAccount || Model.HasSalesTaxInputAccount)
        {
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-journal-text"></i> GL Account Assignments</h5>
                    @if (Model.IsPostedToGL)
                    {
                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Posted to GL</span>
                    }
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-sm mb-0" style="color: var(--text-primary);">
                            <thead>
                                <tr>
                                    <th style="width: 160px;">Category</th>
                                    <th>Account</th>
                                    <th class="text-end" style="width: 180px;">Amount (@Model.Currency)</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Line Item Accounts (Expense) - always shown, read-only summary -->
                                <tr>
                                    <td><strong>Expense (Line Items)</strong></td>
                                    <td><span class="text-muted fst-italic">Per line item accounts</span></td>
                                    <td class="text-end fw-bold" id="glSubTotal">@Model.Currency @Model.SubTotal.ToString("N2")</td>
                                </tr>
                                @if (Model.HasAdvanceTaxAccount)
                                {
                                    <tr>
                                        <td><strong>Advance Tax</strong></td>
                                        <td>
                                            @if (canEditAccounts)
                                            {
                                                <select class="form-select form-select-sm gl-account-select"
                                                        data-account-type="advancetax" data-invoice-id="@Model.Id">
                                                    <option value="">-- Select Account --</option>
                                                    @if (ViewBag.ChartOfAccounts != null)
                                                    {
                                                        @foreach (var account in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.ChartOfAccounts)
                                                        {
                                                            <option value="@account.Value"
                                                                    selected="@(Model.AdvanceTaxAccountId?.ToString() == account.Value)">@account.Text</option>
                                                        }
                                                    }
                                                </select>
                                            }
                                            else
                                            {
                                                <span>@(Model.AdvanceTaxAccountName ?? "Not assigned")</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            @if (canEditAccounts)
                                            {
                                                <input type="number" class="form-control form-control-sm text-end gl-amount-field"
                                                       data-field="advancetaxamount" data-invoice-id="@Model.Id"
                                                       value="@Model.AdvanceTaxAmount" min="0" step="0.01"
                                                       style="width: 100%;">
                                            }
                                            else
                                            {
                                                <span class="fw-bold">@Model.Currency @Model.AdvanceTaxAmount.ToString("N2")</span>
                                            }
                                        </td>
                                    </tr>
                                }
                                @if (Model.HasSalesTaxInputAccount)
                                {
                                    <tr>
                                        <td><strong>Sales Tax Input</strong></td>
                                        <td>
                                            @if (canEditAccounts)
                                            {
                                                <select class="form-select form-select-sm gl-account-select"
                                                        data-account-type="salestaxinput" data-invoice-id="@Model.Id">
                                                    <option value="">-- Select Account --</option>
                                                    @if (ViewBag.ChartOfAccounts != null)
                                                    {
                                                        @foreach (var account in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.ChartOfAccounts)
                                                        {
                                                            <option value="@account.Value"
                                                                    selected="@(Model.SalesTaxInputAccountId?.ToString() == account.Value)">@account.Text</option>
                                                        }
                                                    }
                                                </select>
                                            }
                                            else
                                            {
                                                <span>@(Model.SalesTaxInputAccountName ?? "Not assigned")</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            @if (canEditAccounts)
                                            {
                                                <input type="number" class="form-control form-control-sm text-end gl-amount-field"
                                                       data-field="salestaxinputamount" data-invoice-id="@Model.Id"
                                                       value="@Model.SalesTaxInputAmount" min="0" step="0.01"
                                                       style="width: 100%;">
                                            }
                                            else
                                            {
                                                <span class="fw-bold">@Model.Currency @Model.SalesTaxInputAmount.ToString("N2")</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- Attached File Card -->
        @if (!string.IsNullOrEmpty(Model.FileUrl))
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-paperclip"></i> Attached File</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-file-earmark-pdf me-3" style="font-size: 2rem; color: var(--danger-color);"></i>
                        <div class="flex-grow-1">
                            <p class="mb-1 fw-bold" style="color: var(--text-primary); font-size: 0.875rem;">@Model.OriginalFileName</p>
                            <p class="mb-0" style="color: var(--text-tertiary); font-size: 0.75rem;">
                                Size: @(Model.FileSize.HasValue ? (Model.FileSize.Value / 1024.0).ToString("N2") + " KB" : "Unknown")
                            </p>
                        </div>
                        <a href="@Model.FileUrl" target="_blank" class="btn btn-outline-primary">
                            <i class="bi bi-download"></i> Download
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Right Column -->
    <div class="col-lg-4">
        <!-- Actions Card -->
        <div class="action-card mb-4">
            <h5><i class="bi bi-gear"></i> Actions</h5>

            @if (canApprove)
            {
                <form asp-action="Approve" method="post" class="mb-2">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-success w-100" onclick="return confirm('Are you sure you want to approve this invoice?')">
                        <i class="bi bi-check-circle"></i> Approve Invoice
                    </button>
                </form>
                <form asp-action="Reject" method="post" class="mb-2">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Are you sure you want to reject this invoice?')">
                        <i class="bi bi-x-circle"></i> Reject Invoice
                    </button>
                </form>
            }

            @if (canPay)
            {
                <button type="button" class="btn btn-primary w-100 mb-2" data-bs-toggle="modal" data-bs-target="#paymentModal">
                    <i class="bi bi-currency-dollar"></i> Mark as Paid
                </button>
            }

            @if (canPostGL)
            {
                <button type="button" class="btn btn-outline-success w-100 mb-2" id="btnShowGLPreview">
                    <i class="bi bi-journal-check"></i> Post to General Ledger
                </button>
            }
            @if (Model.IsPostedToGL)
            {
                <div class="alert alert-success py-2 mb-2 text-center small">
                    <i class="bi bi-check-circle"></i> Posted to GL
                    @if (Model.PostedToGLAt.HasValue)
                    {
                        <br><small>@Model.PostedToGLAt.Value.ToString("MMM dd, yyyy HH:mm")</small>
                    }
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.FileUrl))
            {
                <form asp-action="ProcessOcr" method="post" class="mb-2">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-warning w-100">
                        <i class="bi bi-magic"></i> @(Model.IsOcrProcessed ? "Re-process with OCR" : "Process with OCR")
                    </button>
                </form>
            }

            @if (canEdit)
            {
                <hr style="border-color: var(--border-color);">
                <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this invoice? This action cannot be undone.')">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-outline-danger w-100">
                        <i class="bi bi-trash"></i> Delete Invoice
                    </button>
                </form>
            }
        </div>

        <!-- OCR Information Card -->
        @if (Model.IsOcrProcessed)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-robot"></i> OCR Information</h5>
                </div>
                <div class="card-body">
                    <div class="info-row">
                        <span class="info-label">Status</span>
                        <span class="info-value"><span class="badge bg-success">Processed</span></span>
                    </div>
                    @if (Model.OcrProcessedAt.HasValue)
                    {
                        <div class="info-row">
                            <span class="info-label">Processed</span>
                            <span class="info-value">@Model.OcrProcessedAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
                        </div>
                    }
                    @if (Model.OcrConfidenceScore.HasValue)
                    {
                        <div class="info-row" style="flex-direction: column; gap: 0.375rem;">
                            <span class="info-label">Confidence: @Model.OcrConfidenceScore.Value.ToString("N2")%</span>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar @(Model.OcrConfidenceScore >= 80 ? "bg-success" : Model.OcrConfidenceScore >= 60 ? "bg-warning" : "bg-danger")"
                                     role="progressbar"
                                     style="width: @Model.OcrConfidenceScore%"
                                     aria-valuenow="@Model.OcrConfidenceScore"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.OcrErrorMessage))
                    {
                        <div class="alert alert-warning mt-2 mb-0" style="padding: 0.5rem 0.75rem; font-size: 0.8125rem;">
                            <i class="bi bi-exclamation-triangle"></i> @Model.OcrErrorMessage
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Approval Information -->
        @if (Model.ApprovedAt.HasValue)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-check-circle"></i> Approval Info</h5>
                </div>
                <div class="card-body">
                    <div class="info-row">
                        <span class="info-label">Approved By</span>
                        <span class="info-value">@Model.ApprovedByName</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Date</span>
                        <span class="info-value">@Model.ApprovedAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ApprovalNotes))
                    {
                        <div class="info-row">
                            <span class="info-label">Notes</span>
                            <span class="info-value">@Model.ApprovalNotes</span>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Payment Information -->
        @if (Model.PaidAt.HasValue)
        {
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-currency-dollar"></i> Payment Info</h5>
                </div>
                <div class="card-body">
                    <div class="info-row">
                        <span class="info-label">Paid By</span>
                        <span class="info-value">@Model.PaidByName</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Date</span>
                        <span class="info-value">@Model.PaidAt.Value.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label">Reference</span>
                        <span class="info-value">@Model.PaymentReference</span>
                    </div>
                </div>
            </div>
        }

        <!-- Audit Information -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Audit Trail</h5>
            </div>
            <div class="card-body">
                <div class="info-row">
                    <span class="info-label">Created By</span>
                    <span class="info-value">@Model.CreatedByName</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Created</span>
                    <span class="info-value">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</span>
                </div>
                <div class="info-row">
                    <span class="info-label">Last Updated</span>
                    <span class="info-value">@Model.UpdatedAt.ToString("MMM dd, yyyy HH:mm")</span>
                </div>
            </div>
        </div>
    </div>
</div>

