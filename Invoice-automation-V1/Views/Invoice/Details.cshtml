                    <button type="submit"
                            class="px-5 py-2.5 bg-blue-600 text-white text-sm font-semibold rounded-xl hover:bg-blue-700 transition-all shadow-sm">
                        Mark as Paid
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var currency = '@Model.Currency';
        var invoiceId = '@Model.Id';
        var canEdit = @(canEdit ? "true" : "false");
        var antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';

        // ===== Inline Line Item Editing =====
        if (canEdit) {
            var debounceTimers = {};

            document.querySelectorAll('#lineItemsTable tbody tr').forEach(function(row) {
                var inputs = row.querySelectorAll('input, select');
                var saveBtn = row.querySelector('.save-line-item');
                inputs.forEach(function(input) {
                    input.addEventListener('input', function() {
                        if (saveBtn) saveBtn.classList.remove('hidden');
                        updateRowPreview(row);
                    });
                    input.addEventListener('change', function() {
                        if (saveBtn) saveBtn.classList.remove('hidden');
                        updateRowPreview(row);
                    });
                });
            });

            function updateRowPreview(row) {
                var qty = parseFloat(row.querySelector('.li-qty')?.value) || 0;
                var price = parseFloat(row.querySelector('.li-unitprice')?.value) || 0;
                var taxRate = parseFloat(row.querySelector('.li-taxrate')?.value) || 0;
                var amount = qty * price;
                var tax = amount * (taxRate / 100);
                var total = amount + tax;
                var amountCell = row.querySelector('.li-amount');
                var taxCell = row.querySelector('.li-taxamount');
                var totalCell = row.querySelector('.li-totalamount');
                if (amountCell) amountCell.textContent = currency + ' ' + amount.toFixed(2);
                if (taxCell) taxCell.textContent = currency + ' ' + tax.toFixed(2);
                if (totalCell) totalCell.textContent = currency + ' ' + total.toFixed(2);
            }

            document.querySelectorAll('.save-line-item').forEach(function(btn) {
                btn.addEventListener('click', function() {
                    var row = this.closest('tr');
                    var lineItemId = row.dataset.lineItemId;
                    saveLineItem(row, lineItemId, this);
                });
            });

            function saveLineItem(row, lineItemId, btn) {
                var data = {
                    lineItemId: lineItemId,
                    description: row.querySelector('.li-description')?.value || '',
                    quantity: parseFloat(row.querySelector('.li-qty')?.value) || 0,
                    unitPrice: parseFloat(row.querySelector('.li-unitprice')?.value) || 0,
                    taxRate: parseFloat(row.querySelector('.li-taxrate')?.value) || 0,
                    chartOfAccountId: row.querySelector('.li-account')?.value || null
                };

                btn.disabled = true;
                btn.innerHTML = '<i class="bi bi-hourglass-split text-xs"></i>';

                fetch('@Url.Action("UpdateLineItem", "Invoice")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': antiForgeryToken
                    },
                    body: JSON.stringify(data)
                })
                .then(function(r) { return r.json(); })
                .then(function(result) {
                    if (result.success) {
                        btn.classList.add('hidden');
                        row.classList.add('bg-emerald-50');
                        setTimeout(function() { row.classList.remove('bg-emerald-50'); }, 1500);
                        var amountCell = row.querySelector('.li-amount');
                        var taxCell = row.querySelector('.li-taxamount');
                        var totalCell = row.querySelector('.li-totalamount');
                        if (amountCell) amountCell.textContent = currency + ' ' + result.lineItem.amount.toFixed(2);
                        if (taxCell) taxCell.textContent = currency + ' ' + result.lineItem.taxAmount.toFixed(2);
                        if (totalCell) totalCell.textContent = currency + ' ' + result.lineItem.totalAmount.toFixed(2);
                        document.getElementById('invoiceSubTotal').textContent = currency + ' ' + result.invoice.subTotal.toFixed(2);
                        document.getElementById('invoiceTaxAmount').textContent = currency + ' ' + result.invoice.taxAmount.toFixed(2);
                        document.getElementById('invoiceTotalAmount').textContent = currency + ' ' + result.invoice.totalAmount.toFixed(2);
                    } else {
                        alert('Error: ' + (result.message || 'Unknown error'));
                    }
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-check-lg text-xs"></i>';
                })
                .catch(function(err) {
                    alert('Error saving line item');
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-check-lg text-xs"></i>';
                });
            }

            function saveInvoiceField(field, value) {
                fetch('@Url.Action("UpdateInvoiceField", "Invoice")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': antiForgeryToken
                    },
                    body: JSON.stringify({ invoiceId: invoiceId, field: field, value: value })
                })
                .then(function(r) { return r.json(); })
                .then(function(result) {
                    if (!result.success) alert('Error: ' + (result.message || 'Failed to save'));
                })
                .catch(function(err) { alert('Error saving field'); });
            }

            var vendorSelect = document.getElementById('vendorSelect');
            if (vendorSelect) {
                vendorSelect.addEventListener('change', function() {
                    saveInvoiceField('vendorid', this.value);
                });
            }

            document.querySelectorAll('.inline-date-field').forEach(function(input) {
                input.addEventListener('change', function() {
                    saveInvoiceField(this.dataset.field, this.value);
                });
            });

            document.querySelectorAll('.inline-text-field').forEach(function(input) {
                input.addEventListener('input', function() {
                    var field = this.dataset.field;
                    var value = this.value;
                    clearTimeout(debounceTimers[field]);
                    debounceTimers[field] = setTimeout(function() {
                        saveInvoiceField(field, value);
                    }, 800);
                });
            });

            document.querySelectorAll('.editable-field').forEach(function(el) {
                el.addEventListener('click', function() {
                    var field = this.dataset.field;
                    var currentVal = this.dataset.value;
                    var textSpan = this.querySelector('.editable-text');
                    var editIcon = this.querySelector('.edit-icon');
                    if (this.querySelector('input')) return;

                    var input = document.createElement('input');
                    input.type = 'text';
                    input.className = 'border border-blue-300 rounded-lg px-2 py-0.5 text-sm text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500/30 inline-block';
                    input.style.minWidth = '180px';
                    input.value = currentVal;

                    textSpan.style.display = 'none';
                    if (editIcon) editIcon.style.display = 'none';
                    this.appendChild(input);
                    input.focus();

                    function save() {
                        var newVal = input.value.trim();
                        if (newVal && newVal !== currentVal) {
                            saveInvoiceField(field, newVal);
                            textSpan.textContent = newVal;
                            el.dataset.value = newVal;
                        }
                        textSpan.style.display = '';
                        if (editIcon) editIcon.style.display = '';
                        input.remove();
                    }

                    input.addEventListener('blur', save);
                    input.addEventListener('keydown', function(e) {
                        if (e.key === 'Enter') { e.preventDefault(); save(); }
                        if (e.key === 'Escape') {
                            textSpan.style.display = '';
                            if (editIcon) editIcon.style.display = '';
                            input.remove();
                        }
                    });
                });
            });
        }

        // Add Line Item Preview
        var qtyEl = document.getElementById('newQty');
        var priceEl = document.getElementById('newPrice');
        var taxRateEl = document.getElementById('newTaxRate');
        var previewEl = document.getElementById('lineItemPreview');

        function updatePreview() {
            if (!qtyEl || !priceEl || !previewEl) return;
            var qty = parseFloat(qtyEl.value) || 0;
            var price = parseFloat(priceEl.value) || 0;
            var taxRate = parseFloat(taxRateEl.value) || 0;
            var amount = qty * price;
            var tax = amount * (taxRate / 100);
            var total = amount + tax;
            if (amount > 0) {
                previewEl.textContent = 'Amount: ' + amount.toFixed(2) + ' | Tax: ' + tax.toFixed(2) + ' | Total: ' + total.toFixed(2);
            } else {
                previewEl.textContent = '';
            }
        }
        if (qtyEl) qtyEl.addEventListener('input', updatePreview);
        if (priceEl) priceEl.addEventListener('input', updatePreview);
        if (taxRateEl) taxRateEl.addEventListener('input', updatePreview);
    </script>
}
