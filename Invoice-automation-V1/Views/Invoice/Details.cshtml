@section Scripts {
    <script>
        var currency = '@Model.Currency';
        var invoiceId = '@Model.Id';
        var canEdit = @(canEdit ? "true" : "false");
        var antiForgeryToken = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';

        // ===== Inline Line Item Editing =====
        if (canEdit) {
            var debounceTimers = {};

            // Show save button when any field changes
            document.querySelectorAll('#lineItemsTable tbody tr').forEach(function(row) {
                var inputs = row.querySelectorAll('input, select');
                var saveBtn = row.querySelector('.save-line-item');
                inputs.forEach(function(input) {
                    input.addEventListener('input', function() {
                        if (saveBtn) saveBtn.style.display = 'block';
                        updateRowPreview(row);
                    });
                    input.addEventListener('change', function() {
                        if (saveBtn) saveBtn.style.display = 'block';
                        updateRowPreview(row);
                    });
                });
            });

            function updateRowPreview(row) {
                var qty = parseFloat(row.querySelector('.li-qty')?.value) || 0;
                var price = parseFloat(row.querySelector('.li-unitprice')?.value) || 0;
                var taxRate = parseFloat(row.querySelector('.li-taxrate')?.value) || 0;
                var amount = qty * price;
                var tax = amount * (taxRate / 100);
                var total = amount + tax;
                var amountCell = row.querySelector('.li-amount');
                var taxCell = row.querySelector('.li-taxamount');
                var totalCell = row.querySelector('.li-totalamount');
                if (amountCell) amountCell.textContent = currency + ' ' + amount.toFixed(2);
                if (taxCell) taxCell.textContent = currency + ' ' + tax.toFixed(2);
                if (totalCell) totalCell.textContent = currency + ' ' + total.toFixed(2);
            }

            // Save line item
            document.querySelectorAll('.save-line-item').forEach(function(btn) {
                btn.addEventListener('click', function() {
                    var row = this.closest('tr');
                    var lineItemId = row.dataset.lineItemId;
                    saveLineItem(row, lineItemId, this);
                });
            });

            function saveLineItem(row, lineItemId, btn) {
                var data = {
                    lineItemId: lineItemId,
                    description: row.querySelector('.li-description')?.value || '',
                    quantity: parseFloat(row.querySelector('.li-qty')?.value) || 0,
                    unitPrice: parseFloat(row.querySelector('.li-unitprice')?.value) || 0,
                    taxRate: parseFloat(row.querySelector('.li-taxrate')?.value) || 0,
                    chartOfAccountId: row.querySelector('.li-account')?.value || null
                };

                btn.disabled = true;
                btn.innerHTML = '<i class="bi bi-hourglass-split"></i>';

                fetch('@Url.Action("UpdateLineItem", "Invoice")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': antiForgeryToken
                    },
                    body: JSON.stringify(data)
                })
                .then(function(r) { return r.json(); })
                .then(function(result) {
                    if (result.success) {
                        btn.style.display = 'none';
                        // Flash green on the row
                        row.classList.add('table-success');
                        setTimeout(function() { row.classList.remove('table-success'); }, 1500);
                        // Update totals
                        var amountCell = row.querySelector('.li-amount');
                        var taxCell = row.querySelector('.li-taxamount');
                        var totalCell = row.querySelector('.li-totalamount');
                        if (amountCell) amountCell.textContent = currency + ' ' + result.lineItem.amount.toFixed(2);
                        if (taxCell) taxCell.textContent = currency + ' ' + result.lineItem.taxAmount.toFixed(2);
                        if (totalCell) totalCell.textContent = currency + ' ' + result.lineItem.totalAmount.toFixed(2);
                        // Update invoice totals
                        document.getElementById('invoiceSubTotal').textContent = currency + ' ' + result.invoice.subTotal.toFixed(2);
                        document.getElementById('invoiceTaxAmount').textContent = currency + ' ' + result.invoice.taxAmount.toFixed(2);
                        document.getElementById('invoiceTotalAmount').textContent = currency + ' ' + result.invoice.totalAmount.toFixed(2);
                    } else {
                        alert('Error: ' + (result.message || 'Unknown error'));
                    }
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-check-lg"></i>';
                })
                .catch(function(err) {
                    alert('Error saving line item');
                    btn.disabled = false;
                    btn.innerHTML = '<i class="bi bi-check-lg"></i>';
                });
            }

            // ===== Inline Invoice Field Editing =====
            function saveInvoiceField(field, value) {
                fetch('@Url.Action("UpdateInvoiceField", "Invoice")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': antiForgeryToken
                    },
                    body: JSON.stringify({
                        invoiceId: invoiceId,
                        field: field,
                        value: value
                    })
                })
                .then(function(r) { return r.json(); })
                .then(function(result) {
                    if (!result.success) {
                        alert('Error: ' + (result.message || 'Failed to save'));
                    }
                })
                .catch(function(err) {
                    alert('Error saving field');
                });
            }

            // Vendor select
            var vendorSelect = document.getElementById('vendorSelect');
            if (vendorSelect) {
                vendorSelect.addEventListener('change', function() {
                    saveInvoiceField('vendorid', this.value);
                });
            }

            // Date fields
            document.querySelectorAll('.inline-date-field').forEach(function(input) {
                input.addEventListener('change', function() {
                    saveInvoiceField(this.dataset.field, this.value);
                });
            });

            // Text fields (debounced)
            document.querySelectorAll('.inline-text-field').forEach(function(input) {
                input.addEventListener('input', function() {
                    var field = this.dataset.field;
                    var value = this.value;
                    clearTimeout(debounceTimers[field]);
                    debounceTimers[field] = setTimeout(function() {
                        saveInvoiceField(field, value);
                    }, 800);
                });
            });

            // Editable invoice number (click to edit)
            document.querySelectorAll('.editable-field').forEach(function(el) {
                el.addEventListener('click', function() {
                    var field = this.dataset.field;
                    var currentVal = this.dataset.value;
                    var textSpan = this.querySelector('.editable-text');
                    var editIcon = this.querySelector('.edit-icon');

                    if (this.querySelector('input')) return; // already editing

                    var input = document.createElement('input');
                    input.type = 'text';
                    input.className = 'form-control form-control-sm d-inline-block';
                    input.style.width = 'auto';
                    input.style.minWidth = '200px';
                    input.value = currentVal;

                    textSpan.style.display = 'none';
                    editIcon.style.display = 'none';
                    this.appendChild(input);
                    input.focus();

                    function save() {
                        var newVal = input.value.trim();
                        if (newVal && newVal !== currentVal) {
                            saveInvoiceField(field, newVal);
                            textSpan.textContent = newVal;
                            el.dataset.value = newVal;
                        }
                        textSpan.style.display = '';
                        editIcon.style.display = '';
                        input.remove();
                    }

                    input.addEventListener('blur', save);
                    input.addEventListener('keydown', function(e) {
                        if (e.key === 'Enter') { e.preventDefault(); save(); }
                        if (e.key === 'Escape') {
                            textSpan.style.display = '';
                            editIcon.style.display = '';
                            input.remove();
                        }
                    });
                });
            });
        }

        // ===== GL Account Assignment =====
        document.querySelectorAll('.gl-account-select').forEach(function(select) {
            select.addEventListener('change', function() {
                var accountType = this.dataset.accountType;
                var invoiceIdVal = this.dataset.invoiceId;
                var selectEl = this;

                fetch('@Url.Action("UpdateInvoiceAccount", "Invoice")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': antiForgeryToken
                    },
                    body: JSON.stringify({
                        invoiceId: invoiceIdVal,
                        accountType: accountType,
                        accountId: this.value
                    })
                })
                .then(function(r) { return r.json(); })
                .then(function(result) {
                    if (result.success) {
                        selectEl.classList.add('is-valid');
                        setTimeout(function() { selectEl.classList.remove('is-valid'); }, 2000);
                    } else {
                        alert('Error: ' + (result.message || 'Failed to save'));
                    }
                })
                .catch(function(err) {
                    alert('Error saving account assignment');
                });
            });
        });

        // ===== GL Amount Fields (Advance Tax, Sales Tax Input) =====
        document.querySelectorAll('.gl-amount-field').forEach(function(input) {
            var debounceTimer;
            input.addEventListener('change', function() {
                var field = this.dataset.field;
                var invoiceIdVal = this.dataset.invoiceId;
                var inputEl = this;

                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(function() {
                    fetch('@Url.Action("UpdateInvoiceField", "Invoice")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': antiForgeryToken
                        },
                        body: JSON.stringify({
                            invoiceId: invoiceIdVal,
                            field: field,
                            value: inputEl.value
                        })
                    })
                    .then(function(r) { return r.json(); })
                    .then(function(result) {
                        if (result.success) {
                            inputEl.classList.add('is-valid');
                            setTimeout(function() { inputEl.classList.remove('is-valid'); }, 2000);
                            // Update totals displayed in line items footer
                            var invoiceTotal = document.getElementById('invoiceTotalAmount');
                            if (invoiceTotal && result.totalAmount !== undefined) {
                                invoiceTotal.textContent = '@Model.Currency ' + parseFloat(result.totalAmount).toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            }
                            var advanceTaxEl = document.getElementById('invoiceAdvanceTaxAmount');
                            if (advanceTaxEl && result.advanceTaxAmount !== undefined) {
                                advanceTaxEl.textContent = '@Model.Currency ' + parseFloat(result.advanceTaxAmount).toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            }
                            var salesTaxEl = document.getElementById('invoiceSalesTaxInputAmount');
                            if (salesTaxEl && result.salesTaxInputAmount !== undefined) {
                                salesTaxEl.textContent = '@Model.Currency ' + parseFloat(result.salesTaxInputAmount).toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
                            }
                        } else {
                            alert('Error: ' + (result.message || 'Failed to save'));
                        }
                    })
                    .catch(function(err) {
                        alert('Error saving amount');
                    });
                }, 300);
            });
        });

        // ===== Add Line Item Preview =====
        var qtyEl = document.getElementById('newQty');
        var priceEl = document.getElementById('newPrice');
        var taxRateEl = document.getElementById('newTaxRate');
        var previewEl = document.getElementById('lineItemPreview');

        function updatePreview() {
            if (!qtyEl || !priceEl || !previewEl) return;
            var qty = parseFloat(qtyEl.value) || 0;
            var price = parseFloat(priceEl.value) || 0;
            var taxRate = parseFloat(taxRateEl.value) || 0;
            var amount = qty * price;
            var tax = amount * (taxRate / 100);
            var total = amount + tax;
            if (amount > 0) {
                previewEl.textContent = 'Amount: ' + amount.toFixed(2) + ' | Tax: ' + tax.toFixed(2) + ' | Total: ' + total.toFixed(2);
            } else {
                previewEl.textContent = '';
            }
        }
        if (qtyEl) qtyEl.addEventListener('input', updatePreview);
        if (priceEl) priceEl.addEventListener('input', updatePreview);
        if (taxRateEl) taxRateEl.addEventListener('input', updatePreview);

        // ===== GL Preview =====
        var glPreviewBtn = document.getElementById('btnShowGLPreview');
        if (glPreviewBtn) {
            glPreviewBtn.addEventListener('click', function() {
                var modal = new bootstrap.Modal(document.getElementById('glPreviewModal'));
                var body = document.getElementById('glPreviewBody');
                var confirmBtn = document.getElementById('btnConfirmPostGL');

                // Show loading
                body.innerHTML = '<div class="text-center py-4"><div class="spinner-border text-primary" role="status"><span class="visually-hidden">Loading...</span></div><p class="mt-2" style="color: var(--text-secondary);">Loading GL preview...</p></div>';
                confirmBtn.disabled = true;

                modal.show();

                fetch('@Url.Action("GetGLPreview", "Invoice")?id=' + invoiceId)
                    .then(function(r) { return r.json(); })
                    .then(function(result) {
                        if (result.success) {
                            var entries = result.entries;
                            var html = '<div class="mb-3"><p style="color: var(--text-secondary);">The following journal entries will be posted to the General Ledger:</p></div>';
                            html += '<table class="table table-bordered mb-3">';
                            html += '<thead><tr><th>Account</th><th class="text-end">Debit</th><th class="text-end">Credit</th></tr></thead>';
                            html += '<tbody>';
                            var totalDebit = 0;
                            var totalCredit = 0;
                            for (var i = 0; i < entries.length; i++) {
                                var e = entries[i];
                                html += '<tr>';
                                html += '<td>' + e.accountCode + ' - ' + e.accountName + '</td>';
                                if (e.debit > 0) {
                                    html += '<td class="text-end">' + currency + ' ' + e.debit.toFixed(2) + '</td>';
                                    html += '<td class="text-end">-</td>';
                                    totalDebit += e.debit;
                                } else {
                                    html += '<td class="text-end">-</td>';
                                    html += '<td class="text-end">' + currency + ' ' + e.credit.toFixed(2) + '</td>';
                                    totalCredit += e.credit;
                                }
                                html += '</tr>';
                            }
                            html += '</tbody>';
                            html += '<tfoot><tr style="background: var(--bg-secondary); font-weight: bold;">';
                            html += '<td>Total</td>';
                            html += '<td class="text-end">' + currency + ' ' + totalDebit.toFixed(2) + '</td>';
                            html += '<td class="text-end">' + currency + ' ' + totalCredit.toFixed(2) + '</td>';
                            html += '</tr></tfoot>';
                            html += '</table>';
                            html += '<div class="alert alert-warning py-2 mb-0"><i class="bi bi-exclamation-triangle"></i> This action cannot be undone. Accounts cannot be changed after posting.</div>';
                            body.innerHTML = html;
                            confirmBtn.disabled = false;
                        } else {
                            body.innerHTML = '<div class="alert alert-danger"><i class="bi bi-exclamation-circle"></i> ' + result.message + '</div>';
                            confirmBtn.disabled = true;
                        }
                    })
                    .catch(function(err) {
                        body.innerHTML = '<div class="alert alert-danger"><i class="bi bi-exclamation-circle"></i> Error loading GL preview.</div>';
                        confirmBtn.disabled = true;
                    });
            });
        }
    </script>
}
