@model Invoice_automation_V1.ViewModels.InvoiceDetailsViewModel
@{
    ViewData["Title"] = "Invoice Details";
    var canEdit = Model.Status != "Paid" && !Model.SyncedToIndraajAt.HasValue;
    var canApprove = Model.Status == "Draft" || Model.Status == "PendingApproval";
    var canPay = Model.Status == "Approved";
    var canSync = (Model.Status == "Approved" || Model.Status == "Paid") && !Model.SyncedToIndraajAt.HasValue;
}

@Html.AntiForgeryToken()

<!-- Breadcrumb -->
<nav class="mb-4">
    <ol class="flex items-center gap-2 text-sm">
        <li><a asp-action="Index" class="text-gray-400 hover:text-blue-600 transition-colors">Invoices</a></li>
        <li class="text-gray-300"><i class="bi bi-chevron-right text-xs"></i></li>
        <li class="text-gray-700 font-medium">@Model.InvoiceNumber</li>
    </ol>
</nav>

<!-- Page Header -->
<div class="flex items-center justify-between mb-6">
    <div>
        <h1 class="text-2xl font-bold text-gray-900 tracking-tight flex items-center gap-2.5">
            <span class="inline-flex items-center justify-center w-9 h-9 rounded-xl bg-blue-600 text-white shadow-sm">
                <i class="bi bi-file-text text-base"></i>
            </span>
            Invoice Details
        </h1>
        <p class="mt-1 text-sm text-gray-500">Review and manage invoice #@Model.InvoiceNumber</p>
    </div>
    <a asp-action="Index"
       class="inline-flex items-center gap-2 px-4 py-2.5 border border-gray-200 text-gray-600 text-sm font-medium rounded-xl hover:bg-gray-50 transition-colors">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</div>

<!-- Two-column layout -->
<div class="grid grid-cols-1 lg:grid-cols-3 gap-5">

    <!-- Left Column (main content) -->
    <div class="lg:col-span-2 flex flex-col gap-5">

        <!-- Invoice Header Card -->
        <div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
            <div class="flex items-center justify-between px-6 py-4 border-b border-gray-100">
                <h3 class="text-sm font-semibold text-gray-800 flex items-center gap-2">
                    <i class="bi bi-receipt text-gray-400"></i>
                    @if (canEdit)
                    {
                        <span class="editable-field cursor-pointer" data-field="invoicenumber" data-value="@Model.InvoiceNumber">
                            Invoice: <span class="editable-text text-blue-600">@Model.InvoiceNumber</span>
                            <i class="bi bi-pencil-square ml-1 edit-icon text-gray-300 text-xs"></i>
                        </span>
                    }
                    else
                    {
                        <span>Invoice: @Model.InvoiceNumber</span>
                    }
                </h3>
                @{
                    var (sBg, sText, sDot) = Model.Status switch
                    {
                        "Draft" => ("bg-gray-100", "text-gray-600", "bg-gray-400"),
                        "PendingApproval" => ("bg-amber-50", "text-amber-700", "bg-amber-400"),
                        "Approved" => ("bg-emerald-50", "text-emerald-700", "bg-emerald-500"),
                        "Rejected" => ("bg-red-50", "text-red-700", "bg-red-500"),
                        "Paid" => ("bg-blue-50", "text-blue-700", "bg-blue-500"),
                        _ => ("bg-gray-100", "text-gray-600", "bg-gray-400")
                    };
                }
                <span class="inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-semibold @sBg @sText">
                    <span class="w-1.5 h-1.5 rounded-full @sDot"></span>
                    @Model.Status
                </span>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <!-- Vendor Info -->
                    <div>
                        <h4 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3">Vendor Information</h4>
                        @if (canEdit)
                        {
                            <div class="mb-3">
                                <select class="form-select form-select-sm inline-vendor-select w-full border border-gray-200 rounded-xl px-3 py-2 text-sm text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500/30 focus:border-blue-500" id="vendorSelect"
                                        data-field="vendorid" data-invoice-id="@Model.Id">
                                    <option value="">-- Select Vendor --</option>
                                    @if (ViewBag.Vendors != null)
                                    {
                                        @foreach (var vendor in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.Vendors)
                                        {
                                            <option value="@vendor.Value" selected="@(Model.VendorId.ToString() == vendor.Value)">@vendor.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                        }
                        else
                        {
                            <p class="font-semibold text-gray-900 mb-1">@Model.VendorName</p>
                        }
                        @if (!string.IsNullOrEmpty(Model.VendorEmail))
                        {
                            <p class="text-sm text-gray-500 flex items-center gap-1.5">
                                <i class="bi bi-envelope text-gray-400"></i> @Model.VendorEmail
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(Model.VendorPhone))
                        {
                            <p class="text-sm text-gray-500 flex items-center gap-1.5">
                                <i class="bi bi-telephone text-gray-400"></i> @Model.VendorPhone
                            </p>
                        }
                    </div>
                    <!-- Invoice Dates -->
                    <div>
                        <h4 class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3">Invoice Dates</h4>
                        @if (canEdit)
                        {
                            <div class="mb-3">
                                <label class="block text-xs font-medium text-gray-500 mb-1">Invoice Date</label>
                                <input type="date" class="form-control form-control-sm inline-date-field w-full border border-gray-200 rounded-xl px-3 py-2 text-sm text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500/30 focus:border-blue-500"
                                       data-field="invoicedate" data-invoice-id="@Model.Id"
                                       value="@Model.InvoiceDate.ToString("yyyy-MM-dd")">
                            </div>
                            <div class="mb-0">
                                <label class="block text-xs font-medium text-gray-500 mb-1">Due Date</label>
                                <input type="date" class="form-control form-control-sm inline-date-field w-full border border-gray-200 rounded-xl px-3 py-2 text-sm text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500/30 focus:border-blue-500"
                                       data-field="duedate" data-invoice-id="@Model.Id"
                                       value="@(Model.DueDate?.ToString("yyyy-MM-dd") ?? "")">
                                @if (Model.IsOverdue)
                                {
                                    <span class="inline-flex items-center gap-1 mt-1.5 px-2 py-0.5 rounded-full text-xs font-semibold bg-red-50 text-red-700">OVERDUE</span>
                                }
                                else if (Model.DaysUntilDue <= 7 && Model.DaysUntilDue > 0)
                                {
                                    <span class="inline-flex items-center gap-1 mt-1.5 px-2 py-0.5 rounded-full text-xs font-semibold bg-amber-50 text-amber-700">Due in @Model.DaysUntilDue days</span>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="flex items-center justify-between py-2 border-b border-gray-50">
                                <span class="text-xs text-gray-500">Invoice Date</span>
                                <span class="text-sm font-medium text-gray-800">@Model.InvoiceDate.ToString("MMMM dd, yyyy")</span>
                            </div>
                            @if (Model.DueDate.HasValue)
                            {
                                <div class="flex items-center justify-between py-2">
                                    <span class="text-xs text-gray-500">Due Date</span>
                                    <span class="text-sm font-medium @(Model.IsOverdue ? "text-red-600" : "text-gray-800")">
                                        @Model.DueDate.Value.ToString("MMMM dd, yyyy")
                                        @if (Model.IsOverdue)
                                        {
                                            <span class="ml-1 inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-semibold bg-red-50 text-red-700">OVERDUE</span>
                                        }
                                        else if (Model.DaysUntilDue <= 7 && Model.DaysUntilDue > 0)
                                        {
                                            <span class="ml-1 inline-flex items-center px-1.5 py-0.5 rounded-full text-xs font-semibold bg-amber-50 text-amber-700">Due in @Model.DaysUntilDue days</span>
                                        }
                                    </span>
                                </div>
                            }
                        }
                    </div>
                </div>

                <div class="border-t border-gray-100 mt-4 pt-4">
                    @if (canEdit)
                    {
                        <div class="mb-3">
                            <label class="block text-xs font-medium text-gray-500 mb-1">Description</label>
                            <textarea class="inline-text-field w-full border border-gray-200 rounded-xl px-3 py-2 text-sm text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500/30 focus:border-blue-500 resize-none"
                                      rows="2" data-field="description" data-invoice-id="@Model.Id"
                                      placeholder="Brief description...">@Model.Description</textarea>
                        </div>
                        <div>
                            <label class="block text-xs font-medium text-gray-500 mb-1">Notes</label>
                            <textarea class="inline-text-field w-full border border-gray-200 rounded-xl px-3 py-2 text-sm text-gray-800 focus:outline-none focus:ring-2 focus:ring-blue-500/30 focus:border-blue-500 resize-none"
                                      rows="2" data-field="notes" data-invoice-id="@Model.Id"
                                      placeholder="Additional notes...">@Model.Notes</textarea>
                        </div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="mb-3">
                                <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Description</span>
                                <p class="mt-1 text-sm text-gray-700">@Model.Description</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Notes))
                        {
                            <div>
                                <span class="text-xs font-semibold text-gray-400 uppercase tracking-wider">Notes</span>
                                <p class="mt-1 text-sm text-gray-700">@Model.Notes</p>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Right Column (sidebar) -->
    <div class="flex flex-col gap-4">

        <!-- Actions Card -->
        <div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
            <div class="px-5 py-4 border-b border-gray-100">
                <h3 class="text-sm font-semibold text-gray-800 flex items-center gap-2">
                    <i class="bi bi-lightning text-amber-500"></i> Actions
                </h3>
            </div>
            <div class="p-4 flex flex-col gap-2">
                @if (canApprove)
                {
                    <form asp-action="Approve" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit"
                                class="w-full inline-flex items-center justify-center gap-2 px-4 py-2.5 bg-emerald-500 text-white text-sm font-semibold rounded-xl hover:bg-emerald-600 active:bg-emerald-700 transition-all shadow-sm"
                                onclick="return confirm('Approve this invoice?')">
                            <i class="bi bi-check-circle-fill"></i> Approve Invoice
                        </button>
                    </form>
                    <form asp-action="Reject" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit"
                                class="w-full inline-flex items-center justify-center gap-2 px-4 py-2.5 bg-red-50 text-red-600 text-sm font-semibold rounded-xl hover:bg-red-100 border border-red-100 transition-all"
                                onclick="return confirm('Reject this invoice?')">
                            <i class="bi bi-x-circle-fill"></i> Reject Invoice
                        </button>
                    </form>
                }

                @if (canPay)
                {
                    <button type="button"
                            class="w-full inline-flex items-center justify-center gap-2 px-4 py-2.5 bg-blue-600 text-white text-sm font-semibold rounded-xl hover:bg-blue-700 transition-all shadow-sm"
                            data-bs-toggle="modal" data-bs-target="#paymentModal">
                        <i class="bi bi-currency-dollar"></i> Mark as Paid
                    </button>
                }

                @if (canSync)
                {
                    <form asp-action="SyncToIndraaj" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit"
                                class="w-full inline-flex items-center justify-center gap-2 px-4 py-2.5 bg-sky-50 text-sky-700 text-sm font-semibold rounded-xl hover:bg-sky-100 border border-sky-100 transition-all"
                                onclick="return confirm('Sync this invoice to Indraaj?')">
                            <i class="bi bi-cloud-arrow-up"></i> Sync to Indraaj
                        </button>
                    </form>
                }

                @if (!string.IsNullOrEmpty(Model.FileUrl))
                {
                    <form asp-action="ProcessOcr" method="post">
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit"
                                class="w-full inline-flex items-center justify-center gap-2 px-4 py-2.5 bg-amber-50 text-amber-700 text-sm font-semibold rounded-xl hover:bg-amber-100 border border-amber-100 transition-all">
                            <i class="bi bi-magic"></i> @(Model.IsOcrProcessed ? "Re-process OCR" : "Process with OCR")
                        </button>
                    </form>
                }

                @if (canEdit)
                {
                    <div class="border-t border-gray-100 pt-2 mt-1">
                        <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this invoice? This action cannot be undone.')">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit"
                                    class="w-full inline-flex items-center justify-center gap-2 px-4 py-2.5 border border-gray-200 text-gray-500 text-sm font-medium rounded-xl hover:bg-red-50 hover:text-red-600 hover:border-red-100 transition-all">
                                <i class="bi bi-trash"></i> Delete Invoice
                            </button>
                        </form>
                    </div>
                }
            </div>
        </div>

        <!-- OCR Information Card -->
        @if (Model.IsOcrProcessed)
        {
            <div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
                <div class="px-5 py-4 border-b border-gray-100">
                    <h3 class="text-sm font-semibold text-gray-800 flex items-center gap-2">
                        <i class="bi bi-robot text-violet-500"></i> OCR Information
                    </h3>
                </div>
                <div class="p-4 space-y-3">
                    <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-500">Status</span>
                        <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded-full text-xs font-semibold bg-emerald-50 text-emerald-700">
                            <i class="bi bi-check-circle-fill text-emerald-500"></i> Processed
                        </span>
                    </div>
                    @if (Model.OcrProcessedAt.HasValue)
                    {
                        <div class="flex items-center justify-between">
                            <span class="text-xs text-gray-500">Processed</span>
                            <span class="text-xs font-medium text-gray-700">@Model.OcrProcessedAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
                        </div>
                    }
                    @if (Model.OcrConfidenceScore.HasValue)
                    {
                        <div>
                            <div class="flex items-center justify-between mb-1.5">
                                <span class="text-xs text-gray-500">Confidence</span>
                                <span class="text-xs font-semibold @(Model.OcrConfidenceScore >= 80 ? "text-emerald-600" : Model.OcrConfidenceScore >= 60 ? "text-amber-600" : "text-red-600")">
                                    @Model.OcrConfidenceScore.Value.ToString("N0")%
                                </span>
                            </div>
                            <div class="h-1.5 bg-gray-100 rounded-full overflow-hidden">
                                <div class="h-full rounded-full transition-all @(Model.OcrConfidenceScore >= 80 ? "bg-emerald-500" : Model.OcrConfidenceScore >= 60 ? "bg-amber-400" : "bg-red-400")"
                                     style="width: @Model.OcrConfidenceScore%"></div>
                            </div>
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.OcrErrorMessage))
                    {
                        <div class="flex items-start gap-2 p-3 bg-amber-50 rounded-lg border border-amber-100 text-xs text-amber-700">
                            <i class="bi bi-exclamation-triangle flex-shrink-0 mt-0.5"></i>
                            <span>@Model.OcrErrorMessage</span>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Approval Info -->
        @if (Model.ApprovedAt.HasValue)
        {
            <div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
                <div class="px-5 py-4 border-b border-gray-100">
                    <h3 class="text-sm font-semibold text-gray-800 flex items-center gap-2">
                        <i class="bi bi-check-circle text-emerald-500"></i> Approval Info
                    </h3>
                </div>
                <div class="p-4 space-y-2.5">
                    <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-500">Approved By</span>
                        <span class="text-xs font-semibold text-gray-800">@Model.ApprovedByName</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-500">Date</span>
                        <span class="text-xs font-medium text-gray-700">@Model.ApprovedAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ApprovalNotes))
                    {
                        <div class="pt-1 border-t border-gray-50">
                            <span class="text-xs text-gray-500 block mb-1">Notes</span>
                            <span class="text-xs text-gray-700">@Model.ApprovalNotes</span>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Payment Info -->
        @if (Model.PaidAt.HasValue)
        {
            <div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
                <div class="px-5 py-4 border-b border-gray-100">
                    <h3 class="text-sm font-semibold text-gray-800 flex items-center gap-2">
                        <i class="bi bi-currency-dollar text-blue-500"></i> Payment Info
                    </h3>
                </div>
                <div class="p-4 space-y-2.5">
                    <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-500">Paid By</span>
                        <span class="text-xs font-semibold text-gray-800">@Model.PaidByName</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-500">Date</span>
                        <span class="text-xs font-medium text-gray-700">@Model.PaidAt.Value.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-500">Reference</span>
                        <span class="text-xs font-medium text-gray-700">@Model.PaymentReference</span>
                    </div>
                </div>
            </div>
        }

        <!-- Indraaj Sync Info -->
        @if (Model.SyncedToIndraajAt.HasValue)
        {
            <div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
                <div class="px-5 py-4 border-b border-gray-100">
                    <h3 class="text-sm font-semibold text-gray-800 flex items-center gap-2">
                        <i class="bi bi-cloud-check text-sky-500"></i> Indraaj Sync
                    </h3>
                </div>
                <div class="p-4 space-y-2.5">
                    <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-500">Voucher No</span>
                        <span class="text-xs font-semibold text-gray-800">@Model.IndraajVoucherNo</span>
                    </div>
                    <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-500">Synced</span>
                        <span class="text-xs font-medium text-gray-700">@Model.SyncedToIndraajAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
                    </div>
                </div>
            </div>
        }

        <!-- Audit Trail -->
        <div class="bg-white rounded-2xl border border-gray-100 shadow-sm overflow-hidden">
            <div class="px-5 py-4 border-b border-gray-100">
                <h3 class="text-sm font-semibold text-gray-800 flex items-center gap-2">
                    <i class="bi bi-clock-history text-gray-400"></i> Audit Trail
                </h3>
            </div>
            <div class="p-4 space-y-2.5">
                <div class="flex items-center justify-between">
                    <span class="text-xs text-gray-500">Created By</span>
                    <span class="text-xs font-semibold text-gray-800">@Model.CreatedByName</span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-xs text-gray-500">Created</span>
                    <span class="text-xs font-medium text-gray-700">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-xs text-gray-500">Last Updated</span>
                    <span class="text-xs font-medium text-gray-700">@Model.UpdatedAt.ToString("MMM dd, yyyy HH:mm")</span>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- Line Items Card - Full Width -->
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Line Items</h5>
        @if (canEdit)
        {
            <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="collapse" data-bs-target="#addLineItemForm">
                <i class="bi bi-plus-circle"></i> Add Line Item
            </button>
        }
    </div>
    <div class="card-body">
        @if (canEdit)
        {
            <!-- Add Line Item Form (collapsible) -->
            <div class="collapse mb-3" id="addLineItemForm">
                <div class="p-3" style="background: var(--bg-secondary); border-radius: var(--radius-lg); border: 1px solid var(--border-color);">
                    <form asp-action="AddLineItem" method="post">
                        <input type="hidden" name="invoiceId" value="@Model.Id" />
                        <div class="row g-2">
                            <div class="col-md-3">
                                <label class="form-label form-label-sm">Description <span class="text-danger">*</span></label>
                                <input type="text" name="description" class="form-control form-control-sm" required placeholder="Item description">
                            </div>
                            <div class="col-md-1">
                                <label class="form-label form-label-sm">Qty <span class="text-danger">*</span></label>
                                <input type="number" name="quantity" class="form-control form-control-sm" value="1" min="0.01" step="0.01" required id="newQty">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label form-label-sm">Unit Price <span class="text-danger">*</span></label>
                                <input type="number" name="unitPrice" class="form-control form-control-sm" min="0.01" step="0.01" required placeholder="0.00" id="newPrice">
                            </div>
                            <div class="col-md-1">
                                <label class="form-label form-label-sm">Tax %</label>
                                <input type="number" name="taxRate" class="form-control form-control-sm" value="0" min="0" max="100" step="0.01" id="newTaxRate">
                            </div>
                            <div class="col-md-3">
                                <label class="form-label form-label-sm">Account</label>
                                <select name="chartOfAccountId" class="form-select form-select-sm">
                                    <option value="">-- Select --</option>
                                    @if (ViewBag.ChartOfAccounts != null)
                                    {
                                        @foreach (var account in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.ChartOfAccounts)
                                        {
                                            <option value="@account.Value">@account.Text</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary btn-sm w-100">
                                    <i class="bi bi-plus"></i> Add
                                </button>
                            </div>
                        </div>
                        <div class="row g-2 mt-1">
                            <div class="col-md-12">
                                <small id="lineItemPreview" style="color: var(--text-tertiary);"></small>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        }

        @if (Model.LineItems.Any())
        {
            <div class="table-responsive" style="overflow-x: auto;">
                <table class="table mb-0 line-items-table" id="lineItemsTable">
                    <thead>
                        <tr>
                            <th style="width: 50px;">#</th>
                            <th style="min-width: 250px;">Description</th>
                            <th style="min-width: 180px;">Account</th>
                            <th class="text-end" style="min-width: 90px;">Qty</th>
                            <th class="text-end" style="min-width: 120px;">Unit Price</th>
                            <th class="text-end" style="min-width: 80px;">Tax %</th>
                            <th class="text-end" style="min-width: 120px;">Amount</th>
                            <th class="text-end" style="min-width: 100px;">Tax</th>
                            <th class="text-end" style="min-width: 120px;">Total</th>
                            @if (canEdit)
                            {
                                <th style="width: 80px;" class="text-center">Actions</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.LineItems)
                        {
                            <tr data-line-item-id="@item.Id">
                                <td>@item.LineNumber</td>
                                @if (canEdit)
                                {
                                    <td>
                                        <input type="text" class="form-control form-control-sm li-description"
                                               value="@item.Description" data-original="@item.Description">
                                        @if (item.IsOcrExtracted)
                                        {
                                            <span class="badge mt-1" style="font-size:0.6rem; background-color: var(--info-light); color: var(--info-color);" title="Extracted by OCR">OCR</span>
                                        }
                                    </td>
                                    <td>
                                        <select class="form-select form-select-sm li-account">
                                            <option value="">-- Select --</option>
                                            @if (ViewBag.ChartOfAccounts != null)
                                            {
                                                @foreach (var account in (List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)ViewBag.ChartOfAccounts)
                                                {
                                                    <option value="@account.Value"
                                                            selected="@(item.ChartOfAccountId?.ToString() == account.Value)">
                                                        @account.Text
                                                    </option>
                                                }
                                            }
                                        </select>
                                    </td>
                                    <td>
                                        <input type="number" class="form-control form-control-sm text-end li-qty"
                                               value="@item.Quantity" min="0.0001" step="0.01"
                                               data-original="@item.Quantity">
                                    </td>
                                    <td>
                                        <input type="number" class="form-control form-control-sm text-end li-unitprice"
                                               value="@item.UnitPrice" min="0" step="0.01"
                                               data-original="@item.UnitPrice">
                                    </td>
                                    <td>
                                        <input type="number" class="form-control form-control-sm text-end li-taxrate"
                                               value="@item.TaxRate" min="0" max="100" step="0.01"
                                               data-original="@item.TaxRate">
                                    </td>
                                    <td class="text-end li-amount" style="white-space: nowrap;">@Model.Currency @item.Amount.ToString("N2")</td>
                                    <td class="text-end li-taxamount" style="white-space: nowrap;">@Model.Currency @item.TaxAmount.ToString("N2")</td>
                                    <td class="text-end fw-bold li-totalamount" style="white-space: nowrap;">@Model.Currency @item.TotalAmount.ToString("N2")</td>
                                    <td class="text-center">
                                        <div class="d-flex flex-column gap-1 align-items-center">
                                            <button type="button" class="btn btn-outline-success btn-sm save-line-item" title="Save changes" style="display:none;">
                                                <i class="bi bi-check-lg"></i>
                                            </button>
                                            <form asp-action="DeleteLineItem" method="post" class="d-inline"
                                                  onsubmit="return confirm('Delete this line item?')">
                                                <input type="hidden" name="lineItemId" value="@item.Id" />
                                                <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @item.Description
                                        @if (item.IsOcrExtracted)
                                        {
                                            <span class="badge ms-2" style="background-color: var(--info-light); color: var(--info-color);" title="Extracted by OCR">OCR</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.AccountCode))
                                        {
                                            <small style="color: var(--text-tertiary);">@item.AccountCode - @item.AccountName</small>
                                        }
                                        else
                                        {
                                            <small style="color: var(--text-muted);">Not assigned</small>
                                        }
                                    </td>
                                    <td class="text-end" style="white-space: nowrap;">@item.Quantity.ToString("N2")</td>
                                    <td class="text-end" style="white-space: nowrap;">@Model.Currency @item.UnitPrice.ToString("N2")</td>
                                    <td class="text-end" style="white-space: nowrap;">@item.TaxRate.ToString("N2")%</td>
                                    <td class="text-end" style="white-space: nowrap;">@Model.Currency @item.Amount.ToString("N2")</td>
                                    <td class="text-end" style="white-space: nowrap;">@Model.Currency @item.TaxAmount.ToString("N2")</td>
                                    <td class="text-end fw-bold" style="white-space: nowrap;">@Model.Currency @item.TotalAmount.ToString("N2")</td>
                                }
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr style="background: var(--bg-secondary);">
                            <td colspan="@(canEdit ? 9 : 8)" class="text-end"><strong>Subtotal:</strong></td>
                            <td class="text-end fw-bold" id="invoiceSubTotal">@Model.Currency @Model.SubTotal.ToString("N2")</td>
                        </tr>
                        <tr style="background: var(--bg-secondary);">
                            <td colspan="@(canEdit ? 9 : 8)" class="text-end"><strong>Tax:</strong></td>
                            <td class="text-end fw-bold" id="invoiceTaxAmount">@Model.Currency @Model.TaxAmount.ToString("N2")</td>
                        </tr>
                        <tr style="background: var(--primary-50);">
                            <td colspan="@(canEdit ? 9 : 8)" class="text-end"><strong>Total Amount:</strong></td>
                            <td class="text-end fw-bold" style="font-size: 1.0625rem;" id="invoiceTotalAmount">@Model.Currency @Model.TotalAmount.ToString("N2")</td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <h5>No Line Items</h5>
                <p>@(canEdit ? "Click \"Add Line Item\" above or run OCR to extract them." : "No line items have been added yet.")</p>
            </div>
        }
    </div>
</div>

