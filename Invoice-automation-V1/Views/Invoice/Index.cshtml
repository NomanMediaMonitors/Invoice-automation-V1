@model Invoice_automation_V1.ViewModels.InvoiceListViewModel
@{
    ViewData["Title"] = "Invoices";
}

<div class="page-header flex justify-between items-center">
    <div>
        <h2 class="page-title">
            <i class="bi bi-file-text"></i> Invoices
        </h2>
        <p class="page-subtitle mb-0">Manage and track all your invoices</p>
    </div>
    <a asp-action="Create" class="inline-flex items-center gap-1.5 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 transition-colors cursor-pointer">
        <i class="bi bi-plus-circle"></i> New Invoice
    </a>
</div>

<!-- Filters -->
<div class="bg-white border border-gray-200 rounded-xl shadow-sm mb-4">
    <div class="p-6">
        <form method="get" asp-action="Index" class="row g-3 items-end">
            <div class="col-md-3">
                <label class="block text-sm font-medium text-gray-700 mb-1.5">Status</label>
                <select name="status" class="block w-full border border-gray-300 rounded-md px-3 py-2 text-sm text-gray-900 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" onchange="this.form.submit()">
                    <option value="">All Statuses</option>
                    <option value="Draft" selected="@(Model.StatusFilter == "Draft")">Draft</option>
                    <option value="PendingApproval" selected="@(Model.StatusFilter == "PendingApproval")">Pending Approval</option>
                    <option value="Approved" selected="@(Model.StatusFilter == "Approved")">Approved</option>
                    <option value="Rejected" selected="@(Model.StatusFilter == "Rejected")">Rejected</option>
                    <option value="Paid" selected="@(Model.StatusFilter == "Paid")">Paid</option>
                    <option value="Overdue" selected="@(Model.StatusFilter == "Overdue")">Overdue</option>
                </select>
            </div>
            <div class="col-md-7">
                <label class="block text-sm font-medium text-gray-700 mb-1.5">Search</label>
                <input type="text" name="search" class="block w-full border border-gray-300 rounded-md px-3 py-2 text-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Search by invoice number or vendor..." value="@Model.SearchQuery">
            </div>
            <div class="col-md-2">
                <button type="submit" class="inline-flex items-center gap-1.5 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 transition-colors cursor-pointer w-full">
                    <i class="bi bi-search"></i> Search
                </button>
            </div>
        </form>
    </div>
</div>

@if (Model.Invoices.Any())
{
    <div class="bg-white border border-gray-200 rounded-xl shadow-sm">
        <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200 text-sm">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Invoice #</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Vendor</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Date</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Due Date</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Amount</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Status</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">OCR</th>
                        <th class="px-3 py-2.5 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 bg-white">
                    @foreach (var invoice in Model.Invoices)
                    {
                        <tr>
                            <td class="px-3 py-2.5 text-gray-600 text-sm">
                                <a asp-action="Details" asp-route-id="@invoice.Id" class="font-bold" style="color: var(--primary-color);">
                                    @invoice.InvoiceNumber
                                </a>
                            </td>
                            <td class="px-3 py-2.5 text-gray-600 text-sm">@invoice.VendorName</td>
                            <td class="px-3 py-2.5 text-gray-600 text-sm">@invoice.InvoiceDate.ToString("MMM dd, yyyy")</td>
                            <td class="px-3 py-2.5 text-gray-600 text-sm">
                                @if (invoice.DueDate.HasValue)
                                {
                                    <span class="@(invoice.IsOverdue ? "text-danger font-medium" : "")">
                                        @invoice.DueDate.Value.ToString("MMM dd, yyyy")
                                        @if (invoice.IsOverdue)
                                        {
                                            <i class="bi bi-exclamation-triangle-fill ms-1"></i>
                                        }
                                    </span>
                                }
                                else
                                {
                                    <span style="color: var(--text-muted);">&mdash;</span>
                                }
                            </td>
                            <td class="px-3 py-2.5 text-gray-600 text-sm font-bold">@invoice.Currency @invoice.TotalAmount.ToString("N2")</td>
                            <td class="px-3 py-2.5 text-gray-600 text-sm">
                                @{
                                    var badgeClass = invoice.Status switch
                                    {
                                        "Draft" => "inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600",
                                        "PendingApproval" => "inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800",
                                        "Approved" => "inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800",
                                        "Rejected" => "inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800",
                                        "Paid" => "inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800",
                                        "Overdue" => "inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800",
                                        _ => "inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600"
                                    };
                                }
                                <span class="@badgeClass">@invoice.Status</span>
                            </td>
                            <td class="px-3 py-2.5 text-gray-600 text-sm">
                                @if (invoice.IsOcrProcessed)
                                {
                                    <span style="background-color: var(--success-light); color: #065f46;">
                                        <i class="bi bi-check-circle"></i> Processed
                                    </span>
                                }
                                else
                                {
                                    <span style="background-color: var(--gray-100); color: var(--text-tertiary);">
                                        <i class="bi bi-hourglass-split"></i> Pending
                                    </span>
                                }
                            </td>
                            <td class="px-3 py-2.5 text-gray-600 text-sm">
                                <div class="flex gap-1">
                                    <a asp-action="Details" asp-route-id="@invoice.Id" class="inline-flex items-center gap-1 px-3 py-1.5 border border-gray-200 text-gray-700 text-xs font-medium rounded-md hover:bg-blue-50 hover:border-blue-300 hover:text-blue-600 transition-colors cursor-pointer" title="View Details">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@invoice.Id" class="inline-flex items-center gap-1 px-3 py-1.5 border border-gray-200 text-gray-600 text-xs font-medium rounded-md hover:bg-gray-50 transition-colors cursor-pointer" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        @if (Model.TotalCount > Model.PageSize)
        {
            var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
            <div class="p-6" style="border-top: 1px solid var(--border-color);">
                <nav>
                    <ul class="flex items-center gap-1 justify-center">
                        <li class="@(Model.PageNumber <= 1 ? "opacity-50 pointer-events-none" : "")">
                            <a class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-gray-600 border border-gray-200 rounded-md hover:bg-gray-50 transition-colors" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-status="@Model.StatusFilter" asp-route-search="@Model.SearchQuery">Previous</a>
                        </li>
                        @for (int i = 1; i <= totalPages; i++)
                        {
                            <li class="@(i == Model.PageNumber ? "active" : "")">
                                <a class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-gray-600 border border-gray-200 rounded-md hover:bg-gray-50 transition-colors" asp-action="Index" asp-route-page="@i" asp-route-status="@Model.StatusFilter" asp-route-search="@Model.SearchQuery">@i</a>
                            </li>
                        }
                        <li class="@(Model.PageNumber >= totalPages ? "opacity-50 pointer-events-none" : "")">
                            <a class="inline-flex items-center px-3 py-1.5 text-sm font-medium text-gray-600 border border-gray-200 rounded-md hover:bg-gray-50 transition-colors" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-status="@Model.StatusFilter" asp-route-search="@Model.SearchQuery">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        }

        <div class="px-6 pb-6 pt-0" style="@(Model.TotalCount <= Model.PageSize ? "border-top: 1px solid var(--border-color);" : "")">
            <p class="mb-0 text-center" style="color: var(--text-tertiary); font-size: 0.8125rem;">
                Showing @Model.Invoices.Count of @Model.TotalCount total invoices
            </p>
        </div>
    </div>
}
else
{
    <div class="bg-white border border-gray-200 rounded-xl shadow-sm">
        <div class="empty-state">
            <i class="bi bi-file-text"></i>
            <h5>No Invoices Found</h5>
            <p>
                @if (!string.IsNullOrWhiteSpace(Model.SearchQuery) || !string.IsNullOrWhiteSpace(Model.StatusFilter))
                {
                    <span>No invoices match your search criteria. Try adjusting your filters.</span>
                }
                else
                {
                    <span>Get started by uploading your first invoice.</span>
                }
            </p>
            <a asp-action="Create" class="inline-flex items-center gap-1.5 px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 transition-colors cursor-pointer">
                <i class="bi bi-plus-circle"></i> Upload New Invoice
            </a>
        </div>
    </div>
}
