@model Invoice_automation_V1.ViewModels.InvoiceListViewModel
@{
    ViewData["Title"] = "Invoices";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-receipt"></i> Invoices
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Upload New Invoice
        </a>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Status</label>
                    <select name="status" class="form-select" onchange="this.form.submit()">
                        <option value="">All Statuses</option>
                        <option value="Draft" selected="@(Model.StatusFilter == "Draft")">Draft</option>
                        <option value="PendingApproval" selected="@(Model.StatusFilter == "PendingApproval")">Pending Approval</option>
                        <option value="Approved" selected="@(Model.StatusFilter == "Approved")">Approved</option>
                        <option value="Rejected" selected="@(Model.StatusFilter == "Rejected")">Rejected</option>
                        <option value="Paid" selected="@(Model.StatusFilter == "Paid")">Paid</option>
                        <option value="Overdue" selected="@(Model.StatusFilter == "Overdue")">Overdue</option>
                    </select>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Search</label>
                    <input type="text" name="search" class="form-control" placeholder="Search by invoice number or vendor..." value="@Model.SearchQuery">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Invoices.Any())
    {
        <!-- Invoices Table -->
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Invoice #</th>
                                <th>Vendor</th>
                                <th>Date</th>
                                <th>Due Date</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>OCR</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var invoice in Model.Invoices)
                            {
                                <tr>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@invoice.Id" class="text-decoration-none fw-bold">
                                            @invoice.InvoiceNumber
                                        </a>
                                    </td>
                                    <td>@invoice.VendorName</td>
                                    <td>@invoice.InvoiceDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (invoice.DueDate.HasValue)
                                        {
                                            <span class="@(invoice.IsOverdue ? "text-danger" : "")">
                                                @invoice.DueDate.Value.ToString("MMM dd, yyyy")
                                                @if (invoice.IsOverdue)
                                                {
                                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                                }
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td class="fw-bold">@invoice.Currency @invoice.TotalAmount.ToString("N2")</td>
                                    <td>
                                        @{
                                            var badgeClass = invoice.Status switch
                                            {
                                                "Draft" => "bg-secondary",
                                                "PendingApproval" => "bg-warning",
                                                "Approved" => "bg-success",
                                                "Rejected" => "bg-danger",
                                                "Paid" => "bg-primary",
                                                "Overdue" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @badgeClass">@invoice.Status</span>
                                    </td>
                                    <td>
                                        @if (invoice.IsOcrProcessed)
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle"></i> Processed
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-hourglass-split"></i> Pending
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-outline-primary" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@invoice.Id" class="btn btn-outline-secondary" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                @if (Model.TotalCount > Model.PageSize)
                {
                    var totalPages = (int)Math.Ceiling((double)Model.TotalCount / Model.PageSize);
                    <nav class="mt-3">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-status="@Model.StatusFilter" asp-route-search="@Model.SearchQuery">Previous</a>
                            </li>
                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-status="@Model.StatusFilter" asp-route-search="@Model.SearchQuery">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.PageNumber >= totalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-status="@Model.StatusFilter" asp-route-search="@Model.SearchQuery">Next</a>
                            </li>
                        </ul>
                    </nav>
                }

                <p class="text-muted text-center mt-3">
                    Showing @Model.Invoices.Count of @Model.TotalCount total invoices
                </p>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="bi bi-receipt display-1 text-muted"></i>
                <h4 class="mt-3">No Invoices Found</h4>
                <p class="text-muted">
                    @if (!string.IsNullOrWhiteSpace(Model.SearchQuery) || !string.IsNullOrWhiteSpace(Model.StatusFilter))
                    {
                        <span>No invoices match your search criteria. Try adjusting your filters.</span>
                    }
                    else
                    {
                        <span>Get started by uploading your first invoice.</span>
                    }
                </p>
                <a asp-action="Create" class="btn btn-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Upload New Invoice
                </a>
            </div>
        </div>
    }
</div>

<style>
    .table tbody tr {
        transition: background-color 0.2s;
    }

    .table tbody tr:hover {
        background-color: rgba(0, 0, 0, 0.02);
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.375rem 0.625rem;
    }

    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
</style>
