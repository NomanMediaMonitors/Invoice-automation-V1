@{
    ViewData["Title"] = "Email Verification Failed";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-x-circle-fill" style="font-size: 4rem; color: #ef4444;"></i>
                    </div>
                    <h2 class="fw-bold mb-3">Verification Failed</h2>
                    <p class="text-muted mb-4">
                        The verification link is invalid or has expired.
                    </p>
                    <div class="alert alert-warning" role="alert">
                        Please request a new verification email by registering again.
                    </div>
                    <a asp-action="Register" class="btn btn-primary btn-lg px-5">Back to Register</a>
                </div>
            </div>
        </div>
    </div>
</div>
