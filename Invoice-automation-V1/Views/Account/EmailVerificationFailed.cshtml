@{
    ViewData["Title"] = "Email Verification Failed";
}

<div style="background: var(--bg-secondary); min-height: calc(100vh - 200px); display:flex; align-items:center; justify-content:center; padding: 2rem 1rem;">
    <div class="card auth-card text-center" style="width: 100%; max-width: 440px;">
        <div class="card-body">
            <div class="mb-4">
                <div class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 64px; height: 64px; background: var(--danger-light, #fef2f2);">
                    <i class="bi bi-x-circle-fill" style="font-size: 1.75rem; color: var(--danger-color, #ef4444);"></i>
                </div>
            </div>
            <h2 class="fw-bold mb-2">Verification failed</h2>
            <p class="text-muted mb-4">
                The verification link is invalid or has expired.
                Please request a new verification email by registering again.
            </p>
            <div class="d-grid">
                <a asp-action="Register" class="btn btn-primary btn-lg">Back to registration</a>
            </div>
        </div>
    </div>
</div>
