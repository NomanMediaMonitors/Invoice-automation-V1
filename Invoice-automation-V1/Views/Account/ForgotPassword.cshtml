@model InvoiceAutomation.ViewModels.Account.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div style="background: var(--bg-secondary); min-height: calc(100vh - 200px); display:flex; align-items:center; justify-content:center; padding: 2rem 1rem;">
    <div class="card auth-card" style="width: 100%; max-width: 440px;">
        <div class="card-body">
            <div class="text-center mb-4">
                <h2 class="fw-bold mb-2">Forgot your password?</h2>
                <p class="text-muted mb-0">Enter your email and we'll send you a reset link</p>
            </div>

            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-4">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <input asp-for="Email" class="form-control" placeholder="you@company.com" autofocus />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary btn-lg">Send reset link</button>
                </div>

                <div class="text-center">
                    <a asp-action="Login" class="text-muted fw-semibold">Back to sign in</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
