@model InvoiceAutomation.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
}

<div style="background: var(--bg-secondary); min-height: calc(100vh - 200px); display:flex; align-items:center; justify-content:center; padding: 2rem 1rem;">
    <div class="card auth-card" style="width: 100%; max-width: 480px;">
        <div class="card-body">
            <div class="text-center mb-4">
                <h2 class="font-bold mb-2">Create your account</h2>
                <p class="text-muted mb-0">Get started with Invoice Automation</p>
            </div>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-4">
                    <p class="font-semibold text-muted mb-3" style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.05em;">Personal Information</p>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label">Full name</label>
                        <input asp-for="FullName" class="form-control" placeholder="John Doe" autofocus />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email address</label>
                        <input asp-for="Email" class="form-control" placeholder="you@company.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-0">
                        <label asp-for="Phone" class="form-label">Phone number <span class="text-muted font-normal">(optional)</span></label>
                        <input asp-for="Phone" class="form-control" placeholder="+1 (555) 000-0000" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <p class="font-semibold text-muted mb-3" style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.05em;">Security</p>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Create a password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-0">
                        <label asp-for="ConfirmPassword" class="form-label">Confirm password</label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <div class="grid mb-3">
                    <button type="submit" class="btn btn-primary btn-lg">Create account</button>
                </div>

                <div class="text-center">
                    <p class="text-muted mb-0">
                        Already have an account?
                        <a asp-action="Login" class="font-semibold">Sign in</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
