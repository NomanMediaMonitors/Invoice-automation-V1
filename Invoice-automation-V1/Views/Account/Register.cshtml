@model InvoiceAutomation.ViewModels.Account.RegisterViewModel
@{
    ViewData["Title"] = "Create Account";
}

<div style="background: var(--bg-secondary); min-height: calc(100vh - 200px); display:flex; align-items:center; justify-content:center; padding: 2rem 1rem;">
    <div class="bg-white border border-gray-200 rounded-xl shadow-lg w-full" style="width: 100%; max-width: 480px;">
        <div class="p-8">
            <div class="text-center mb-4">
                <h2 class="font-bold mb-2">Create your account</h2>
                <p class="text-muted mb-0">Get started with Invoice Automation</p>
            </div>

            <form asp-action="Register" method="post">
                <div asp-validation-summary="ModelOnly" class="flex items-start gap-2 p-3 bg-red-50 border border-red-200 rounded-lg text-red-800 text-sm mb-4" role="alert"></div>

                <div class="mb-4">
                    <p class="font-semibold text-muted mb-3" style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.05em;">Personal Information</p>

                    <div class="mb-3">
                        <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1.5">Full name</label>
                        <input asp-for="FullName" class="block w-full border border-gray-300 rounded-md px-3 py-2 text-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="John Doe" autofocus />
                        <span asp-validation-for="FullName" class="text-red-500 text-xs mt-1 block"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1.5">Email address</label>
                        <input asp-for="Email" class="block w-full border border-gray-300 rounded-md px-3 py-2 text-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="you@company.com" />
                        <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block"></span>
                    </div>

                    <div class="mb-0">
                        <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-1.5">Phone number <span class="text-muted font-normal">(optional)</span></label>
                        <input asp-for="Phone" class="block w-full border border-gray-300 rounded-md px-3 py-2 text-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="+1 (555) 000-0000" />
                        <span asp-validation-for="Phone" class="text-red-500 text-xs mt-1 block"></span>
                    </div>
                </div>

                <div class="mb-4">
                    <p class="font-semibold text-muted mb-3" style="font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.05em;">Security</p>

                    <div class="mb-3">
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1.5">Password</label>
                        <input asp-for="Password" class="block w-full border border-gray-300 rounded-md px-3 py-2 text-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Create a password" />
                        <span asp-validation-for="Password" class="text-red-500 text-xs mt-1 block"></span>
                    </div>

                    <div class="mb-0">
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1.5">Confirm password</label>
                        <input asp-for="ConfirmPassword" class="block w-full border border-gray-300 rounded-md px-3 py-2 text-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Confirm your password" />
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1 block"></span>
                    </div>
                </div>

                <div class="grid mb-3">
                    <button type="submit" class="inline-flex items-center gap-1.5 px-5 py-2.5 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition-colors cursor-pointer">Create account</button>
                </div>

                <div class="text-center">
                    <p class="text-muted mb-0">
                        Already have an account?
                        <a asp-action="Login" class="font-semibold">Sign in</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
