@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-envelope-check" style="font-size: 4rem; color: #667eea;"></i>
                    </div>
                    <h2 class="fw-bold mb-3">Check Your Email</h2>
                    <p class="text-muted mb-4">
                        If an account with that email exists, we've sent a password reset link.
                        Please check your email and follow the instructions.
                    </p>
                    <div class="alert alert-info" role="alert">
                        <strong>Note:</strong> The reset link will expire in 1 hour.
                    </div>
                    <a asp-action="Login" class="btn btn-primary btn-lg px-5">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
