@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<div style="background: var(--bg-secondary); min-height: calc(100vh - 200px); display:flex; align-items:center; justify-content:center; padding: 2rem 1rem;">
    <div class="bg-white border border-gray-200 rounded-xl shadow-lg w-full text-center" style="width: 100%; max-width: 440px;">
        <div class="p-8">
            <div class="mb-4">
                <div class="inline-flex items-center justify-center rounded-circle" style="width: 64px; height: 64px; background: var(--primary-50);">
                    <i class="bi bi-envelope-check" style="font-size: 1.75rem; color: var(--primary-color);"></i>
                </div>
            </div>
            <h2 class="font-bold mb-2">Check your email</h2>
            <p class="text-muted mb-4">
                If an account with that email exists, we've sent a password reset link.
                Please check your email and follow the instructions.
            </p>
            <div class="flex items-start gap-2 p-3 bg-sky-50 border border-sky-200 rounded-lg text-sky-800 text-sm font-medium mb-4 text-left" role="alert">
                <strong>Note:</strong> The reset link will expire in 1 hour.
            </div>
            <div class="grid">
                <a asp-action="Login" class="inline-flex items-center gap-1.5 px-5 py-2.5 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition-colors cursor-pointer">Back to sign in</a>
            </div>
        </div>
    </div>
</div>
