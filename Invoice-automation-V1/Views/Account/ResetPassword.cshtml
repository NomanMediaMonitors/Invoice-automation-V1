@model InvoiceAutomation.ViewModels.Account.ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
}

<div style="background: var(--bg-secondary); min-height: calc(100vh - 200px); display:flex; align-items:center; justify-content:center; padding: 2rem 1rem;">
    <div class="bg-white border border-gray-200 rounded-xl shadow-lg w-full" style="width: 100%; max-width: 440px;">
        <div class="p-8">
            <div class="text-center mb-4">
                <h2 class="font-bold mb-2">Reset your password</h2>
                <p class="text-muted mb-0">Choose a new password for your account</p>
            </div>

            <form asp-action="ResetPassword" method="post">
                <input asp-for="UserId" type="hidden" />
                <input asp-for="Token" type="hidden" />

                <div asp-validation-summary="ModelOnly" class="flex items-start gap-2 p-3 bg-red-50 border border-red-200 rounded-lg text-red-800 text-sm mb-4" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700 mb-1.5">New password</label>
                    <input asp-for="NewPassword" class="block w-full border border-gray-300 rounded-md px-3 py-2 text-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Enter new password" autofocus />
                    <span asp-validation-for="NewPassword" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1.5">Confirm new password</label>
                    <input asp-for="ConfirmPassword" class="block w-full border border-gray-300 rounded-md px-3 py-2 text-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Confirm new password" />
                    <span asp-validation-for="ConfirmPassword" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <div class="grid mb-3">
                    <button type="submit" class="inline-flex items-center gap-1.5 px-5 py-2.5 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition-colors cursor-pointer">Reset password</button>
                </div>

                <div class="text-center">
                    <a asp-action="Login" class="text-muted font-semibold">Back to sign in</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
