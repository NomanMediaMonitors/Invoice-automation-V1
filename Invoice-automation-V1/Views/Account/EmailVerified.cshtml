@{
    ViewData["Title"] = "Email Verified";
}

<div style="background: var(--bg-secondary); min-height: calc(100vh - 200px); display:flex; align-items:center; justify-content:center; padding: 2rem 1rem;">
    <div class="card auth-card text-center" style="width: 100%; max-width: 440px;">
        <div class="card-body">
            <div class="mb-4">
                <div class="d-inline-flex align-items-center justify-content-center rounded-circle" style="width: 64px; height: 64px; background: var(--success-light, #f0fdf4);">
                    <i class="bi bi-check-circle-fill" style="font-size: 1.75rem; color: var(--success-color, #22c55e);"></i>
                </div>
            </div>
            <h2 class="fw-bold mb-2">Email verified</h2>
            <p class="text-muted mb-4">
                Your email has been successfully verified. You can now sign in to your account.
            </p>
            <div class="d-grid">
                <a asp-action="Login" class="btn btn-primary btn-lg">Sign in to your account</a>
            </div>
        </div>
    </div>
</div>
