@{
    ViewData["Title"] = "Email Verified";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill" style="font-size: 4rem; color: #22c55e;"></i>
                    </div>
                    <h2 class="fw-bold mb-3">Email Verified!</h2>
                    <p class="text-muted mb-4">
                        Your email has been successfully verified. You can now log in to your account.
                    </p>
                    <a asp-action="Login" class="btn btn-primary btn-lg px-5">Go to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
