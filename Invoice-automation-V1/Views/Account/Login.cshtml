@model InvoiceAutomation.ViewModels.Account.LoginViewModel
@{
    ViewData["Title"] = "Sign In";
}

<div style="background: var(--bg-secondary); min-height: calc(100vh - 200px); display:flex; align-items:center; justify-content:center; padding: 2rem 1rem;">
    <div class="bg-white border border-gray-200 rounded-xl shadow-lg w-full" style="width: 100%; max-width: 440px;">
        <div class="p-8">
            <div class="text-center mb-4">
                <h2 class="font-bold mb-2">Sign in to your account</h2>
                <p class="text-muted mb-0">Enter your credentials to access the dashboard</p>
            </div>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="flex items-start gap-2 p-3 bg-emerald-50 border border-emerald-200 rounded-lg text-emerald-800 text-sm font-medium mb-4" role="alert">
                    @TempData["SuccessMessage"]
                </div>
            }

            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="flex items-start gap-2 p-3 bg-red-50 border border-red-200 rounded-lg text-red-800 text-sm mb-4" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1.5">Email address</label>
                    <input asp-for="Email" class="block w-full border border-gray-300 rounded-md px-3 py-2 text-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="you@company.com" autofocus />
                    <span asp-validation-for="Email" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <div class="mb-3">
                    <div class="flex justify-between items-center">
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                        <a asp-action="ForgotPassword" class="text-muted" style="font-size: 0.8125rem;">Forgot password?</a>
                    </div>
                    <input asp-for="Password" class="block w-full border border-gray-300 rounded-md px-3 py-2 text-sm text-gray-900 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-red-500 text-xs mt-1 block"></span>
                </div>

                <div class="mb-4 flex items-center gap-2">
                    <input asp-for="RememberMe" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
                    <label asp-for="RememberMe" class="text-sm text-gray-600">Remember me</label>
                </div>

                <div class="grid mb-3">
                    <button type="submit" class="inline-flex items-center gap-1.5 px-5 py-2.5 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition-colors cursor-pointer">Sign in</button>
                </div>

                <div class="text-center">
                    <p class="text-muted mb-0">
                        Don't have an account?
                        <a asp-action="Register" class="font-semibold">Create an account</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
